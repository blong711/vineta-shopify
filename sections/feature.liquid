{%- comment -%}
  Feature Products Section
  Usage: {% section 'feature' %}
{%- endcomment -%}

<section class="flat-spacing-3">
    <div class="container">
        <div class="flat-title-v2 justify-items-center text-center wow fadeInUp">
            <a href="{{ section.settings.button_url }}" class="tf-btn btn-out-line-green btn-small text-uppercase">{{ section.settings.button_text }}</a>
            <h4 class="text-capitalize">{{ section.settings.heading | replace: '[br]', '<br class="d-none d-xl-block">' }}</h4>
        </div>
        <div class="fl-control-sw wow fadeInUp">
            <div dir="ltr" class="swiper tf-swiper feature-swiper">
                <div class="swiper-wrapper">
                    {% for block in section.blocks %}
                        <div class="swiper-slide" {{ block.shopify_attributes }}>
                            {% render 'card-product',
                                product: block.settings.product,
                                style: 'style-border style-2',
                                show_sale_badge: true,
                                sale_badge_text: block.settings.sale_badge,
                                show_color_swatches: true,
                                vendor: block.settings.brand,
                                class: 'style-border style-2'
                            %}
                        </div>
                    {% endfor %}
                </div>
                <div class="swiper-button-next nav-next-feature"></div>
                <div class="swiper-button-prev nav-prev-feature"></div>
                <div class="swiper-pagination sw-pagination-feature"></div>
            </div>
        </div>
    </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
    new Swiper('.feature-swiper', {
        slidesPerView: 2,
        spaceBetween: 12,
        speed: 1000,
        observer: true,
        observeParents: true,
        slidesPerGroup: 2,
        navigation: {
            nextEl: '.nav-next-feature',
            prevEl: '.nav-prev-feature'
        },
        pagination: {
            el: '.sw-pagination-feature',
            clickable: true
        },
        breakpoints: {
            768: {
                slidesPerView: 3,
                spaceBetween: 12,
                slidesPerGroup: 3
            },
            1200: {
                slidesPerView: 4,
                spaceBetween: 24,
                slidesPerGroup: 4
            }
        }
    });
});
</script>

{% schema %}
{
    "name": "Featured Products",
    "settings": [
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Featured Products"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Discover our top picks for [br] every ride"
        }
    ],
    "blocks": [
        {
            "type": "product",
            "name": "Product",
            "settings": [
                {
                    "type": "product",
                    "id": "product",
                    "label": "Product"
                },
                {
                    "type": "text",
                    "id": "brand",
                    "label": "Brand Name"
                },
                {
                    "type": "text",
                    "id": "sale_badge",
                    "label": "Sale Badge Text",
                    "info": "Leave empty to hide badge"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Featured Products",
            "blocks": [
                {
                    "type": "product"
                },
                {
                    "type": "product"
                },
                {
                    "type": "product"
                },
                {
                    "type": "product"
                }
            ]
        }
    ]
}
{% endschema %} 