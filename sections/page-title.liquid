{%- comment -%}Page Title Section{%- endcomment -%}
<section class="page-title">
  <div class="container">
    <div class="box-title text-center justify-items-center">
      <h4 class="title">{{ settings.title }}</h4>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page Title",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Shopping Cart"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.page-title {
  padding: 40px 0;
  background: #fff;
  margin-bottom: 40px;
}

.box-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 32px;
  font-weight: 500;
  margin: 0;
  color: #333;
  text-transform: uppercase;
  letter-spacing: 1px;
}

@media (max-width: 991px) {
  .page-title {
    padding: 30px 0;
    margin-bottom: 30px;
  }
  
  .title {
    font-size: 28px;
  }
}

@media (max-width: 767px) {
  .page-title {
    padding: 25px 0;
    margin-bottom: 25px;
  }
  
  .title {
    font-size: 24px;
  }
}
{% endstylesheet %} 