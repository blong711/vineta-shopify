                {
                    "type": "text",
                    "id": "trending_badge_text",
                    "label": "Trending Badge Text",
                    "default": "Trending"
                },
                {
                    "type": "checkbox",
                    "id": "show_color_swatches",
                    "label": "Show Color Swatches",
                    "default": false
                },
                {
                    "type": "header",
                    "content": "Home Fashion 02 Settings"
