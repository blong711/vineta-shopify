/* =========================================================
   Theme Settings CSS
   =========================================================
   This file contains theme-specific styles that were previously
   inline in theme.liquid. Moving them here improves:
   - Content Security Policy compliance
   - Theme customization ease
   - Code maintainability
   - Performance (external CSS can be cached)
   ========================================================= */

/* CSS Custom Properties for theme settings */
:root {
  /* Typography */
  --body-font-family: {% if settings.font_library == 'google' and settings.body_font_family != blank %}{{ settings.body_font_family }}{% else %}{{ settings.body_font.family }}, {{ settings.body_font.fallback_families }}{% endif %};
  --heading-font-family: {% if settings.font_library == 'google' and settings.heading_font_family != blank %}{{ settings.heading_font_family }}{% else %}{{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }}{% endif %};
  --body-line-height: {{ settings.body_line_height }};
  --heading-line-height: {{ settings.heading_line_height }};
  --body-letter-spacing: {{ settings.body_letter_spacing | divided_by: 100.0 }}em;
  --heading-letter-spacing: {{ settings.heading_letter_spacing | divided_by: 100.0 }}em;
  --body-font-size-mobile: {{ settings.body_font_size_mobile }}px;
  --body-font-size-desktop: {{ settings.body_font_size_desktop }}px;
  --text-sm-mobile: {{ settings.body_font_size_mobile | minus: 2 }}px;
  --text-sm-desktop: {{ settings.body_font_size_desktop | minus: 2 }}px;
  
  /* Layout */
  --container-width: {{ settings.container_width }};
  
  /* Section Spacing */
  --section-spacing-mobile: {{ settings.section_spacing_mobile }}px;
  --section-spacing-tablet: {{ settings.section_spacing_tablet }}px;
  --section-spacing-desktop: {{ settings.section_spacing_desktop }}px;
  --section-spacing-position: {{ settings.section_spacing_position }};
  --enable-section-spacing: {% if settings.enable_section_spacing %}1{% else %}0{% endif %};
  
  /* Animations */
  --enable-animations: {% if settings.enable_animations %}1{% else %}0{% endif %};
}

/* =========================================================
   Typography Settings
   ========================================================= */
body {
  font-family: var(--body-font-family) !important;
  line-height: var(--body-line-height) !important;
  letter-spacing: var(--body-letter-spacing) !important;
  font-size: var(--body-font-size-mobile) !important;
}

@media (min-width: 768px) {
  body {
    font-size: var(--body-font-size-desktop) !important;
  }
}

h1, h2, h3, h4, h5, h6 {
  font-family: var(--heading-font-family) !important;
  line-height: var(--heading-line-height) !important;
  letter-spacing: var(--heading-letter-spacing) !important;
}

/* =========================================================
   Text Size Utilities
   ========================================================= */
.text-sm {
  font-size: var(--text-sm-mobile) !important;
}

@media (min-width: 768px) {
  .text-sm {
    font-size: var(--text-sm-desktop) !important;
  }
}

.text-md {
  font-size: var(--body-font-size-desktop);
  line-height: 24px;
}

/* =========================================================
   Layout Settings
   ========================================================= */
.container {
  max-width: {{ settings.container_width }} !important;
  margin-left: auto;
  margin-right: auto;
  width: 100%;
}

/* =========================================================
   Section Spacing Settings
   ========================================================= */
.shopify-section {
  padding-top: calc(var(--section-padding-top, 0px) + (var(--enable-section-spacing) * var(--section-spacing-mobile)));
  padding-bottom: calc(var(--section-padding-bottom, 0px) + (var(--enable-section-spacing) * var(--section-spacing-mobile)));
}

/* Exclude header and footer sections from spacing */
.shopify-section[data-section-type="header"],
.shopify-section[data-section-type="footer"],
.shopify-section[data-section-type="top-bar"],
.shopify-section[data-section-type="announcement"],
.shopify-section[data-section-type="header-group"],
.shopify-section[data-section-type=footer-group] {
  padding-top: var(--section-padding-top, 0px) !important;
  padding-bottom: var(--section-padding-bottom, 0px) !important;
}

@media (min-width: 768px) {
  .shopify-section {
    padding-top: calc(var(--section-padding-top, 0px) + (var(--enable-section-spacing) * var(--section-spacing-tablet)));
    padding-bottom: calc(var(--section-padding-bottom, 0px) + (var(--enable-section-spacing) * var(--section-spacing-tablet)));
  }
  
  /* Exclude header and footer sections from spacing on tablet */
  .shopify-section[data-section-type=header"],
  .shopify-section[data-section-type=footer"],
  .shopify-section[data-section-type="top-bar"],
  .shopify-section[data-section-type=announcement"],
  .shopify-section[data-section-type=header-group"],
  .shopify-section[data-section-type=footer-group"] {
    padding-top: var(--section-padding-top, 0px) !important;
    padding-bottom: var(--section-padding-bottom, 0px) !important;
  }
}

@media (min-width: 1024px) {
  .shopify-section {
    padding-top: calc(var(--section-padding-top, 0px) + (var(--enable-section-spacing) * var(--section-spacing-desktop)));
    padding-bottom: calc(var(--section-padding-bottom, 0px) + (var(--enable-section-spacing) * var(--section-spacing-desktop)));
  }
  
  /* Exclude header and footer sections from spacing on desktop */
  .shopify-section[data-section-type=header"],
  .shopify-section[data-section-type=footer"],
  .shopify-section[data-section-type="top-bar"],
  .shopify-section[data-section-type=announcement"],
  .shopify-section[data-section-type=header-group"],
  .shopify-section[data-section-type=footer-group"] {
    padding-top: var(--section-padding-top, 0px) !important;
    padding-bottom: var(--section-padding-bottom, 0px) !important;
  }
}

/* =========================================================
   Animation Settings
   ========================================================= */
/* Default state - animations disabled only when explicitly set to false */
.section, [data-section-animate], .slider-effect-fade, .fadeInUp, .wow, .fadeInLeft, .fade-item, .fade-item-1, .fade-item-2, .fade-item-3, .animated {
  /* Keep default animation behavior unless explicitly disabled */
}

/* Disable animations only when explicitly set to false */
[data-enable-animations="false"] .section,
[data-enable-animations="false"] [data-section-animate],
[data-enable-animations="false"] .slider-effect-fade,
[data-enable-animations="false"] .fadeInUp,
[data-enable-animations="false"] .wow,
[data-enable-animations="false"] .fadeInLeft,
[data-enable-animations="false"] .fade-item,
[data-enable-animations="false"] .fade-item-1,
[data-enable-animations="false"] .fade-item-2,
[data-enable-animations="false"] .fade-item-3,
[data-enable-animations="false"] .animated {
  animation: none !important;
  transition: none !important;
  opacity: 1 !important;
}
/* Best-practice: Only show focus outlines for keyboard users */
:focus:not(:focus-visible) {
  outline: none;
}
/* Optionally, customize the visible outline color */
:focus-visible {
  outline: 2px solid #1976d2;
}
