{%- style -%}
  .banner-cls-electric {
    padding: {{ section.settings.padding_top }}px 0;
  }
  .banner-cls-bicycle {
    padding: {{ section.settings.padding_top }}px 0;
  }
  .banner-cls-fashion-02 {
    padding: {{ section.settings.padding_top }}px 0;
  }
{%- endstyle -%}

<!-- Banner Collection-->
<div class="s-banner-colection banner-cls-{{ section.settings.layout }} {% if section.settings.layout == 'bicycle' %}style-abs{% else %}flat-spacing-3{% endif %} {% if section.settings.layout == 'fashion-02' %}flat-spacing-6{% endif %}">
  <div class="container">
    <div class="banner-content {% if section.settings.layout == 'electric' or section.settings.layout == 'fashion-02' %}tf-grid-layout tf-col-2 hover-overlay-2{% endif %}">
      {% if section.settings.layout == 'electric' or section.settings.layout == 'fashion-02' %}
        <div class="image {% if section.settings.layout == 'fashion-02' %}img-hv-overlay{% endif %}">
          {%- if section.settings.image != blank -%}
            <img 
              src="{{ section.settings.image | img_url: 'master' }}" 
              alt="{{ section.settings.image.alt | escape }}" 
              class="lazyload"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
            >
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      {% else %}
        <video autoplay loop muted playsinline preload="auto">
          <source src="{{ section.settings.video | file_url }}" type="video/mp4">
        </video>
      {% endif %}
      <div class="box-content {% if section.settings.layout == 'fashion-02' %}wow fadeInUp{% endif %}">
        <div class="box-title-banner {% if section.settings.layout == 'fashion-02' %}wow fadeInUp{% endif %}">
          <p class="title display-md fw-medium {% if section.settings.layout == 'bicycle' %}text-white{% endif %}">
            {{ section.settings.title }}
          </p>
          <p class="sub {% if section.settings.layout == 'fashion-02' %}text-lg{% else %}text-md{% endif %} {% if section.settings.layout == 'bicycle' %}text-white{% else %}text-main{% endif %}">
            {{ section.settings.subtitle }}
          </p>
        </div>
        <div class="box-btn-banner {% if section.settings.layout == 'fashion-02' %}wow fadeInUp{% endif %}">
          <a href="{{ section.settings.button_link }}" class="tf-btn {% if section.settings.layout == 'bicycle' %}btn-green-2{% else %}btn-dark2{% endif %} animate-btn">
            {{ section.settings.button_text }}
            <i class="icon {% if section.settings.layout == 'bicycle' %}icon-arr-right3{% else %}icon-arr-right{% endif %}"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /Banner Collection-->

{% schema %}
{
  "name": "Banner Collection",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Section Layout",
      "options": [
        { "value": "electric", "label": "Electric" },
        { "value": "bicycle", "label": "Bicycle" },
        { "value": "fashion-02", "label": "Fashion 02" }
      ],
      "default": "electric"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Used for Electric and Fashion 02 layouts"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video",
      "info": "Only used for Bicycle layout"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Unmatched Performance"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Upgrade your devices with cutting-edge technology."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Banner Collection",
      "category": "Banner"
    }
  ]
}
{% endschema %}
