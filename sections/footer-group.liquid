{%- comment -%}Footer Section Group - Online Store 2.0 Compliant{%- endcomment -%}
<div class="footer-group">
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when '@app' -%}
        {%- render block -%}
      {%- when 'footer' -%}
        {%- render 'footer', section: block.settings -%}
      {%- else -%}
        {%- render block -%}
    {%- endcase -%}
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "Footer Group",
  "tag": "footer",
  "class": "footer-group-section",
  "max_blocks": 10,
  "blocks": [
    {
      "type": "footer",
      "name": "Footer",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "url",
          "id": "social_facebook_link",
          "label": "Facebook Link"
        },
        {
          "type": "url",
          "id": "social_instagram_link",
          "label": "Instagram Link"
        },
        {
          "type": "url",
          "id": "social_linkedin_link",
          "label": "LinkedIn Link"
        },
        {
          "type": "url",
          "id": "social_x_link",
          "label": "X (Twitter) Link"
        },
        {
          "type": "range",
          "id": "padding_top_main",
          "min": 0,
          "max": 100,
          "step": 5,
          "unit": "px",
          "label": "Padding Top",
          "default": 70
        },
        {
          "type": "range",
          "id": "padding_bottom_main",
          "min": 0,
          "max": 100,
          "step": 5,
          "unit": "px",
          "label": "Padding Bottom",
          "default": 70
        },
        {
          "type": "select",
          "id": "text_size",
          "label": "Text Size",
          "options": [
            {
              "value": "small",
              "label": "Small"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "large",
              "label": "Large"
            }
          ],
          "default": "medium"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading Size",
          "options": [
            {
              "value": "small",
              "label": "Small"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "large",
              "label": "Large"
            }
          ],
          "default": "medium"
        },
        {
          "type": "select",
          "id": "heading_font_weight",
          "label": "Heading Font Weight",
          "options": [
            {
              "value": "normal",
              "label": "Normal"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "bold",
              "label": "Bold"
            }
          ],
          "default": "medium"
        },
        {
          "type": "range",
          "id": "heading_margin_bottom",
          "min": 0,
          "max": 50,
          "step": 2,
          "unit": "px",
          "label": "Heading Margin Bottom",
          "default": 20
        }
      ]
    },
    {
      "type": "@app"
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "footer"
      }
    ]
  }
}
{% endschema %} 