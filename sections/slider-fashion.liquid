{%- style -%}
  .tf-slideshow {
    padding: {{ section.settings.padding_top | divided_by: 2 }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom | divided_by: 2 }}px {{ section.settings.padding_left }}px;
  }
  @media screen and (min-width: 750px) {
    .tf-slideshow {
      padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    }
  }
{%- endstyle -%}

<div class="tf-slideshow slider-fashion-2">
  <div class="swiper tf-sw-slideshow" 
    data-preview="{{ section.settings.slides_per_view }}"
    data-tablet="{{ section.settings.slides_per_view_tablet }}"
    data-mobile="{{ section.settings.slides_per_view_mobile }}"
    data-space="{{ section.settings.space_between }}"
    data-space-mb="{{ section.settings.space_between_mobile }}">
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        <div class="swiper-slide" {{ block.shopify_attributes }}>
          <div class="fs-cls hover-img">
            <div class="img-style image">
              {%- if block.settings.image != blank -%}
                {{ block.settings.image | image_url: width: 2000 | image_tag:
                  loading: 'lazy',
                  class: 'lazyload',
                  alt: block.settings.image.alt | escape
                }}
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>
            <div class="content">
              <a href="{{ block.settings.button_link }}" class="tf-btn btn-white hover-icon-2 hover-dark">
                {{ block.settings.button_text }}
                <i class="icon-arrow-right icon"></i>
              </a>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Fashion Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "slides_per_view",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "Slides per view (Desktop)"
    },
    {
      "type": "range",
      "id": "slides_per_view_tablet",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2,
      "label": "Slides per view (Tablet)"
    },
    {
      "type": "range",
      "id": "slides_per_view_mobile",
      "min": 1,
      "max": 3,
      "step": 0.5,
      "default": 1.5,
      "label": "Slides per view (Mobile)"
    },
    {
      "type": "range",
      "id": "space_between",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 15,
      "label": "Space between slides (Desktop)"
    },
    {
      "type": "range",
      "id": "space_between_mobile",
      "min": 0,
      "max": 30,
      "step": 5,
      "default": 5,
      "label": "Space between slides (Mobile)"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_left",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Left padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_right",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Right padding",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Fashion Slider",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %} 