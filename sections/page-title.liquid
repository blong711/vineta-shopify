{%- comment -%}Page Title Section{%- endcomment -%}
<section class="tf-page-title" {% if section.settings.background_image != blank %}style="background-image: url('{{ section.settings.background_image | image_url }}');"{% endif %}>
  <div class="container">
    <div class="box-title text-center">
      <h4 class="title">
        {% if template == 'list-collections' %}
          Collections
        {% else %}
          {{ page_title | default: settings.title }}
        {% endif %}
      </h4>
      <div class="breadcrumb-list">
        <a class="breadcrumb-item" href="/">Home</a>
        <div class="breadcrumb-item dot"><span></span></div>
        {% if template contains 'collection' %}
          <a class="breadcrumb-item" href="/collections">Collections</a>
          {% if collection.title != blank %}
            <div class="breadcrumb-item dot"><span></span></div>
            <span class="breadcrumb-item current">{{ collection.title }}</span>
          {% endif %}
        {% elsif template == 'list-collections' %}
          <span class="breadcrumb-item current">Collections</span>
        {% else %}
          <span class="breadcrumb-item current">{{ page_title | default: settings.title }}</span>
        {% endif %}
      </div>
      {% if template contains 'collection' and collection.description != blank %}
        <p class="desc text-md text-main">{{ collection.description }}</p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page Title",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Background image for the page title section"
    }
  ]
}
{% endschema %}
