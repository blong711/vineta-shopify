{% stylesheet %}
.s-contact {
  padding: 100px 0;
}

.wg-map {
  margin-bottom: 60px;
  border-radius: 16px;
  overflow: hidden;
}

.wg-map .map {
  width: 100%;
  height: 400px;
}

.content-left,
.content-right {
  padding: 40px;
}

.title {
  margin-bottom: 20px;
}

.sub-title {
  margin-bottom: 30px;
}

.contact-list {
  list-style: none;
  padding: 0;
  margin: 0 0 30px;
}

.contact-list li {
  margin-bottom: 15px;
}

.contact-list li:last-child {
  margin-bottom: 0;
}

.contact-list .link {
  color: var(--primary-color);
  text-decoration: none;
  transition: color 0.3s ease;
}

.contact-list .link:hover {
  color: var(--secondary-color);
}

.tf-social-icon {
  display: flex;
  gap: 15px;
  list-style: none;
  padding: 0;
  margin: 0;
}

.social-item {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: var(--background-color);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-color);
  text-decoration: none;
  transition: all 0.3s ease;
}

.social-item:hover {
  background: var(--primary-color);
  color: #fff;
  transform: translateY(-3px);
}

.form-contact-wrap {
  background: var(--background-color);
  padding: 40px;
  border-radius: 16px;
}

.form-default fieldset {
  margin-bottom: 20px;
}

.form-default label {
  display: block;
  margin-bottom: 8px;
  font-weight: 500;
}

.form-default input,
.form-default textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid var(--border-color);
  border-radius: 8px;
  background: #fff;
  transition: border-color 0.3s ease;
}

.form-default input:focus,
.form-default textarea:focus {
  border-color: var(--primary-color);
  outline: none;
}

.form-default textarea {
  height: 120px;
  resize: vertical;
}

.button-submit {
  margin-top: 30px;
}

.tf-btn {
  padding: 12px 30px;
  border-radius: 8px;
  background: var(--primary-color);
  color: #fff;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.tf-btn:hover {
  background: var(--secondary-color);
  transform: translateY(-2px);
}

@media (max-width: 991px) {
  .s-contact {
    padding: 60px 0;
  }
  
  .wg-map {
    margin-bottom: 40px;
  }
  
  .content-left,
  .content-right {
    padding: 20px;
  }
  
  .form-contact-wrap {
    padding: 20px;
  }
}
{% endstylesheet %} 