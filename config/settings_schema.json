  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Container Settings"
      },
      {
        "type": "select",
        "id": "container_width",
        "label": "Container Width",
        "options": [
          {
            "value": "1200px",
            "label": "1200px"
          },
          {
            "value": "1400px",
            "label": "1400px"
          },
          {
            "value": "1488px",
            "label": "1488px"
          },
          {
            "value": "1600px",
            "label": "1600px"
          },
          {
            "value": "1800px",
            "label": "1800px"
          },
          {
            "value": "1920px",
            "label": "1920px"
          }
        ],
        "default": "1488px"
      },
      {
        "type": "text",
        "id": "container_padding",
        "label": "Container Padding",
        "default": "24px",
        "info": "Enter a value with units, e.g. 30px, 2em, 5%"
      },
      {
        "type": "header",
        "content": "Grid Settings"
      },
      {
        "type": "range",
        "id": "grid_gap",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Space Between Columns",
        "default": 30
      },
      {
        "type": "header",
        "content": "Direction Settings"
      },
      {
        "type": "select",
        "id": "text_direction",
        "label": "Text Direction",
        "options": [
          {
            "value": "ltr",
            "label": "Left to Right (LTR)"
          },
          {
            "value": "rtl",
            "label": "Right to Left (RTL)"
          }
        ],
        "default": "ltr"
      },
