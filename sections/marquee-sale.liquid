{%- if section.blocks.size > 0 -%}
  <div class="marquee-sale" style="background-color: {{ section.settings.background_color }};">
      <div class="marquee-wrapper">
        <div class="initial-child-container">
          {%- for block in section.blocks -%}
            <div class="marquee-child-item" {{ block.shopify_attributes }}>
              {%- if block.settings.text != blank -%}
                <p class="display-xs fw-medium">{{ block.settings.text }}</p>
              {%- endif -%}
            </div>
            <div class="marquee-child-item">
              <i class="icon-flash-star"></i>
            </div>
          {%- endfor -%}
          {%- comment -%} Duplicate content for seamless loop {%- endcomment -%}
