{%- comment -%}Banner with Text Section{%- endcomment -%}
<section class="s-banner-with-text banner-text-fashion flat-spacing-3 pt-0">
  <div class="container">
    <div class="row flex-wrap-reverse">
      <div class="col-md-5">
        <div class="content-banner type-left wow fadeInUp">
          <div class="box-title-banner">
            <h4>{{ section.settings.title }}</h4>
            <p class="text-md text-main">
              {{ section.settings.description }}
            </p>
          </div>
          <div class="box-btn-banner">
            <a href="{{ section.settings.button_link }}" class="tf-btn animate-btn">
              {{ section.settings.button_text }}
            </a>
          </div>
        </div>
      </div>
      <div class="col-md-7">
        <div class="image-banner">
          {%- for block in section.blocks -%}
            <div class="image image-{{ forloop.index }} hover-shine hover-img" {{ block.shopify_attributes }}>
              <div class="shine-item img-style wow fadeInRight" {% if forloop.index == 2 %}data-wow-delay="0.1s"{% endif %}>
                {%- if block.settings.image != blank -%}
                  <img src="{{ block.settings.image | image_url: width: 1000 }}"
                       data-src="{{ block.settings.image | image_url: width: 1000 }}"
                       alt="{{ block.settings.image.alt | escape }}"
                       class="lazyload">
                {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Banner with Text",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Sustainable Fashion"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Look good, feel good with eco-friendly and stylish designs."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner with Text",
      "settings": {
        "title": "Sustainable Fashion",
        "description": "Look good, feel good with eco-friendly and stylish designs.",
        "button_text": "Shop Now",
        "button_link": "/collections/all"
      },
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %} 