        "default": true
      },
      {
        "type": "range",
        "id": "search_suggestions_limit",
        "min": 3,
        "max": 10,
        "step": 1,
        "label": "Number of Search Suggestions",
        "default": 5
      },
      {
        "type": "checkbox",
        "id": "show_recent_searches",
        "label": "Show Recent Searches",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_popular_searches",
        "label": "Show Popular Searches",
        "default": true
      },
      {
        "type": "select",
        "id": "search_results_layout",
        "label": "Search Results Layout",
        "options": [
          {
            "value": "grid",
            "label": "Grid"
          },
          {
            "value": "list",
            "label": "List"
          }
        ],
        "default": "grid"
      }
    ]
  },
  {
