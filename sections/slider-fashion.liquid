{%- style -%}
  .tf-slideshow {
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
{%- endstyle -%}

<div class="tf-slideshow slider-fashion-2">
    <div class="swiper tf-sw-slideshow" 
         data-preview="{{ section.settings.slides_per_view_desktop }}" 
         data-tablet="{{ section.settings.slides_per_view_tablet }}" 
         data-mobile="{{ section.settings.slides_per_view_mobile }}" 
         data-space="{{ section.settings.space_between }}" 
         data-space-mb="{{ section.settings.space_between_mobile }}">
        <div class="swiper-wrapper">
            {% for block in section.blocks %}
                <div class="swiper-slide" {{ block.shopify_attributes }}>
                    <div class="fs-cls hover-img">
                        <div class="img-style image">
                            {% if block.settings.image != blank %}
                                <img src="{{ block.settings.image | image_url }}" 
                                     alt="{{ block.settings.image.alt | escape }}" 
                                     class="lazyload"
                                     width="{{ block.settings.image.width }}"
                                     height="{{ block.settings.image.height }}">
                            {% else %}
                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                            {% endif %}
                        </div>
                        <div class="content">
                            <a href="{{ block.settings.button_link }}" class="tf-btn btn-white hover-icon-2 hover-dark">
                                {{ block.settings.button_text }}
                                <i class="icon-arrow-right icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Collection Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "slides_per_view_desktop",
      "min": 1,
      "max": 5,
      "step": 0.5,
      "label": "Slides per view (desktop)",
      "default": 3
    },
    {
      "type": "range",
      "id": "slides_per_view_tablet",
      "min": 1,
      "max": 4,
      "step": 0.5,
      "label": "Slides per view (tablet)",
      "default": 2
    },
    {
      "type": "range",
      "id": "slides_per_view_mobile",
      "min": 1,
      "max": 3,
      "step": 0.5,
      "label": "Slides per view (mobile)",
      "default": 1.5
    },
    {
      "type": "range",
      "id": "space_between",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Space between slides (desktop)",
      "default": 15
    },
    {
      "type": "range",
      "id": "space_between_mobile",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Space between slides (mobile)",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Slider",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %} 