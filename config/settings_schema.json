[
  {
    "name": "theme_info",
    "theme_name": "Shopify Theme",
    "theme_version": "1.0.0",
    "theme_author": "Your Name",
    "theme_documentation_url": "https://help.shopify.com/en/manual/online-store/themes",
    "theme_support_url": "https://help.shopify.com/en/manual/online-store/themes/getting-started/theme-support"
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Will be scaled down to 32 x 32px"
      },
      {
        "type": "image_picker",
        "id": "apple_touch_icon",
        "label": "Apple Touch Icon",
        "info": "Will be scaled down to 180 x 180px"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#222222"
      },
      {
        "type": "color",
        "id": "primary_button_color",
        "label": "Primary button color",
        "default": "#007bff"
      },
      {
        "type": "color",
        "id": "primary_button_text_color",
        "label": "Primary button text color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "primary_button_border_color",
        "label": "Primary button border color",
        "default": "#007bff"
      },
      {
        "type": "color",
        "id": "secondary_button_color",
        "label": "Secondary button color",
        "default": "#f8f9fa"
      },
      {
        "type": "color",
        "id": "secondary_button_text_color",
        "label": "Secondary button text color",
        "default": "#222222"
      },
      {
        "type": "color",
        "id": "secondary_button_border_color",
        "label": "Secondary button border color",
        "default": "#ced4da"
      },
      {
        "type": "color",
        "id": "links_color",
        "label": "Links color",
        "default": "#007bff"
      },
      {
        "type": "color",
        "id": "icons_color",
        "label": "Icons color",
        "default": "#222222"
      },
      {
        "type": "color",
        "id": "links_hover_color",
        "label": "Links hover color",
        "default": "#0056b3"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Settings"
      },
      {
        "type": "radio",
        "id": "font_library",
        "label": "Font library",
        "options": [
          { "value": "shopify", "label": "Shopify" },
          { "value": "google", "label": "Google" }
        ],
        "default": "shopify"
      },
      {
        "type": "header",
        "content": "Shopify Font library"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Heading font",
        "default": "helvetica_n4"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body font",
        "default": "helvetica_n4"
      },
      {
        "type": "header",
        "content": "Google Font library"
      },
      {
        "type": "text",
        "id": "heading_font_family",
        "label": "Heading font family",
        "default": "'Helvetica Neue', Helvetica, Arial, sans-serif"
      },
      {
        "type": "range",
        "id": "heading_font_weight",
        "label": "Heading font weight",
        "min": 100,
        "max": 900,
        "step": 100,
        "default": 400
      },
      {
        "type": "text",
        "id": "body_font_family",
        "label": "Body font family",
        "default": "'Helvetica Neue', Helvetica, Arial, sans-serif"
      },
      {
        "type": "range",
        "id": "body_font_weight",
        "label": "Body font weight",
        "min": 100,
        "max": 900,
        "step": 100,
        "default": 400
      },
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "range",
        "id": "heading_font_size_scale",
        "label": "Font size scale",
        "min": 80,
        "max": 200,
        "step": 2,
        "unit": "%",
        "default": 100
      },
      {
        "type": "range",
        "id": "heading_line_height",
        "label": "Line height",
        "min": 1,
        "max": 2,
        "step": 0.1,
        "default": 1.2
      },
      {
        "type": "range",
        "id": "heading_letter_spacing",
        "label": "Letter spacing",
        "min": -5,
        "max": 10,
        "step": 1,
        "unit": "%",
        "default": 0
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "range",
        "id": "body_font_size_mobile",
        "label": "Base size (mobile)",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "range",
        "id": "body_font_size_desktop",
        "label": "Base size (tablet and desktop)",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "range",
        "id": "body_line_height",
        "label": "Line height",
        "min": 1,
        "max": 2,
        "step": 0.1,
        "default": 1.6
      },
      {
        "type": "range",
        "id": "body_letter_spacing",
        "label": "Letter spacing",
        "min": -5,
        "max": 10,
        "step": 1,
        "unit": "%",
        "default": 0
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Container Settings"
      },
      {
        "type": "select",
        "id": "container_width",
        "label": "Container Width",
        "options": [
          {
            "value": "1200px",
            "label": "1200px"
          },
          {
            "value": "1400px",
            "label": "1400px"
          },
          {
            "value": "1488px",
            "label": "1488px"
          },
          {
            "value": "1600px",
            "label": "1600px"
          },
          {
            "value": "1800px",
            "label": "1800px"
          },
          {
            "value": "1920px",
            "label": "1920px"
          }
        ],
        "default": "1488px"
      },
      {
        "type": "text",
        "id": "container_padding",
        "label": "Container Padding",
        "default": "24px",
        "info": "Enter a value with units, e.g. 30px, 2em, 5%"
      },
      {
        "type": "header",
        "content": "Grid Settings"
      },
      {
        "type": "range",
        "id": "grid_gap",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Space Between Columns",
        "default": 30
      },
      {
        "type": "header",
        "content": "Direction Settings"
      },
      {
        "type": "select",
        "id": "text_direction",
        "label": "Text Direction",
        "options": [
          {
            "value": "ltr",
            "label": "Left to Right (LTR)"
          },
          {
            "value": "rtl",
            "label": "Right to Left (RTL)"
          }
        ],
        "default": "ltr"
      },
      {
        "type": "checkbox",
        "id": "enable_rtl_switcher",
        "label": "Enable RTL Switcher",
        "info": "Adds a button to switch between RTL and LTR modes",
        "default": false
      },
      {
        "type": "header",
        "content": "Spacing"
      },
      {
        "type": "range",
        "id": "section_spacing",
        "min": 20,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Section Spacing",
        "default": 40
      },
      {
        "type": "range",
        "id": "element_spacing",
        "min": 10,
        "max": 50,
        "step": 5,
        "unit": "px",
        "label": "Element Spacing",
        "default": 20
      }
    ]
  },
  {
    "name": "Animations",
    "settings": [
      {
        "type": "header",
        "content": "Animation Settings"
      },
      {
        "type": "checkbox",
        "id": "enable_animations",
        "label": "Enable Animations",
        "default": true
      },
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "header",
        "content": "Search Settings"
      },
      {
        "type": "checkbox",
        "id": "show_search_suggestions",
        "label": "Show Search Suggestions",
        "default": true
      },
      {
        "type": "range",
        "id": "search_suggestions_limit",
        "min": 3,
        "max": 10,
        "step": 1,
        "label": "Number of Search Suggestions",
        "default": 5
      },
      {
        "type": "checkbox",
        "id": "show_recent_searches",
        "label": "Show Recent Searches",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_popular_searches",
        "label": "Show Popular Searches",
        "default": true
      },
      {
        "type": "select",
        "id": "search_results_layout",
        "label": "Search Results Layout",
        "options": [
          {
            "value": "grid",
            "label": "Grid"
          },
          {
            "value": "list",
            "label": "List"
          }
        ],
        "default": "grid"
      }
    ]
  },
  {
    "name": "Feature Settings",
    "settings": [
      {
        "type": "header",
        "content": "Feature Toggles"
      },
      {
        "type": "checkbox",
        "id": "enable_quickview",
        "label": "Enable Quick View",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_compare",
        "label": "Enable Product Comparison",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_wishlist",
        "label": "Enable Wishlist",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_zoom",
        "label": "Enable Product Image Zoom",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_parallax",
        "label": "Enable Parallax Effects",
        "default": true
      }
    ]
  }
] 