        "type": "range",
        "id": "section_spacing",
        "min": 20,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Section Spacing",
        "default": 40
      },
      {
        "type": "range",
        "id": "element_spacing",
        "min": 10,
        "max": 50,
        "step": 5,
        "unit": "px",
        "label": "Element Spacing",
        "default": 20
