<!-- Banner with text-->
<div class="s-banner-product">
  <div class="container">
    <div class="content-banner">
      <div class="image-wrap hover-img">
        {% if section.settings.banner_product != blank %}
          {% assign banner_product = section.settings.banner_product %}
          <a href="{{ banner_product.url }}" class="image img-style d-block">
            {% if banner_product.featured_image != blank %}
              {{ banner_product.featured_image | image_url: width: 2000 | image_tag:
                loading: 'lazy',
                class: 'lazyload',
                alt: banner_product.featured_image.alt
              }}
            {% endif %}
          </a>
        {% else %}
          <a href="{{ section.settings.banner_link }}" class="image img-style d-block">
            {% if section.settings.banner_image != blank %}
              {{ section.settings.banner_image | image_url: width: 2000 | image_tag:
                loading: 'lazy',
                class: 'lazyload',
                alt: section.settings.banner_image.alt
              }}
            {% endif %}
          </a>
        {% endif %}
        {% for block in section.blocks %}
          {% if block.type == 'lookbook' %}
            {% assign product = block.settings.product %}
            {% if product != blank %}
              <div class="loobook-product style-row">
                <div class="img-style">
                  {% if product.featured_image != blank %}
                    {{ product.featured_image | image_url: width: 200 | image_tag:
                      loading: 'lazy',
                      alt: product.featured_image.alt
                    }}
                  {% endif %}
                </div>
                <div class="content">
                  <div class="info">
                    <a href="{{ product.url }}" class="text-md fw-medium text-line-clamp-1 link">
                      {{ product.title }}
                    </a>
                    <p class="price-wrap text-md fw-medium">
                      {{ product.price | money }}
                    </p>
                  </div>
                  <a href="#quickView" data-bs-toggle="modal" class="btn-lookbook hover-tooltip" data-product-handle="{{ product.handle }}">
                    <i class="icon-view"></i>
                    <span class="tooltip">Quick view</span>
                  </a>
                </div>
              </div>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>

      <div class="content-right text-center wow fadeInUp">
        <div class="box-title">
          <p class="display-lg-3 font-2 text-dark-3">
            {{ section.settings.title }}
          </p>
          <p class="body-text-2 text-dark-3 font-2">
            {{ section.settings.description }}
          </p>
        </div>
        <div class="box-btn">
          <a href="{{ section.settings.button_link }}" class="tf-btn animate-btn btn-dark2">
            {{ section.settings.button_text }}
            <i class="icon-arr-right"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /Banner with text -->

{% schema %}
{
  "name": "Banner Text Fashion Women",
  "settings": [
    {
      "type": "product",
      "id": "banner_product",
      "label": "Banner Product"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image (Fallback)"
    },
    {
      "type": "url",
      "id": "banner_link",
      "label": "Banner Link"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Elevating Your Style Journey"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Discover timeless pieces that define elegance and sophistication."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "lookbook",
      "name": "Lookbook Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner Text Fashion Women",
      "blocks": []
    }
  ]
}
{% endschema %} 