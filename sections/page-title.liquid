{%- comment -%}Page Title Section{%- endcomment -%}
<section class="page-title">
  <div class="container">
    <div class="box-title text-center justify-items-center">
      <h4 class="title">{% if template == 'list-collections' %}Collections{% else %}{{ page_title | default: settings.title }}{% endif %}</h4>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page Title",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Shopping Cart"
    }
  ]
}
{% endschema %}
