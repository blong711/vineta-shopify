{% stylesheet %}
@keyframes marquee {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

.marquee-wrapper {
  overflow: hidden;
  white-space: nowrap;
}

.initial-child-container {
  display: inline-block;
  white-space: nowrap;
  animation: marquee 20s linear infinite;
}

.marquee-child-item {
  display: inline-block;
  padding: 0 15px;
}

.marquee-child-item .dot {
  display: inline-block;
  width: 4px;
  height: 4px;
  background-color: currentColor;
  border-radius: 50%;
  margin: 0 5px;
  vertical-align: middle;
}

.tf-social-icon {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
}

.tf-social-icon li {
  margin-right: 15px;
}

.tf-social-icon li:last-child {
  margin-right: 0;
}

.social-item {
  color: #fff;
  transition: color 0.3s ease;
}

.social-item:hover {
  color: var(--primary-color);
}

.topbar-right {
  display: flex;
  align-items: center;
  gap: 20px;
}

.image-select {
  background: none;
  border: none;
  color: #fff;
  padding: 5px;
  cursor: pointer;
}

.image-select option {
  color: #000;
}
{% endstylesheet %} 