<div class="footer-heading footer-heading-mobile text-xl fw-medium">{{ block.settings.title }}</div>
<div class="tf-collapse-content">
  <div class="footer-newsletter">
    <p>{{ block.settings.text }}</p>
    {% form 'customer', class: 'form-newsletter' %}
      <div class="subscribe-content">
        <fieldset class="email">
          <input type="email" name="contact[email]" class="subscribe-email" placeholder="{{ block.settings.placeholder }}" required>
        </fieldset>
        <div class="button-submit">
          <button class="subscribe-button animate-btn" type="submit">
            <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.7938 8.50229L17.7931 8.50162L14.1192 4.84537C13.8439 4.57147 13.3988 4.57249 13.1248 4.84776C12.8508 5.123 12.8519 5.56818 13.1271 5.84212L15.5938 8.29687H0.703125C0.314789 8.29687 0 8.61166 0 9C0 9.38833 0.314789 9.70312 0.703125 9.70312H15.5938L13.1272 12.1579C12.8519 12.4318 12.8509 12.877 13.1248 13.1522C13.3988 13.4275 13.844 13.4285 14.1192 13.1546L17.7932 9.49837L17.7938 9.4977C18.0692 9.22285 18.0683 8.77623 17.7938 8.50229Z" fill="white"/>
            </svg>
          </button>
        </div>
      </div>
    {% endform %}
  </div>
</div>

{% schema %}
{
  "name": "Newsletter",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Subscribe Newsletter" },
    { "type": "text", "id": "text", "label": "Text", "default": "We invite you to register to read the latest news, offers and events about our company. We promise not spam your inbox." },
    { "type": "text", "id": "placeholder", "label": "Email Placeholder", "default": "Email address" }
  ]
}
{% endschema %} 