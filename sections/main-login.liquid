            },
            {
              "value": "outline",
              "label": "Outline"
            },
            {
              "value": "text",
              "label": "Text"
            }
          ],
          "default": "primary"
        }
      ]
    },
    {
      "type": "infos",
      "name": "Infos",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "I'm new here"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Sign up for early Sale access plus tailored new arrivals, trends and promotions. To opt out, click unsubscribe in our emails."
        },
        {
          "type": "checkbox",
          "id": "btn_full",
          "label": "Full width button"
        },
        {
          "type": "select",
          "id": "btn_style",
          "label": "Button style",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            },
            {
              "value": "outline",
              "label": "Outline"
            },
            {
              "value": "text",
              "label": "Text"
            }
          ],
          "default": "primary"
        }
      ]
    }
  ]
}
{% endschema %}
