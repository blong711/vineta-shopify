<!-- Gear Up -->
<section class="flat-spacing-3">
  <div class="container">
    <div class="flat-title-v2 text-center justify-items-center wow fadeInUp">
      <a href="{{ section.settings.gear_up_link }}" class="tf-btn btn-out-line-green btn-small text-uppercase">
        {{ section.settings.gear_up_text }}
      </a>
      <h4>{{ section.settings.heading }}</h4>
    </div>
    <div class="fl-control-sw wow fadeInUp">
      <div dir="ltr" class="swiper tf-swiper" data-swiper='{
        "slidesPerView": 2,
        "spaceBetween": 12,
        "speed": 1000,
        "observer": true,
        "observeParents": true,
        "slidesPerGroup": 2,
        "navigation": {
          "clickable": true,
          "nextEl": ".nav-next-gear-up",
          "prevEl": ".nav-prev-gear-up"
        },
        "pagination": { "el": ".sw-pagination-gear-up", "clickable": true },
        "breakpoints": {
          "768": { "slidesPerView": 3, "spaceBetween": 12, "slidesPerGroup": 3 },
          "1200": { "slidesPerView": 4, "spaceBetween": 24, "slidesPerGroup": 4 }
        }
      }'>
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide" {{ block.shopify_attributes }}>
              {% render 'card-product',
                product: block.settings.product,
                vendor: block.settings.vendor,
                show_sale_badge: block.settings.show_sale_badge,
                sale_badge_text: block.settings.sale_badge_text,
                show_color_swatches: block.settings.show_color_swatches,
                class: 'style-border'
              %}
            </div>
          {% endfor %}
        </div>
        <div class="d-flex d-xl-none sw-dot-default sw-pagination-gear-up justify-content-center"></div>
      </div>
      <div class="d-none d-xl-flex swiper-button-next nav-swiper nav-next-gear-up"></div>
      <div class="d-none d-xl-flex swiper-button-prev nav-swiper nav-prev-gear-up"></div>
    </div>
  </div>
</section>
<!-- /Gear Up -->

{% schema %}
{
  "name": "Bicycle Gear Up",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "gear_up_text",
      "label": "Gear Up Text",
      "default": "Gear Up"
    },
    {
      "type": "url",
      "id": "gear_up_link",
      "label": "Gear Up Link"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Top-quality equipment for all your cycling needs"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "vendor",
          "label": "Vendor",
          "default": "KALKHOFF"
        },
        {
          "type": "checkbox",
          "id": "show_sale_badge",
          "label": "Show Sale Badge",
          "default": true
        },
        {
          "type": "text",
          "id": "sale_badge_text",
          "label": "Sale Badge Text",
          "default": "20% Off"
        },
        {
          "type": "checkbox",
          "id": "show_color_swatches",
          "label": "Show Color Swatches",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bicycle Gear Up",
      "blocks": [
        {
          "type": "product",
          "settings": {
            "vendor": "KALKHOFF",
            "show_sale_badge": true,
            "sale_badge_text": "20% Off",
            "show_color_swatches": true
          }
        },
        {
          "type": "product",
          "settings": {
            "vendor": "GASGAS",
            "show_sale_badge": true,
            "sale_badge_text": "20% Off",
            "show_color_swatches": true
          }
        }
      ]
    }
  ]
}
{% endschema %} 