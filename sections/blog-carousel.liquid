          "delay": {{ section.settings.autoplay_speed }},
          "disableOnInteraction": false
        },
        "breakpoints": {
          "577": { 
            "slidesPerView": {{ section.settings.slides_per_view_tablet }}, 
            "spaceBetween": {{ section.settings.space_between_tablet }}, 
            "slidesPerGroup": {{ section.settings.slides_per_view_tablet }}
          },
          "1200": { 
            "slidesPerView": {{ section.settings.slides_per_view_desktop }}, 
            "spaceBetween": {{ section.settings.space_between_desktop }}, 
            "slidesPerGroup": {{ section.settings.slides_per_view_desktop }}
          }
        }
      }'>
        <div class="swiper-wrapper">
          {%- for article in section.blocks -%}
            <div class="swiper-slide" {{ article.shopify_attributes }}>
              <div class="blog-item-v2">
                <div class="entry-image hover-img">
                  <a href="{{ article.settings.article.url }}" class="image-box img-style">
                    {%- if article.settings.article.image != blank -%}
                      {{ article.settings.article.image | image_url: width: 600 | image_tag:
                        loading: 'lazy',
                        width: 600,
                        height: 400,
                        class: 'lazyload',
                        alt: article.settings.article.title
                      }}
                    {%- else -%}
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                  </a>
                  {% if article.settings.article.tags.size > 0 %}
                    <div class="entry-tag">
                      {% for tag in article.settings.article.tags limit: 3 %}
                        <span class="tag">{{ tag }}</span>
                      {% endfor %}
                    </div>
                  {% endif %}
                </div>
                <div class="entry-content">
                  <div class="info-box">
                    <ul class="meta-list">
                      <li class="item">
                        <span class="d-none d-lg-inline">by {{ article.settings.article.author }}</span>
                        <span class="d-none d-md-inline d-lg-none">by {{ article.settings.article.author | truncate: 8, '...' }}</span>
                        <span class="d-inline d-md-none">by {{ article.settings.article.author | truncate: 6, '...' }}</span>
                      </li>
                      <li class="item">{{ article.settings.article.published_at | date: "%b %d, %Y" }}</li>
                      {% if article.settings.article.comments_enabled? %}
                        <li class="item">{{ article.settings.article.comments_count }} Comments</li>
                      {% endif %}
                    </ul>
                    <a href="{{ article.settings.article.url }}" class="title fw-medium link text-xl text-line-clamp-2">
                      {{ article.settings.article.title }}
                    </a>
                    {% if article.settings.article.excerpt_or_content  != blank %}
                      <p class="desc text-main text-sm text-line-clamp-2">
                        {{ article.settings.article.excerpt_or_content  | strip_html | truncatewords: 30 }}
                      </p>
                    {% endif %}
                  </div>
                  <a href="{{ article.settings.article.url }}" class="btn-readmore link">
                    {{ section.settings.read_more_text }} <i class="icon icon-arr-right"></i>
                  </a>
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
        <div class="d-flex d-xl-none sw-dot-default sw-pagination-new justify-content-center"></div>
      </div>
