        },
        {
          "type": "text",
          "id": "hours",
          "label": "Business Hours",
          "default": "8am - 7pm, Mon - Sat"
        }
      ]
    },
    {
      "type": "contact_form",
      "name": "Contact Form",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "form_title",
          "label": "Form Title",
          "default": "Get In Touch"
        },
        {
          "type": "text",
          "id": "form_subtitle",
          "label": "Form Subtitle",
          "default": "Please submit all general enquiries in the contact form below and we look forward to hearing from you soon."
        },
        {
          "type": "text",
          "id": "submit_button_text",
          "label": "Submit Button Text",
          "default": "Send"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact Us",
      "blocks": [
        {
          "type": "map"
        },
        {
          "type": "contact_info"
        },
        {
          "type": "contact_form"
        }
      ]
    }
  ]
}
{% endschema %}