{% comment %}
  Slider Block
  This block is designed to work with the main-slider section
  Usage: Include this block in your main-slider section
{% endcomment %}

{% assign slide_class = '' %}
{% if section.settings.layout == 'home-electronic' and block.settings.image_position == 'right' %}
    {% assign slide_class = 'type-image-right' %}
{% elsif section.settings.layout == 'home-electronic' and forloop.index == 2 %}
    {% assign slide_class = 'reverse-slide' %}
{% endif %}

<div class="swiper-slide" {{ block.shopify_attributes }}>
  <div class="slider-wrap bg-type-{{ forloop.index }} {{ slide_class }}">
    <div class="image">
      {% if block.settings.image != blank %}
        <img src="{{ block.settings.image | img_url: 'master' }}"
            data-src="{{ block.settings.image | img_url: 'master' }}" 
            alt="{{ block.settings.image.alt | escape }}" 
            class="lazyload {% if section.settings.enable_parallax %}effect-paralax{% endif %}"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}">
      {% endif %}
    </div>
    <div class="box-content">
      <div class="container">
        <div class="row">
          <div class="{% if section.settings.layout == 'home-electronic' and block.settings.content_position == 'right' %}offset-lg-8 col-lg-4 col-sm-6 offset-6{% elsif section.settings.layout == 'fashion-women' %}col-lg-5 col-md-6 col-sm-7 col-10{% elsif section.settings.layout == 'bicycle' %}col-lg-5 col-md-6 col-sm-10{% elsif section.settings.layout == 'phonecase' %}col-lg-5 col-md-6 col-sm-10{% else %}col-lg-12 col-sm-6{% endif %} col-12">
            <div class="content-slider {% if section.settings.layout == 'fashion-women' or section.settings.layout == 'bicycle' %}style-2{% endif %}">
              <div class="box-title-slider {% if section.settings.layout == 'fashion-women' %}text-center{% endif %}">
                {% if section.settings.layout == 'home-electronic' %}
                  <p class="sub text-md fw-medium fade-item fade-item-1"
                     style="color: {{ block.settings.subtitle_color }};">
                    {{ block.settings.subtitle }}
                  </p>
                  <h2 class="heading fw-medium fade-item fade-item-2"
                      style="color: {{ block.settings.heading_color }};">
                    {{ block.settings.heading }}
                  </h2>
                {% elsif section.settings.layout == 'fashion-women' %}
                  <p class="body-text-2 fw-semibold fade-item fade-item-1"
                     style="color: {{ block.settings.subtitle_color }};">
                    {{ block.settings.subtitle }}
                  </p>
                  <div class="heading display-lg-3 fade-item fade-item-2"
                       style="color: {{ block.settings.heading_color }};">
                    {{ block.settings.heading }}
                  </div>
                  <p class="sub text-md fade-item fade-item-3"
                     style="color: {{ block.settings.subheading_color }};">
                    {{ block.settings.subheading }}
                  </p>
                {% else %}
                  <h2 class="heading fw-medium fade-item fade-item-1"
                      style="color: {{ block.settings.heading_color }};">
                    {{ block.settings.heading }}
                  </h2>
                  <p class="sub text-md fade-item fade-item-2"
                     style="color: {{ block.settings.subtitle_color }};">
                    {{ block.settings.subheading }}
                  </p>
                {% endif %}
              </div>
              <div class="box-btn-slider {% if section.settings.layout == 'fashion-women' %}fade-item fade-item-4{% else %}fade-item fade-item-3{% endif %} {% if section.settings.layout == 'fashion-women' %}text-center{% endif %}">
                <a href="{{ block.settings.button_link }}" 
                   class="tf-btn {% if section.settings.layout == 'fashion-women' %}animate-btn font-2{% elsif section.settings.layout == 'bicycle' %}btn-space1 animate-btn btn-green-2{% elsif section.settings.layout == 'phonecase' %}fw-normal animate-btn{% elsif block.settings.button_color == 'white' %}btn-white fw-normal hover-primary{% else %}btn-dark2 animate-btn{% endif %}"
                   style="background-color: {{ block.settings.button_bg_color }}; color: {{ block.settings.button_text_color }};"
                   onmouseover="this.style.backgroundColor='{{ block.settings.button_hover_bg_color }}'; this.style.color='{{ block.settings.button_hover_text_color }}';"
                   onmouseout="this.style.backgroundColor='{{ block.settings.button_bg_color }}'; this.style.color='{{ block.settings.button_text_color }}';">
                  {{ block.settings.button_text }}
                  <i class="icon {% if section.settings.layout == 'bicycle' %}icon-arr-right3{% else %}icon-arr-right{% endif %}"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Slider Block",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Slide image"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_hover_bg_color",
      "label": "Button hover background color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "button_hover_text_color",
      "label": "Button hover text color",
      "default": "#FFFFFF"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "SUMMER COLLECTION"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Style Redefined"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover the latest trends in fashion that speak your style."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ]
}
{% endschema %} 