  {
    "name": "Preload Settings",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_preload",
        "label": "Enable Loading Screen",
        "default": true,
        "info": "Show a loading screen when the page is loading"
      }
    ]
  },
  {
    "name": "Free Shipping",
    "settings": [
      {
        "type": "number",
        "id": "free_shipping_threshold",
        "label": "Free Shipping Threshold",
        "default": 10000,
        "info": "Amount in cents (e.g., 10000 = $100.00)"
      },
      {
        "type": "text",
        "id": "progress_message",
        "label": "Progress Message",
        "default": "Spend <span class=\"fw-medium\">[amount]</span> more to get <span class=\"fw-medium\">Free Shipping</span>",
        "info": "Use [amount] to show the remaining amount needed"
      },
      {
        "type": "text",
        "id": "free_shipping_message",
        "label": "Free Shipping Message",
        "default": "Congratulations! You've unlocked  <span class=\"fw-medium\">Free Shipping</span>"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Will be scaled down to 32 x 32px"
      },
      {
        "type": "image_picker",
        "id": "apple_touch_icon",
        "label": "Apple Touch Icon",
        "info": "Will be scaled down to 180 x 180px"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Settings"
      },
      {
        "type": "radio",
        "id": "font_library",
        "label": "Font library",
        "options": [
          { "value": "shopify", "label": "Shopify" },
          { "value": "google", "label": "Google" }
        ],
        "default": "shopify"
      },
      {
        "type": "header",
        "content": "Shopify Font library",
        "visible_if": "{{ settings.font_library == 'shopify' }}"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Heading font",
        "default": "helvetica_n4",
        "visible_if": "{{ settings.font_library == 'shopify' }}"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body font",
        "default": "helvetica_n4",
        "visible_if": "{{ settings.font_library == 'shopify' }}"
      },
      {
        "type": "header",
        "content": "Google Font library",
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "text",
        "id": "heading_font_family",
        "label": "Heading font family",
        "default": "'Helvetica Neue', Helvetica, Arial, sans-serif",
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "range",
        "id": "heading_font_weight",
        "label": "Heading font weight",
        "min": 100,
        "max": 900,
        "step": 100,
        "default": 400,
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "text",
        "id": "body_font_family",
        "label": "Body font family",
        "default": "'Helvetica Neue', Helvetica, Arial, sans-serif",
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "range",
        "id": "body_font_weight",
        "label": "Body font weight",
        "min": 100,
        "max": 900,
        "step": 100,
        "default": 400,
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "range",
        "id": "heading_font_size_scale",
        "label": "Font size scale",
        "min": 80,
        "max": 200,
        "step": 2,
        "unit": "%",
        "default": 100
      },
      {
        "type": "range",
        "id": "heading_line_height",
        "label": "Line height",
        "min": 1,
        "max": 2,
        "step": 0.1,
        "default": 1.2
      },
      {
        "type": "range",
        "id": "heading_letter_spacing",
        "label": "Letter spacing",
        "min": -5,
        "max": 10,
        "step": 1,
        "unit": "%",
        "default": 0
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "range",
        "id": "body_font_size_mobile",
        "label": "Base size (mobile)",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "range",
        "id": "body_font_size_desktop",
        "label": "Base size (tablet and desktop)",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "range",
        "id": "body_line_height",
        "label": "Line height",
        "min": 1,
        "max": 2,
        "step": 0.1,
        "default": 1.6
      },
      {
        "type": "range",
        "id": "body_letter_spacing",
        "label": "Letter spacing",
        "min": -5,
        "max": 10,
        "step": 1,
        "unit": "%",
        "default": 0
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Container Settings"
      },
      {
        "type": "select",
        "id": "container_width",
        "label": "Container Width",
        "options": [
          {
            "value": "1200px",
            "label": "1200px"
          },
          {
            "value": "1400px",
            "label": "1400px"
          },
          {
            "value": "1488px",
            "label": "1488px"
          },
          {
            "value": "1600px",
            "label": "1600px"
          },
          {
            "value": "1800px",
            "label": "1800px"
          },
          {
            "value": "1920px",
            "label": "1920px"
          }
        ],
        "default": "1488px"
      },
      {
        "type": "header",
        "content": "Direction Settings"
      },
      {
        "type": "select",
        "id": "text_direction",
        "label": "Text Direction",
        "options": [
          {
            "value": "ltr",
            "label": "Left to Right (LTR)"
          },
          {
            "value": "rtl",
            "label": "Right to Left (RTL)"
          }
        ],
        "default": "ltr"
      },
      {
        "type": "header",
        "content": "Section Spacing Settings"
      },
      {
        "type": "checkbox",
        "id": "enable_section_spacing",
        "label": "Enable Section Spacing",
        "default": false,
        "info": "Add additional spacing between sections"
      },
      {
        "type": "range",
        "id": "section_spacing_mobile",
        "label": "Section Spacing (Mobile)",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "default": 20,
        "info": "Additional spacing between sections on mobile devices"
      },
      {
        "type": "range",
        "id": "section_spacing_tablet",
        "label": "Section Spacing (Tablet)",
        "min": 0,
        "max": 120,
        "step": 5,
        "unit": "px",
        "default": 30,
        "info": "Additional spacing between sections on tablet devices"
      },
      {
        "type": "range",
        "id": "section_spacing_desktop",
        "label": "Section Spacing (Desktop)",
        "min": 0,
        "max": 150,
        "step": 5,
        "unit": "px",
        "default": 40,
        "info": "Additional spacing between sections on desktop devices"
      },
      {
        "type": "select",
        "id": "section_spacing_position",
        "label": "Spacing Position",
        "options": [
          {
            "value": "top",
            "label": "Add to Top Padding"
          },
          {
            "value": "bottom",
            "label": "Add to Bottom Padding"
          },
          {
            "value": "both",
            "label": "Add to Both Top and Bottom"
          }
        ],
        "default": "bottom",
        "info": "Choose where to apply the additional spacing"
      }
    ]
  },
