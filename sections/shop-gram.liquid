    {
      "type": "text",
      "id": "instagram_access_token",
      "label": "Instagram Access Token",
      "info": "Your Instagram Access Token (optional if using Instafeed app)"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "tooltip_text",
          "label": "Tooltip Text",
          "default": "View Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop by @Gram",
      "category": "Category",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}