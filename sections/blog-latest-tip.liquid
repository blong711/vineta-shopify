{% schema %}
{
  "name": "Latest Tips & Trends",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Latest Tips & Trends"
    },
    {
      "type": "article",
      "id": "article_1",
      "label": "Article 1"
    },
    {
      "type": "article",
      "id": "article_2",
      "label": "Article 2"
    },
    {
      "type": "article",
      "id": "article_3",
      "label": "Article 3"
    },
    {
      "type": "article",
      "id": "article_4",
      "label": "Article 4"
    },
    {
      "type": "header",
      "content": "Display Settings"
    },
    {
      "type": "checkbox",
      "id": "show_tags",
      "label": "Show Tags",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show Author",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show Date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_comments",
      "label": "Show Comments",
      "default": true
    },
    {
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "range",
      "id": "slides_per_view_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 1,
      "label": "Slides per view (Mobile)"
    },
    {
      "type": "range",
      "id": "slides_per_view_tablet",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2,
      "label": "Slides per view (Tablet)"
    },
    {
      "type": "range",
      "id": "slides_per_view_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "Slides per view (Desktop)"
    }
  ],
  "presets": [
    {
      "name": "Latest Tips & Trends",
      "category": "Blog"
    }
  ]
}
{% endschema %}

<section class="flat-spacing-25">
  <div class="container">
    <div class="flat-title mb_2 wow fadeInUp">
      <h4 class="title">{{ section.settings.title }}</h4>
    </div>
    <div dir="ltr" class="swiper tf-swiper" data-swiper='{
      "slidesPerView": {{ section.settings.slides_per_view_mobile }},
      "spaceBetween": 12,
      "speed": 800,
      "observer": true,
      "observeParents": true,
      "slidesPerGroup": 1,
      "navigation": {
        "clickable": true,
        "nextEl": ".nav-next-new",
        "prevEl": ".nav-prev-new"
      },
      "pagination": { "el": ".sw-pagination-new", "clickable": true },
      "breakpoints": {
        "577": { 
          "slidesPerView": {{ section.settings.slides_per_view_tablet }}, 
          "spaceBetween": 12, 
          "slidesPerGroup": 2 
        },
        "1200": { 
          "slidesPerView": {{ section.settings.slides_per_view_desktop }}, 
          "spaceBetween": 24, 
          "slidesPerGroup": 4
        }
      }
    }'>
      <div class="swiper-wrapper">
        {%- if section.settings.article_1 != blank -%}
          <div class="swiper-slide">
            <div class="blog-post-item hover-img">
              <div class="entry_image">
                <a href="{{ section.settings.article_1.url }}" class="img-style">
                  {%- if section.settings.article_1.image -%}
                    {{ section.settings.article_1.image | image_url: width: 600 | image_tag: loading: 'lazy', class: 'lazyload' }}
                  {%- endif -%}
                </a>
              </div>
              <div class="blog-content">
                {%- if section.settings.show_tags -%}
                  <div class="entry-tag">
                    <ul class="style-list">
                      {%- for tag in section.settings.article_1.tags -%}
                        <li>
                          <a class="type-{{ tag | handleize }}">
                            {{ tag }}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>
                {%- endif -%}
                <a href="{{ section.settings.article_1.url }}" class="entry_title d-block text-xl fw-medium link">
                  {{ section.settings.article_1.title | truncate: 42 }}
                </a>
                {% comment %} <p class="entry_sub text-md text-main">
                  {{ section.settings.article_1.excerpt_or_content | strip_html | truncatewords: 20 }}
                </p> {% endcomment %}
                <ul class="entry-meta">
                  {%- if section.settings.show_author -%}
                    <li class="entry_author">
                      <div class="avatar">
                        {%- if section.settings.article_1.author.image -%}
                          {{ section.settings.article_1.author.image | image_url: width: 100 | image_tag: loading: 'lazy', class: 'lazyload' }}
                        {%- endif -%}
                      </div>
                      <p class="entry_name">
                        Post by <span class="fw-medium">{{ section.settings.article_1.author | truncate: 12 }}</span>
                      </p>
                    </li>
                    <li class="br-line"></li>
                  {%- endif -%}
                  {%- if section.settings.show_date -%}
                    <li class="entry_date">
                      <p class="text-md">
                        {{ section.settings.article_1.published_at | date: '%b %d %Y' }}
                      </p>
                    </li>
                    <li class="br-line"></li>
                  {%- endif -%}
                  {%- if section.settings.show_comments -%}
                    <li class="entry_comment">
                      <p class="text-md">
                        {{ section.settings.article_1.comments_count }} comments
                      </p>
                    </li>
                  {%- endif -%}
