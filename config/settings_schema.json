[
  {
    "name": "theme_info",
    "theme_name": "Shopify Theme",
    "theme_version": "1.0.0",
    "theme_author": "Your Name",
    "theme_documentation_url": "https://help.shopify.com/en/manual/online-store/themes",
    "theme_support_url": "https://help.shopify.com/en/manual/online-store/themes/getting-started/theme-support"
  },
  {
    "name": "Preload Settings",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_preload",
        "label": "Enable Loading Screen",
        "default": true,
        "info": "Show a loading screen when the page is loading"
      }
    ]
  },
  {
    "name": "Free Shipping",
    "settings": [
      {
        "type": "number",
        "id": "free_shipping_threshold",
        "label": "Free Shipping Threshold",
        "default": 10000,
        "info": "Amount in cents (e.g., 10000 = $100.00)"
      },
      {
        "type": "text",
        "id": "progress_message",
        "label": "Progress Message",
        "default": "Spend <span class=\"fw-medium\">[amount]</span> more to get <span class=\"fw-medium\">Free Shipping</span>",
        "info": "Use [amount] to show the remaining amount needed"
      },
      {
        "type": "text",
        "id": "free_shipping_message",
        "label": "Free Shipping Message",
        "default": "Congratulations! You've unlocked  <span class=\"fw-medium\">Free Shipping</span>"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Will be scaled down to 32 x 32px"
      },
      {
        "type": "image_picker",
        "id": "apple_touch_icon",
        "label": "Apple Touch Icon",
        "info": "Will be scaled down to 180 x 180px"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Settings"
      },
      {
        "type": "radio",
        "id": "font_library",
        "label": "Font library",
        "options": [
          { "value": "shopify", "label": "Shopify" },
          { "value": "google", "label": "Google" }
        ],
        "default": "shopify"
      },
      {
        "type": "header",
        "content": "Shopify Font library",
        "visible_if": "{{ settings.font_library == 'shopify' }}"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Heading font",
        "default": "helvetica_n4",
        "visible_if": "{{ settings.font_library == 'shopify' }}"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body font",
        "default": "helvetica_n4",
        "visible_if": "{{ settings.font_library == 'shopify' }}"
      },
      {
        "type": "header",
        "content": "Google Font library",
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "text",
        "id": "heading_font_family",
        "label": "Heading font family",
        "default": "'Helvetica Neue', Helvetica, Arial, sans-serif",
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "range",
        "id": "heading_font_weight",
        "label": "Heading font weight",
        "min": 100,
        "max": 900,
        "step": 100,
        "default": 400,
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "text",
        "id": "body_font_family",
        "label": "Body font family",
        "default": "'Helvetica Neue', Helvetica, Arial, sans-serif",
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "range",
        "id": "body_font_weight",
        "label": "Body font weight",
        "min": 100,
        "max": 900,
        "step": 100,
        "default": 400,
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "range",
        "id": "heading_font_size_scale",
        "label": "Font size scale",
        "min": 80,
        "max": 200,
        "step": 2,
        "unit": "%",
        "default": 100
      },
      {
        "type": "range",
        "id": "heading_line_height",
        "label": "Line height",
        "min": 1,
        "max": 2,
        "step": 0.1,
        "default": 1.2
      },
      {
        "type": "range",
        "id": "heading_letter_spacing",
        "label": "Letter spacing",
        "min": -5,
        "max": 10,
        "step": 1,
        "unit": "%",
        "default": 0
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "range",
        "id": "body_font_size_mobile",
        "label": "Base size (mobile)",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "range",
        "id": "body_font_size_desktop",
        "label": "Base size (tablet and desktop)",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "range",
        "id": "body_line_height",
        "label": "Line height",
        "min": 1,
        "max": 2,
        "step": 0.1,
        "default": 1.6
      },
      {
        "type": "range",
        "id": "body_letter_spacing",
        "label": "Letter spacing",
        "min": -5,
        "max": 10,
        "step": 1,
        "unit": "%",
        "default": 0
      }
    ]
  },
