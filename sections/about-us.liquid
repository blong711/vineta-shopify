<!-- Welcome Section -->
<section class="flat-spacing-3 pb-0">
  <div class="container">
    <div class="flat-title-2 d-xl-flex justify-content-xl-between">
      <div class="box-title">
        <p class="display-lg-2 fw-medium">
          {{ section.settings.welcome_title }}
        </p>
        <p class="text-xl">
          {{ section.settings.welcome_subtitle }}
        </p>
      </div>
      <div class="box-text">
        <p class="text-md">
          {{ section.settings.welcome_text }}
        </p>
      </div>
    </div>
    <div class="image radius-16 overflow-hidden">
      <img src="{{ section.settings.welcome_image | img_url: 'master' }}" 
           data-src="{{ section.settings.welcome_image | img_url: 'master' }}" 
           alt="{{ section.settings.welcome_image.alt | escape }}" 
           class="lazyload">
    </div>
  </div>
</section>

<!-- Why Choose Section -->
<section class="flat-spacing-3">
  <div class="container">
    <div class="flat-title-2 text-center">
      <p class="display-md-2 fw-medium">
        {{ section.settings.why_choose_title }}
      </p>
      <p class="text-md text-main">
        {{ section.settings.why_choose_text }}
      </p>
    </div>
    <div class="row">
      <div class="col-xl-7 col-md-6">
        <ul class="list-esd d-md-flex flex-md-column justify-content-md-center h-100">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <li class="item">
                <h6>
                  {{ block.settings.title }}
                </h6>
                <p class="text-md">
                  {{ block.settings.text }}
                </p>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      <div class="col-xl-5 col-md-6">
        <div class="image radius-16 overflow-hidden w-100 h-100">
          <img src="{{ section.settings.why_choose_image | img_url: 'master' }}" 
               data-src="{{ section.settings.why_choose_image | img_url: 'master' }}" 
               alt="{{ section.settings.why_choose_image.alt | escape }}" 
               class="lazyload w-100 h-100 object-fit-cover">
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Style Curated Section -->
<section class="flat-spacing-3 pt-0">
  <div class="container">
    <div class="flat-title-2 d-xl-flex justify-content-xl-between">
      <div class="box-title">
        <p class="display-md-2 fw-medium">
          {{ section.settings.style_title }}
        </p>
        <p class="text-xl">
          {{ section.settings.style_subtitle }}
        </p>
      </div>
      <div class="box-text">
        <p class="text-md">
          {{ section.settings.style_text }}
        </p>
      </div>
    </div>
    <div dir="ltr" class="swiper tf-swiper" data-swiper='{
      "slidesPerView": 1,
      "spaceBetween": 12,
      "speed": 800,
      "observer": true,
      "observeParents": true,
      "pagination": { "el": ".sw-pagination-iconbox", "clickable": true },
      "breakpoints": {
        "575": { "slidesPerView":2, "spaceBetween": 12}, 
        "992": { "slidesPerView": 3, "spaceBetween": 24}
      }
    }'>
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.type == 'style_box' %}
            <div class="swiper-slide">
              <div class="tf-icon-box style-border">
                <div class="box-icon">
                  <i class="icon {{ block.settings.icon }}"></i>
                </div>
                <div class="content">
                  <h6 class="">{{ block.settings.title }}</h6>
                  <p class="text-sm text-line-clamp-4">
                    {{ block.settings.text }}
                  </p>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="d-flex d-xl-none sw-dot-default sw-pagination-iconbox justify-content-center">
      </div>
    </div>
  </div>
</section>

<!-- Testimonial Section -->
<section class="flat-spacing-15 pt-0">
  <div class="container">
    <div class="box-testimonial-quote text-center">
      <div class="list-star-default justify-content-center">
        {% for i in (1..5) %}
          <i class="icon-star text-green"></i>
        {% endfor %}
      </div>
      <p class="text-xl-2 lh-xl-32">
        {{ section.settings.testimonial_text }}
      </p>
      <div class="box-author">
        <div class="avt">
          <img src="{{ section.settings.testimonial_author_image | img_url: 'master' }}" 
               alt="{{ section.settings.testimonial_author_name | escape }}">
        </div>
        <p class="text-md lh-xl-26 fw-medium">
          {{ section.settings.testimonial_author_name }}
        </p>
      </div>
    </div>
  </div>
</section>

