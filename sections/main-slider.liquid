<!-- Slider -->
<section class="tf-slideshow {% if section.settings.layout == 'home-electronic' %}slider-electronic{% elsif section.settings.layout == 'fashion-women' %}slider-fashion-3{% elsif section.settings.layout == 'bicycle' %}slider-bicycle{% elsif section.settings.layout == 'phonecase' %}slider-phonecase{% else %}slider-fashion-1{% endif %} slider-default {% if section.settings.layout == 'fashion-women' %}space-abs-header{% endif %}">
    {% if section.settings.width == 'boxed' %}
        <div class="container">
        {% endif %}
    <div class="swiper tf-sw-slideshow slider-effect-fade" data-effect="fade" data-preview="1" data-tablet="1"
        data-mobile="1" data-centered="false" data-space="0" data-space-mb="0" data-loop="{{ section.settings.loop }}"
        data-auto-play="{{ section.settings.autoplay }}" data-speed="{{ section.settings.speed }}">
        <div class="swiper-wrapper">
            {% for block in section.blocks %}
                {% assign slide_class = '' %}
                {% if section.settings.layout == 'home-electronic' and block.settings.image_position == 'right' %}
                    {% assign slide_class = 'type-image-right' %}
                {% elsif section.settings.layout == 'home-electronic' and forloop.index == 2 %}
                    {% assign slide_class = 'reverse-slide' %}
                {% endif %}
                <div class="swiper-slide" {{ block.shopify_attributes }}>
                    <div class="slider-wrap bg-type-{{ forloop.index }} {{ slide_class }}">
                        <div class="image">
                            {% if block.settings.image != blank %}
                                <img src="{{ block.settings.image | img_url: 'master' }}"
                                    data-src="{{ block.settings.image | img_url: 'master' }}" 
                                    alt="{{ block.settings.image.alt | escape }}" 
                                    class="lazyload"
                                    width="{{ block.settings.image.width }}"
                                    height="{{ block.settings.image.height }}">
                            {% endif %}
                        </div>
                        <div class="box-content">
                                <div class="row">
                                    <div class="{% if section.settings.layout == 'home-electronic' and block.settings.content_position == 'right' %}offset-lg-8 col-lg-4 col-sm-6 offset-6{% elsif section.settings.layout == 'fashion-women' %}col-lg-5 col-md-6 col-sm-7 col-10{% elsif section.settings.layout == 'bicycle' %}col-lg-5 col-md-6 col-sm-10{% elsif section.settings.layout == 'phonecase' %}col-lg-5 col-md-6 col-sm-10{% else %}col-lg-12 col-sm-6{% endif %} col-12">
                                        <div class="content-slider {% if section.settings.layout == 'fashion-women' or section.settings.layout == 'bicycle' %}style-2{% endif %}">
                                            <div class="box-title-slider {% if section.settings.layout == 'fashion-women' %}text-center{% endif %}">
                                                {% if section.settings.layout == 'home-electronic' %}
                                                    <p class="sub text-md fw-medium fade-item fade-item-1 text-{{ block.settings.text_color }}">
                                                        {{ block.settings.subtitle }}
                                                    </p>
                                                    <h2 class="heading fw-medium fade-item fade-item-2 text-{{ block.settings.text_color }}">
                                                        {{ block.settings.heading }}
                                                    </h2>
                                                {% elsif section.settings.layout == 'fashion-women' %}
                                                    <p class="body-text-2 fw-semibold fade-item fade-item-1 font-2"></p>
                                                        {{ block.settings.subtitle }}
                                                    </p>
                                                    <div class="heading display-lg-3 fade-item fade-item-2 font-2">
                                                        {{ block.settings.heading }}
                                                    </div>
                                                    <p class="sub text-md fade-item fade-item-3 text-main">
                                                        {{ block.settings.subheading }}
                                                    </p>
                                                {% elsif section.settings.layout == 'bicycle' %}
                                                    <h2 class="heading display-xl-2 fw-medium fade-item fade-item-2">
                                                        {{ block.settings.heading }}
                                                    </h2>
                                                    <p class="sub text-xl-2 text-main fade-item fade-item-3">
                                                        {{ block.settings.subheading }}
                                                    </p>
                                                {% elsif section.settings.layout == 'phonecase' %}
                                                    <h2 class="heading display-xl-2 fw-medium fade-item fade-item-1 text-{{ block.settings.text_color }}">
                                                        {{ block.settings.heading }}
                                                    </h2>
                                                    <p class="sub text-xl fade-item fade-item-2 text-{{ block.settings.text_color }}">
                                                        {{ block.settings.subheading }}
                                                    </p>
                                                {% else %}
                                                    <h2 class="heading fw-medium fade-item fade-item-1 text-{{ block.settings.text_color }}">
                                                        {{ block.settings.heading }}
                                                    </h2>
                                                    <p class="sub text-md fade-item fade-item-2 text-{{ block.settings.text_color }}">
                                                        {{ block.settings.subheading }}
                                                    </p>
                                                {% endif %}
                                            </div>
                                            <div class="box-btn-slider {% if section.settings.layout == 'fashion-women' %}fade-item fade-item-4{% else %}fade-item fade-item-3{% endif %} {% if section.settings.layout == 'fashion-women' %}text-center{% endif %}">
                                                <a href="{{ block.settings.button_link }}" class="tf-btn {% if section.settings.layout == 'fashion-women' %}animate-btn font-2{% elsif section.settings.layout == 'bicycle' %}btn-space1 animate-btn btn-green-2{% elsif section.settings.layout == 'phonecase' %}fw-normal animate-btn{% elsif block.settings.button_color == 'white' %}btn-white fw-normal hover-primary{% else %}btn-dark2 animate-btn{% endif %}">
                                                    {{ block.settings.button_text }}
                                                    <i class="icon {% if section.settings.layout == 'bicycle' %}icon-arr-right3{% else %}icon-arr-right{% endif %}"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="wrap-pagination">
            {% if section.settings.width == 'boxed' %}
            <div class="container">
            {% endif %}
                <div class="sw-dots sw-pagination-slider justify-content-center swiper-pagination-clickable swiper-pagination-bullets swiper-pagination-horizontal {% if section.settings.layout == 'bicycle' or section.settings.layout == 'phonecase' %}style-2{% endif %}"></div>
            {% if section.settings.width == 'boxed' %}
            </div>
            {% endif %}
        </div>
    </div>
    {% if section.settings.width == 'boxed' %}
        </div>
        {% endif %}
</section>
<!-- /Slider -->

{% schema %}
{
    "name": "Hero Slider",
    "settings": [
        {
            "type": "select",
            "id": "layout",
            "label": "Section Layout",
            "options": [
                { "value": "default", "label": "Default Fashion" },
                { "value": "home-electronic", "label": "Home Electronic" },
                { "value": "fashion-women", "label": "Fashion Women" },
                { "value": "bicycle", "label": "Bicycle" },
                { "value": "phonecase", "label": "Phonecase" }
            ],
            "default": "default"
        },
        {
            "type": "select",
            "id": "width",
            "label": "Section Width",
            "options": [
                { "value": "full", "label": "Full Width" },
                { "value": "boxed", "label": "Boxed" }
            ],
            "default": "full"
        },
        {
            "type": "checkbox",
            "id": "autoplay",
            "label": "Enable autoplay",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "loop",
            "label": "Enable loop",
            "default": true
        },
        {
            "type": "range",
            "id": "speed",
            "min": 100,
            "max": 2000,
            "step": 100,
            "unit": "ms",
            "label": "Transition speed",
            "default": 800
        }
    ],
    "blocks": [
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Slide image"
                },
                {
                    "type": "select",
                    "id": "image_position",
                    "label": "Image Position",
                    "options": [
                        { "value": "left", "label": "Left" },
                        { "value": "right", "label": "Right" }
                    ],
                    "default": "left"
                },
                {
                    "type": "select",
                    "id": "content_position",
                    "label": "Content Position",
                    "options": [
                        { "value": "left", "label": "Left" },
                        { "value": "right", "label": "Right" }
                    ],
                    "default": "left"
                },
                {
                    "type": "select",
                    "id": "text_color",
                    "label": "Text Color",
                    "options": [
                        { "value": "dark-3", "label": "Dark" },
                        { "value": "white", "label": "White" }
                    ],
                    "default": "dark-3"
                },
                {
                    "type": "select",
                    "id": "button_color",
                    "label": "Button Color",
                    "options": [
                        { "value": "dark2", "label": "Dark" },
                        { "value": "white", "label": "White" }
                    ],
                    "default": "dark2"
                },
                {
                    "type": "text",
                    "id": "subtitle",
                    "label": "Subtitle",
                    "default": "SUMMER COLLECTION"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading",
                    "default": "Style Redefined"
                },
                {
                    "type": "text",
                    "id": "subheading",
                    "label": "Subheading",
                    "default": "Discover the latest trends in fashion that speak your style."
                },
                {
                    "type": "text",
                    "id": "button_text",
                    "label": "Button text",
                    "default": "Shop Now"
                },
                {
                    "type": "url",
                    "id": "button_link",
                    "label": "Button link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Hero Slider",
            "settings": {
                "layout": "fashion-women"
            },
            "blocks": [
                {
                    "type": "slide",
                    "settings": {
                        "subtitle": "SUMMER COLLECTION",
                        "heading": "Everyday Essentials",
                        "subheading": "Versatile pieces for all-day style",
                        "button_text": "Shop Collection"
                    }
                }
            ]
        },
        {
            "name": "Bicycle Slider",
            "settings": {
                "layout": "bicycle"
            },
            "blocks": [
                {
                    "type": "slide",
                    "settings": {
                        "heading": "Ride Into Adventure",
                        "subheading": "Find your perfect bike today",
                        "button_text": "Shop Collection"
                    }
                },
                {
                    "type": "slide",
                    "settings": {
                        "heading": "Adventure Awaits",
                        "subheading": "Find the perfect bike for your outdoor journeys",
                        "button_text": "Shop Collection"
                    }
                }
            ]
        },
        {
            "name": "Phonecase Slider",
            "settings": {
                "layout": "phonecase"
            },
            "blocks": [
                {
                    "type": "slide",
                    "settings": {
                        "heading": "Protect in Style",
                        "subheading": "Find the perfect case for your phone",
                        "button_text": "Shop Collection"
                    }
                }
            ]
        }
    ]
}
{% endschema %} 