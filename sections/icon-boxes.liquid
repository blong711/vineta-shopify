<div class="line-top flat-spacing-7">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <div class="flat-title wow fadeInUp">
        <h4 class="title">{{ section.settings.title }}</h4>
      </div>
    {%- endif -%}
    <div dir="ltr" class="swiper tf-swiper tf-sw-iconbox-row" data-swiper='{
      "slidesPerView": 1,
      "spaceBetween": 12,
      "speed": 800,
      "observer": true,
      "observeParents": true,
      "pagination": { "el": ".sw-pagination-iconbox", "clickable": true },
      "breakpoints": {
        "575": { "slidesPerView": 2, "spaceBetween": 12, "slidesPerGroup": 2}, 
        "768": { "slidesPerView": 3, "spaceBetween": 24, "slidesPerGroup": 2},
        "1200": { "slidesPerView": {{ section.settings.boxes_to_show }}, "spaceBetween": 59, "slidesPerGroup": {{ section.settings.boxes_to_show }}}
      }
    }'>
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            {% if block.settings.style == "1" %}
              <div class="tf-icon-box style-{{ block.settings.style }} wow fadeInLeft" {% if forloop.index > 1 %}data-wow-delay="{{ forloop.index | minus: 1 | times: 0.1 }}s"{% endif %}>
                <div class="box-icon">
                  <i class="icon {{ block.settings.icon }}"></i>
                </div>
                <div class="content">
                  <div class="title text-uppercase">{{ block.settings.title }}</div>
                  {% if block.settings.text != blank %}
                    <p class="desc">{{ block.settings.text }}</p>
                  {% endif %}
                </div>
              </div>
            {% else %}
              <div class="tf-icon-box style-{{ block.settings.style }}">
                <div class="box-icon">
                  <i class="icon {{ block.settings.icon }}"></i>
                </div>
                <div class="content">
                  <div class="title text-uppercase">{{ block.settings.title }}</div>
                </div>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
      <div class="d-flex d-xl-none sw-dot-default sw-pagination-iconbox justify-content-center"></div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Icon Boxes",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Our Services"
    },
    {
      "type": "range",
      "id": "boxes_to_show",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "Boxes to show at once",
      "default": 4,
      "info": "Number of icon boxes visible in the slider at the same time"
    }
  ],
  "blocks": [
    {
      "type": "icon_box",
      "name": "Icon Box",
      "settings": [
        {
          "type": "select",
          "id": "style",
          "label": "Box Style",
          "options": [
            {
              "value": "1",
              "label": "Style 1"
            },
            {
              "value": "2",
              "label": "Style 2"
            }
          ],
          "default": "2"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Icon Class",
          "default": "icon-shipping",
          "info": "Enter the icon class name (e.g., icon-shipping, icon-gift)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Free Shipping"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Enjoy free shipping on all orders"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon Boxes",
      "settings": {
        "title": "Our Services",
        "boxes_to_show": 4
      },
      "blocks": [
        {
          "type": "icon_box",
          "settings": {
            "style": "2",
            "icon": "icon-shipping",
            "title": "Free Shipping",
            "text": ""
          }
        },
        {
          "type": "icon_box",
          "settings": {
            "style": "2",
            "icon": "icon-gift",
            "title": "Gift Package",
            "text": ""
          }
        },
        {
          "type": "icon_box",
          "settings": {
            "style": "2",
            "icon": "icon-return",
            "title": "Free Returns",
            "text": ""
          }
        },
        {
          "type": "icon_box",
          "settings": {
            "style": "2",
            "icon": "icon-support",
            "title": "Support Online",
            "text": ""
          }
        }
      ]
    }
  ]
}
{% endschema %}