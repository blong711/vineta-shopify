{%- comment -%}Wishlist Section{%- endcomment -%}
<section class="s-account flat-spacing-4 pt_0">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="wrapper-shop tf-grid-layout tf-col-2 lg-col-3 xl-col-4 style-1" id="gridLayout">
          {% assign wishlist_ids = '' %}
          <script>
            const wishlistIds = localStorage.getItem('theme:wishlist:id') ? localStorage.getItem('theme:wishlist:id').split(',') : [];
            document.write(`<script>window.wishlistIds = ${JSON.stringify(wishlistIds)};<\/script>`);
          </script>
          
          {% for product in collections.all.products %}
            {% if wishlistIds contains product.id %}
              <div class="card-product grid file-delete style-wishlist style-3 {% if product.available == false %}out-of-stock{% endif %}">
                <i class="icon icon-close remove" data-wishlist data-id="{{ product.id }}" data-action="remove"></i>
                <div class="card-product-wrapper">
                  <a href="{{ product.url }}" class="product-img">
                    <img class="img-product lazyload"
                      data-src="{{ product.featured_image | img_url: '400x' }}"
                      src="{{ product.featured_image | img_url: '400x' }}"
                      alt="{{ product.title | escape }}">
                    {% if product.images[1] %}
                      <img class="img-hover lazyload"
                        data-src="{{ product.images[1] | img_url: '400x' }}"
                        src="{{ product.images[1] | img_url: '400x' }}"
                        alt="{{ product.title | escape }}">
                    {% endif %}
                  </a>
                  <ul class="list-product-btn">
                    <li>
                      <a href="#shoppingCart" data-bs-toggle="offcanvas" class="box-icon hover-tooltip">
                        <span class="icon icon-cart2"></span>
                        <span class="tooltip">Add to Cart</span>
                      </a>
                    </li>
                    <li>
                      <a href="#quickView" data-bs-toggle="modal" class="box-icon hover-tooltip quickview">
                        <span class="icon icon-view"></span>
                        <span class="tooltip">Quick View</span>
                      </a>
                    </li>
                    <li>
                      <a href="#compare" data-bs-toggle="modal" class="box-icon hover-tooltip compare">
                        <span class="icon icon-compare"></span>
                        <span class="tooltip">Add to Compare</span>
                      </a>
                    </li>
                  </ul>
                  {% if product.available == false %}
                    <div class="sold-out-badge">Sold Out</div>
                  {% endif %}
                </div>
                <div class="card-product-info">
                  <a href="{{ product.url }}" class="name-product link fw-medium text-md">{{ product.title }}</a>
                  <p class="price-wrap fw-medium">
                    <span class="price-new text-primary">{{ product.price | money }}</span>
                    {% if product.compare_at_price > product.price %}
                      <span class="price-old">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                  </p>
                  {% if product.has_only_default_variant == false %}
                    <ul class="list-color-product">
                      {% for option in product.options_with_values %}
                        {% if option.name == 'Color' or option.name == 'Colour' %}
                          {% for value in option.values %}
                            <li class="list-color-item color-swatch hover-tooltip tooltip-bot {% if forloop.first %}active{% endif %}">
                              <span class="tooltip color-filter">{{ value }}</span>
                              <span class="swatch-value bg-{{ value | handle }}"></span>
                              {% for image in product.images %}
                                {% if image.alt contains value %}
                                  <img class="lazyload" data-src="{{ image | img_url: '400x' }}" src="{{ image | img_url: '400x' }}" alt="{{ value }}">
                                {% endif %}
                              {% endfor %}
                            </li>
                          {% endfor %}
                        {% endif %}
                      {% endfor %}
                    </ul>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
          
          {% if wishlistIds.size == 0 %}
            <div class="col-12 text-center">
              <p class="empty-wishlist">Your wishlist is empty</p>
              <a href="{{ routes.all_products_collection_url }}" class="btn btn-primary">Continue Shopping</a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Wishlist",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 4,
      "max": 24,
      "step": 4,
      "label": "Products per page",
      "default": 12
    }
  ]
}
{% endschema %}

{{ 'wishlist.js' | asset_url | script_tag }}

{%- style -%}
  .empty-wishlist {
    text-align: center;
    padding: 40px 0;
  }
  .empty-wishlist .icon {
    font-size: 48px;
    color: #999;
    margin-bottom: 20px;
  }
  .empty-wishlist h3 {
    margin-bottom: 15px;
    font-size: 24px;
  }
  .empty-wishlist p {
    color: #666;
    margin-bottom: 20px;
  }
  .empty-wishlist .btn {
    display: inline-block;
    padding: 12px 30px;
    background: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
    transition: background 0.3s;
  }
  .empty-wishlist .btn:hover {
    background: #333;
  }
{%- endstyle -%}

<div class="container">
  <div class="row">
    <div class="col-12">
      <div id="wishlist-content">
        <!-- Wishlist items will be dynamically inserted here -->
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const wishlistContent = document.getElementById('wishlist-content');
  const wishlistItems = JSON.parse(localStorage.getItem('wishlist')) || [];

  if (wishlistItems.length === 0) {
    wishlistContent.innerHTML = `
      <div class="empty-wishlist">
        <span class="icon icon-heart"></span>
        <h3>Your wishlist is empty</h3>
        <p>Add items to your wishlist to see them here</p>
        <a href="/collections/all" class="btn">Continue Shopping</a>
      </div>
    `;
    return;
  }

  // Fetch product data for wishlist items
  fetch('/products.json?ids=' + wishlistItems.join(','))
    .then(response => response.json())
    .then(data => {
      const products = data.products;
      const wishlistHTML = products.map(product => `
        <div class="col-6 col-md-4 col-lg-3 mb-4">
          <div class="card-product" data-product-id="${product.id}">
            <div class="card-product-wrapper">
              <a href="${product.url}" class="product-img">
                <img class="img-product lazyload"
                  data-src="${product.images[0].src}"
                  src="${product.images[0].src}"
                  alt="${product.title}">
              </a>
              <ul class="list-product-btn">
                <li class="wishlist">
                  <a href="javascript:void(0);" class="hover-tooltip tooltip-left box-icon" data-wishlist data-id="${product.id}" data-action="remove">
                    <span class="icon icon-heart-fill"></span>
                    <span class="tooltip">Remove from Wishlist</span>
                  </a>
                </li>
              </ul>
            </div>
            <div class="card-product-info">
              <a href="${product.url}" class="name-product link fw-medium text-md">${product.title}</a>
              <p class="price-wrap fw-medium">
                <span class="price-new">${formatMoney(product.variants[0].price)}</span>
              </p>
            </div>
          </div>
        </div>
      `).join('');

      wishlistContent.innerHTML = `
        <div class="row">
          ${wishlistHTML}
        </div>
      `;
    })
    .catch(error => {
      console.error('Error fetching wishlist products:', error);
      wishlistContent.innerHTML = `
        <div class="empty-wishlist">
          <span class="icon icon-heart"></span>
          <h3>Error loading wishlist</h3>
          <p>Please try refreshing the page</p>
          <a href="/collections/all" class="btn">Continue Shopping</a>
        </div>
      `;
    });
});

function formatMoney(cents) {
  return (cents / 100).toLocaleString('en-US', {
    style: 'currency',
    currency: 'USD'
  });
}
</script>