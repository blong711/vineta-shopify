{% comment %}
  Collection Header Section
  - Displays collection title, description, and optional collection image
  - Matches Vineta style with clean typography and spacing
{% endcomment %}

<div class="collection-header">
  {% if section.settings.width == 'boxed' %}
    <div class="container">
  {% endif %}
    {% if section.settings.show_collection_image and collection.image %}
      <div class="collection-image">
        <img 
          class="lazyload"
          data-src="{{ collection.image | image_url }}"
          src="{{ collection.image | image_url: width: 100 }}"
          alt="{{ collection.title | escape }}"
          width="800"
          height="300"
        >
      </div>
    {% endif %}

    <div class="collection-info">
      <h1 class="collection-title">{{ collection.title }}</h1>
      {% if section.settings.show_collection_description and collection.description != blank %}
        <div class="collection-description">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>
  {% if section.settings.width == 'boxed' %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Collection Header",
  "settings": [
    {
      "type": "select",
      "id": "width",
      "label": "Section width",
      "options": [
        {
          "value": "full",
          "label": "Full width"
        },
        {
          "value": "boxed",
          "label": "Boxed"
        }
      ],
      "default": "boxed"
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "label": "Show collection image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "label": "Show collection description",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Collection Header",
      "category": "Collection"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.collection-header {
  padding: 40px 0;
  text-align: center;
}

.collection-image {
  margin-bottom: 30px;
  border-radius: 8px;
  overflow: hidden;
}

.collection-image img {
  width: 100%;
  max-height: 300px;
  object-fit: cover;
}

.collection-title {
  font-size: 36px;
  font-weight: 600;
  margin-bottom: 20px;
  color: var(--heading-color);
}

.collection-description {
  max-width: 800px;
  margin: 0 auto;
  font-size: 16px;
  line-height: 1.6;
  color: var(--text-color);
}

@media (max-width: 767px) {
  .collection-header {
    padding: 30px 0;
  }

  .collection-title {
    font-size: 28px;
  }

  .collection-description {
    font-size: 14px;
  }
}
{% endstylesheet %} 