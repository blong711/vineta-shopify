<section class="flat-spacing-4 pt-0">
  <div class="container">
    <div class="flat-title wow fadeInUp">
      <h4 class="title">{{ section.settings.title }}</h4>
    </div>
    <div dir="ltr" class="swiper tf-swiper shop-gram-slider" data-swiper='{
      "slidesPerView": 2,
      "spaceBetween": {{ section.settings.space_between }},
      "speed": {{ section.settings.animation_speed }},
      "observer": true,
      "observeParents": true,
      "slidesPerGroup": 2,
      "pagination": { "el": ".sw-pagination-gallery", "clickable": true },
      "breakpoints": {
        "768": { "slidesPerView": 3 },
        "1200": { "slidesPerView": {{ section.settings.items_per_row }} }
      }
    }'>
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <div class="gallery-item hover-img hover-overlay wow fadeInLeft" {% if forloop.index > 1 %}data-wow-delay="{{ forloop.index | minus: 1 | times: 0.1 }}s"{% endif %}>
              <div class="image img-style">
                {%- if block.settings.image != blank -%}
                  <img src="{{ block.settings.image | img_url: 'master' }}"
                       alt="{{ block.settings.image.alt | escape }}"
                       loading="lazy"
                       class="lazyload"
                       width="{{ block.settings.image.width }}"
                       height="{{ block.settings.image.height }}">
                {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
              {%- if block.settings.product != blank -%}
                <a href="{{ block.settings.product.url }}" class="box-icon hover-tooltip">
                  <span class="icon icon-cart2"></span>
                  <span class="tooltip">{{ 'products.product.view_details' | t }}</span>
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
      <span class="d-flex d-xl-none sw-dot-default sw-pagination-gallery justify-content-center"></span>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Shop Instagram",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Shop Our Instagram"
    },
    {
      "type": "text",
      "id": "instagram_username",
      "label": "Instagram Username"
    },
    {
      "type": "range",
      "id": "items_per_row",
      "min": 3,
      "max": 6,
      "step": 1,
      "label": "Items per row (desktop)",
      "default": 5
    },
    {
      "type": "range",
      "id": "space_between",
      "min": 10,
      "max": 50,
      "step": 5,
      "label": "Space between items",
      "default": 10
    },
    {
      "type": "range",
      "id": "animation_speed",
      "min": 400,
      "max": 1200,
      "step": 100,
      "label": "Animation speed (ms)",
      "default": 800
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Instagram Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop Instagram",
      "settings": {
        "title": "Shop Our Instagram"
      }
    }
  ]
}
{% endschema %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  // Initialize Swiper
  if (typeof Swiper !== 'undefined') {
    const swiperElements = document.querySelectorAll('.shop-gram-slider');
    swiperElements.forEach(function(element) {
      const options = element.dataset.swiper ? JSON.parse(element.dataset.swiper) : {};
      new Swiper(element, options);
    });
  }
});
{% endjavascript %} 