  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Will be scaled down to 32 x 32px"
      },
      {
        "type": "image_picker",
        "id": "apple_touch_icon",
        "label": "Apple Touch Icon",
        "info": "Will be scaled down to 180 x 180px"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "role": {
          "background": "scheme-1",
          "text": "scheme-2",
          "primary_button": "scheme-3",
          "secondary_button": "scheme-4",
          "primary_button_border": "scheme-3",
          "secondary_button_border": "scheme-4",
          "on_primary_button": "scheme-1",
          "on_secondary_button": "scheme-1",
          "links": "scheme-3",
          "icons": "scheme-3"
        },
        "definition": [
          {
            "type": "color",
            "id": "scheme-1",
            "label": "Scheme 1",
            "default": "#313030"
          },
          {
            "type": "color",
            "id": "scheme-2",
            "label": "Scheme 2",
            "default": "#7c8c47"
          },
          {
            "type": "color",
            "id": "scheme-3",
            "label": "Scheme 3",
            "default": "#d47b62"
          },
          {
            "type": "color",
            "id": "scheme-4",
            "label": "Scheme 4",
            "default": "#3f7b25"
          }
        ]
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Settings"
      },
      {
        "type": "radio",
        "id": "font_library",
        "label": "Font library",
        "options": [
          { "value": "shopify", "label": "Shopify" },
          { "value": "google", "label": "Google" }
        ],
        "default": "shopify"
      },
      {
        "type": "header",
        "content": "Shopify Font library"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Heading font",
        "default": "helvetica_n4"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body font",
        "default": "helvetica_n4"
      },
      {
        "type": "header",
        "content": "Google Font library"
      },
      {
        "type": "text",
        "id": "heading_font_family",
        "label": "Heading font family",
        "default": "'Helvetica Neue', Helvetica, Arial, sans-serif"
      },
      {
        "type": "range",
        "id": "heading_font_weight",
        "label": "Heading font weight",
        "min": 100,
        "max": 900,
        "step": 100,
        "default": 400
      },
      {
        "type": "text",
        "id": "body_font_family",
        "label": "Body font family",
        "default": "'Helvetica Neue', Helvetica, Arial, sans-serif"
      },
      {
        "type": "range",
        "id": "body_font_weight",
        "label": "Body font weight",
        "min": 100,
        "max": 900,
        "step": 100,
        "default": 400
      },
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "range",
        "id": "heading_font_size_scale",
        "label": "Font size scale",
        "min": 80,
        "max": 200,
        "step": 2,
        "unit": "%",
        "default": 100
      },
      {
        "type": "range",
        "id": "heading_line_height",
        "label": "Line height",
        "min": 1,
        "max": 2,
        "step": 0.1,
        "default": 1.2
      },
      {
        "type": "range",
        "id": "heading_letter_spacing",
        "label": "Letter spacing",
        "min": -5,
        "max": 10,
        "step": 1,
        "unit": "%",
        "default": 0
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "range",
        "id": "body_font_size_mobile",
        "label": "Base size (mobile)",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "range",
        "id": "body_font_size_desktop",
        "label": "Base size (tablet and desktop)",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "range",
        "id": "body_line_height",
        "label": "Line height",
        "min": 1,
        "max": 2,
        "step": 0.1,
        "default": 1.6
      },
      {
        "type": "range",
        "id": "body_letter_spacing",
        "label": "Letter spacing",
        "min": -5,
        "max": 10,
        "step": 1,
        "unit": "%",
        "default": 0
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Container Settings"
      },
      {
        "type": "select",
        "id": "container_width",
        "label": "Container Width",
        "options": [
          {
            "value": "1200px",
            "label": "1200px"
          },
          {
            "value": "1400px",
            "label": "1400px"
          },
          {
            "value": "1488px",
            "label": "1488px"
          },
          {
            "value": "1600px",
            "label": "1600px"
          },
          {
            "value": "1800px",
            "label": "1800px"
          },
          {
            "value": "1920px",
            "label": "1920px"
          }
        ],
        "default": "1488px"
      },
      {
        "type": "select",
        "id": "container_padding",
        "label": "Container Padding",
        "options": [
          {
            "value": "0",
            "label": "None"
          },
          {
            "value": "15px",
            "label": "Small"
          },
          {
            "value": "30px",
            "label": "Medium"
          },
          {
            "value": "60px",
            "label": "Large"
          }
        ],
        "default": "30px"
      },
      {
        "type": "header",
        "content": "Grid Settings"
      },
      {
        "type": "range",
        "id": "grid_gap",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Space Between Columns",
        "default": 30
      },
      {
        "type": "select",
        "id": "grid_columns",
        "label": "Default Grid Columns",
        "options": [
          {
            "value": "2",
            "label": "2 Columns"
          },
          {
            "value": "3",
            "label": "3 Columns"
          },
          {
            "value": "4",
            "label": "4 Columns"
          },
          {
            "value": "5",
            "label": "5 Columns"
          },
          {
            "value": "6",
            "label": "6 Columns"
          }
        ],
        "default": "4"
      },
      {
        "type": "header",
        "content": "Direction Settings"
      },
      {
        "type": "select",
        "id": "text_direction",
        "label": "Text Direction",
        "options": [
          {
            "value": "ltr",
            "label": "Left to Right (LTR)"
          },
          {
            "value": "rtl",
            "label": "Right to Left (RTL)"
          }
        ],
        "default": "ltr"
      },
      {
        "type": "checkbox",
        "id": "enable_rtl_switcher",
        "label": "Enable RTL Switcher",
        "info": "Adds a button to switch between RTL and LTR modes",
        "default": false
      },
      {
        "type": "header",
        "content": "Spacing"
      },
      {
        "type": "range",
        "id": "section_spacing",
        "min": 20,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Section Spacing",
        "default": 40
      },
      {
        "type": "range",
        "id": "element_spacing",
        "min": 10,
        "max": 50,
        "step": 5,
        "unit": "px",
        "label": "Element Spacing",
        "default": 20
      }
    ]
  },
  {
    "name": "Animations",
    "settings": [
      {
        "type": "header",
        "content": "Animation Settings"
      },
      {
        "type": "checkbox",
        "id": "enable_animations",
        "label": "Enable Animations",
        "default": true
      },
      {
        "type": "select",
        "id": "animation_style",
        "label": "Animation Style",
        "options": [
          {
            "value": "ease",
            "label": "Ease"
          },
          {
            "value": "ease-in",
            "label": "Ease In"
          },
          {
            "value": "ease-out",
            "label": "Ease Out"
          },
          {
            "value": "ease-in-out",
            "label": "Ease In Out"
          }
        ],
        "default": "ease-out"
      },
      {
        "type": "range",
        "id": "animation_duration",
        "min": 200,
        "max": 1000,
        "step": 50,
        "unit": "ms",
        "label": "Animation Duration",
        "default": 500
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "header",
        "content": "Search Settings"
      },
      {
        "type": "checkbox",
        "id": "show_search_suggestions",
