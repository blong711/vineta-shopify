      "type": "select",
      "id": "width",
      "label": "Section width",
      "options": [
        {
          "value": "full",
          "label": "Full width"
        },
        {
          "value": "boxed",
          "label": "Boxed"
        }
      ],
      "default": "boxed"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Latest Tips & Trends"
    },
    {
      "type": "article",
      "id": "article_1",
      "label": "Article 1"
    },
    {
      "type": "article",
      "id": "article_2",
      "label": "Article 2"
    },
    {
      "type": "article",
      "id": "article_3",
      "label": "Article 3"
    },
    {
      "type": "article",
      "id": "article_4",
      "label": "Article 4"
    },
    {
      "type": "header",
      "content": "Display Settings"
    },
    {
      "type": "checkbox",
      "id": "show_tags",
      "label": "Show Tags",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show Author",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show Date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_comments",
      "label": "Show Comments",
      "default": true
    },
    {
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "range",
      "id": "slides_per_view_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 1,
      "label": "Slides per view (Mobile)"
    },
    {
      "type": "range",
      "id": "slides_per_view_tablet",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2,
      "label": "Slides per view (Tablet)"
    },
    {
      "type": "range",
      "id": "slides_per_view_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "Slides per view (Desktop)"
    },
    {
      "type": "range",
      "id": "slides_per_group_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 1,
      "label": "Slides per group (Mobile)"
    },
    {
      "type": "range",
      "id": "slides_per_group_tablet",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2,
      "label": "Slides per group (Tablet)"
    },
    {
      "type": "range",
      "id": "slides_per_group_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "Slides per group (Desktop)"
    },
    {
      "type": "range",
      "id": "space_between_mobile",
      "min": 0,
      "max": 30,
      "step": 2,
      "default": 12,
      "label": "Space between slides (Mobile)"
    },
    {
      "type": "range",
      "id": "space_between_desktop",
      "min": 0,
      "max": 50,
      "step": 2,
      "default": 24,
      "label": "Space between slides (Desktop)"
    },
    {
      "type": "range",
      "id": "transition_speed",
      "min": 300,
      "max": 2000,
      "step": 100,
      "default": 800,
      "label": "Transition speed (ms)"
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "Show navigation arrows",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "label": "Show pagination dots",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable autoplay",
      "default": false
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 1000,
      "max": 9000,
      "step": 500,
      "default": 3000,
      "label": "Autoplay speed (ms)"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause autoplay on hover",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Latest Tips & Trends",
      "category": "Blog"
    }
  ]
}
{% endschema %}

<section class="flat-spacing-25">
  {% if section.settings.width == 'boxed' %}
