{%- comment -%}Related Products Section{%- endcomment -%}
<section class="flat-spacing {{ section.settings.padding_top }}">
  <div class="container">
    <div class="flat-title wow fadeInUp">
      <h4 class="title">{{ section.settings.title }}</h4>
    </div>
    <div class="fl-control-sw pos2">
      <div dir="ltr" class="swiper tf-swiper wrap-sw-over" data-swiper='{
        "slidesPerView": 2,
        "spaceBetween": 12,
        "speed": 800,
        "observer": true,
        "observeParents": true,
        "slidesPerGroup": 2,
        "navigation": {
          "clickable": true,
          "nextEl": ".nav-next-also",
          "prevEl": ".nav-prev-also"
        },
        "pagination": { "el": ".sw-pagination-also", "clickable": true },
        "breakpoints": {
          "768": { "slidesPerView": 3, "spaceBetween": 12, "slidesPerGroup": 3 },
          "1200": { "slidesPerView": 4, "spaceBetween": 24, "slidesPerGroup": 4}
        }
      }'>
        <div class="swiper-wrapper">
          {% assign related_products = collections.all.products | sort: section.settings.sort_by | sort_order: section.settings.sort_order | slice: 0, section.settings.products_to_show %}
          {% for product in related_products %}
            <div class="swiper-slide">
              {% render 'card-product',
                product: product,
                show_sale_badge: section.settings.show_sale_badge,
                show_color_swatches: section.settings.show_color_swatches
              %}
            </div>
          {% endfor %}
        </div>
        <div class="d-flex d-xl-none sw-dot-default sw-pagination-also justify-content-center"></div>
      </div>
      <div class="d-none d-xl-flex swiper-button-next nav-swiper nav-next-also"></div>
      <div class="d-none d-xl-flex swiper-button-prev nav-swiper nav-prev-also"></div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Related Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "You May Also Like"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Products to show",
      "default": 6
    },
    {
      "type": "select",
      "id": "sort_by",
      "label": "Sort products by",
      "options": [
        {
          "value": "created_at",
          "label": "Date created"
        },
        {
          "value": "price",
          "label": "Price"
        },
        {
          "value": "title",
          "label": "Title"
        },
        {
          "value": "best-selling",
          "label": "Best selling"
        }
      ],
      "default": "created_at"
    },
    {
      "type": "select",
      "id": "sort_order",
      "label": "Sort order",
      "options": [
        {
          "value": "asc",
          "label": "Ascending"
        },
        {
          "value": "desc",
          "label": "Descending"
        }
      ],
      "default": "desc"
    },
    {
      "type": "checkbox",
      "id": "show_sale_badge",
      "label": "Show sale badge",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_color_swatches",
      "label": "Show color swatches",
      "default": true
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "padding_top",
      "label": "Top padding",
      "options": [
        {
          "value": "pt-0",
          "label": "None"
        },
        {
          "value": "pt-1",
          "label": "Small"
        },
        {
          "value": "pt-2",
          "label": "Medium"
        },
        {
          "value": "pt-3",
          "label": "Large"
        }
      ],
      "default": "pt-0"
    }
  ]
}
{% endschema %}