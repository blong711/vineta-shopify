{%- if section.settings.show_section -%}
<section class="s-banner-countdown {% if section.settings.layout == 'home-phonecase' %}banner-cd-phonecase{% else %}banner-cd-fashion{% endif %}" 
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  {%- if section.settings.layout == 'home-phonecase' -%}
    <div class="banner-wrap">
      <div class="banner-content text-center">
        <div class="box-title {% if section.settings.enable_wow %}wow fadeInUp{% endif %}" {% if section.settings.enable_wow %}data-wow-delay="{{ section.settings.wow_delay }}"{% endif %}>
          {%- if section.settings.heading != blank -%}
            <h4 class="{% if section.settings.enable_custom_fonts %}{{ section.settings.heading_font }} {{ section.settings.heading_size }} {{ section.settings.heading_weight }}{% endif %}" 
                style="color: {{ section.settings.heading_color }};">
              {{ section.settings.heading }}
            </h4>
          {%- endif -%}
          {%- if section.settings.subheading != blank -%}
            <p class="sub {% if section.settings.enable_custom_fonts %}{{ section.settings.subheading_font }} {{ section.settings.subheading_size }} {{ section.settings.subheading_weight }}{% else %}text-md{% endif %}"
               style="color: {{ section.settings.subheading_color }};">
              {{ section.settings.subheading }}
            </p>
          {%- endif -%}
        </div>
        {%- if section.settings.show_countdown and section.settings.end_date != blank -%}
          {%- assign end_date = section.settings.end_date | date: '%Y-%m-%d %H:%M:%S' -%}
          <div class="box-countdown {% if section.settings.enable_wow %}wow fadeInUp{% endif %}" {% if section.settings.enable_wow %}data-wow-delay="{{ section.settings.wow_delay }}"{% endif %}>
            <div class="wg-countdown" style="background-color: {{ section.settings.countdown_bg_color }}; color: {{ section.settings.countdown_text_color }};">
              <span class="js-countdown" 
                    data-timer="{{ end_date }}"
                    data-labels="Days,Hours,Mins,Secs"></span>
            </div>
          </div>
        {%- endif -%}
        {%- if section.settings.button_label != blank -%}
          <div class="box-btn {% if section.settings.enable_wow %}wow fadeInUp{% endif %}" {% if section.settings.enable_wow %}data-wow-delay="{{ section.settings.wow_delay }}"{% endif %}>
            <a href="{{ section.settings.button_link }}" 
               class="tf-btn fw-normal animate-btn"
               style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};"
               onmouseover="this.style.backgroundColor='{{ section.settings.button_hover_bg_color }}'; this.style.color='{{ section.settings.button_hover_text_color }}';"
               onmouseout="this.style.backgroundColor='{{ section.settings.button_bg_color }}'; this.style.color='{{ section.settings.button_text_color }}';">
              {{ section.settings.button_label }}
            </a>
          </div>
        {%- endif -%}
      </div>
      <div class="image">
        {%- if section.settings.banner_image != blank -%}
          <img src="{{ section.settings.banner_image | img_url: 'master' }}"
            data-src="{{ section.settings.banner_image | img_url: 'master' }}"
            alt="{{ section.settings.heading | escape }}"
            width="{{ section.settings.banner_image.width }}"
            height="{{ section.settings.banner_image.height }}"
            class="lazyload {% if section.settings.enable_parallax %}effect-paralax{% endif %}">
        {%- else -%}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
  {%- else -%}
    <div class="container">
      <div class="s-banner-countdown banner-cd-fashion">
        <div class="image">
          {%- if section.settings.banner_image != blank -%}
            <img src="{{ section.settings.banner_image | img_url: 'master' }}"
              data-src="{{ section.settings.banner_image | img_url: 'master' }}"
              alt="{{ section.settings.heading | escape }}"
              width="{{ section.settings.banner_image.width }}"
              height="{{ section.settings.banner_image.height }}"
              class="lazyload {% if section.settings.enable_parallax %}effect-paralax{% endif %}">
          {%- else -%}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
        <div class="banner-content text-center">
          <div class="box-title {% if section.settings.enable_wow %}wow fadeInUp{% endif %}" {% if section.settings.enable_wow %}data-wow-delay="{{ section.settings.wow_delay }}"{% endif %}>
            {%- if section.settings.season_text != blank -%}
              <p class="season {% if section.settings.enable_custom_fonts %}{{ section.settings.subheading_font }} {{ section.settings.subheading_size }} {{ section.settings.subheading_weight }}{% else %}text-md fw-medium{% endif %}"
                 style="color: {{ section.settings.season_text_color }};">
                {{ section.settings.season_text }}
              </p>
            {%- endif -%}
            
            {%- if section.settings.heading != blank -%}
              <h2 class="{% if section.settings.enable_custom_fonts %}{{ section.settings.heading_font }} {{ section.settings.heading_size }} {{ section.settings.heading_weight }}{% else %}fw-medium{% endif %}"
                  style="color: {{ section.settings.heading_color }};">
                {{ section.settings.heading }}
              </h2>
            {%- endif -%}
            
            {%- if section.settings.promo_code != blank -%}
              <p class="sub {% if section.settings.enable_custom_fonts %}{{ section.settings.subheading_font }} {{ section.settings.subheading_size }} {{ section.settings.subheading_weight }}{% else %}text-md fw-medium{% endif %}"
                 style="color: {{ section.settings.promo_code_color }};">
                WITH PROMOTE CODE: {{ section.settings.promo_code }}
              </p>
            {%- endif -%}
          </div>
          {%- if section.settings.show_countdown and section.settings.end_date != blank -%}
            {%- assign end_date = section.settings.end_date | date: '%Y-%m-%d %H:%M:%S' -%}
            <div class="box-countdown d-flex justify-content-center {% if section.settings.enable_wow %}wow fadeInUp{% endif %}" {% if section.settings.enable_wow %}data-wow-delay="{{ section.settings.wow_delay }}"{% endif %}>
              <div class="wg-countdown-2" style="background-color: {{ section.settings.countdown_bg_color }}; color: {{ section.settings.countdown_text_color }};">
                <span class="js-countdown" 
                      data-timer="{{ end_date }}"
                      data-labels="Days,Hours,Mins,Secs"></span>
              </div>
            </div>
          {%- endif -%}
          
          {%- if section.settings.button_label != blank -%}
            <div class="box-btn {% if section.settings.enable_wow %}wow fadeInUp{% endif %}" {% if section.settings.enable_wow %}data-wow-delay="{{ section.settings.wow_delay }}"{% endif %}>
              <a href="{{ section.settings.button_link }}" 
                 class="tf-btn btn-white hover-primary"
                 style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};"
                 onmouseover="this.style.backgroundColor='{{ section.settings.button_hover_bg_color }}'; this.style.color='{{ section.settings.button_hover_text_color }}';"
                 onmouseout="this.style.backgroundColor='{{ section.settings.button_bg_color }}'; this.style.color='{{ section.settings.button_text_color }}';">
                {{ section.settings.button_label }}
              </a>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  {%- endif -%}
</section>
{%- endif -%}

