<style>
  .marquee-sale {
    overflow: hidden;
    white-space: nowrap;
    padding: 10px 0;
  }

  .marquee-wrapper {
    display: flex;
    animation: marquee {{ section.settings.speed | default: 20 }}s linear infinite;
  }

  .initial-child-container {
    display: flex;
    align-items: center;
  }

  .marquee-child-item {
    display: flex;
    align-items: center;
    margin: 0 20px;
  }

  .marquee-child-item i {
    color: #FFD700;
  }

  @keyframes marquee {
