{% comment %}
  Pickup Available Section
  This section displays pickup availability information and a popup with store locations
{% endcomment %}

{%- style -%}
  .pickup-available-section {
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
{%- endstyle -%}

<div class="pickup-available-section">
  {% if section.settings.show_pickup_info %}
    <div class="tf-product-pickup-available">
      <span class="icon icon-fill-check-circle"></span>
      <div class="content">
        <div class="text-sm d-flex">
          <p class="fw-medium" style="margin-right: 8px;">Pickup available at {{ section.settings.default_store_name }}.</p>
          <p>Usually ready in {{ section.settings.default_ready_time }}.</p>
        </div>
        <a href="#pickUp" data-bs-toggle="offcanvas" class="check-availability link">{{ section.settings.check_availability_text }}</a>
      </div>
    </div>
  {% endif %}

  <!-- Pickup Available Popup -->
  <div class="offcanvas offcanvas-end popup-style-1 popup-pickup-available" id="pickUp">
    <div class="canvas-wrapper">
      <div class="popup-header">
        <span class="title">{{ section.settings.popup_title }}</span>
        <span class="icon-close icon-close-popup" data-bs-dismiss="modal" aria-label="Close"></span>
      </div>
      <div class="popup-inner">
        <div class="pickup-available-list">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'store_location' %}
                <div class="pickup-available-item" {{ block.shopify_attributes }}>
                  <div class="title text-lg fw-medium">{{ block.settings.store_name }}</div>
                  <div class="desc d-flex gap-8 align-items-center">
                    <i class="icon icon-fill-check-circle"></i>
                    <div class="text-sm">Pickup available at <span class="fw-medium">{{ block.settings.store_display_name }}</span>.
                      Usually ready in {{ block.settings.ready_time }}.</div>
                  </div>
                  <ul>
                    {% if block.settings.address_line_1 != blank %}
                      <li class="text-sm text-main">{{ block.settings.address_line_1 }}</li>
                    {% endif %}
                    {% if block.settings.address_line_2 != blank %}
                      <li class="text-sm text-main">{{ block.settings.address_line_2 }}</li>
                    {% endif %}
                    {% if block.settings.city_state != blank %}
                      <li class="text-sm text-main">{{ block.settings.city_state }}</li>
                    {% endif %}
                    {% if block.settings.country != blank %}
                      <li class="text-sm text-main">{{ block.settings.country }}</li>
                    {% endif %}
                    {% if block.settings.phone != blank %}
                      <li class="text-sm text-main">{{ block.settings.phone }}</li>
                    {% endif %}
                  </ul>
                  {% if block.settings.directions_link != blank %}
                    <a href="{{ block.settings.directions_link }}" class="link text-sm fw-medium">
                      {{ block.settings.directions_text }} <i class="icon icon-arrow-top-left"></i>
                    </a>
                  {% endif %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Pickup Available",
  "settings": [
    {
      "type": "header",
      "content": "General Settings"
    },
    {
      "type": "checkbox",
      "id": "show_pickup_info",
      "label": "Show pickup information",
      "default": true
    },
    {
      "type": "text",
      "id": "default_store_name",
      "label": "Default store name",
      "default": "our store"
    },
    {
      "type": "text",
      "id": "default_ready_time",
      "label": "Default ready time",
      "default": "24 hours"
    },
    {
      "type": "text",
      "id": "check_availability_text",
      "label": "Check availability text",
      "default": "Check availability"
    },
    {
      "type": "text",
      "id": "popup_title",
      "label": "Popup title",
      "default": "Pickup Available"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "store_location",
      "name": "Store Location",
      "settings": [
        {
          "type": "text",
          "id": "store_name",
          "label": "Store name",
          "default": "Sydney"
        },
        {
          "type": "text",
          "id": "store_display_name",
          "label": "Store display name",
          "default": "Sydney Store"
        },
        {
          "type": "text",
          "id": "ready_time",
          "label": "Ready time",
          "default": "24 hours"
        },
        {
          "type": "text",
          "id": "address_line_1",
          "label": "Address line 1",
          "default": "15 George st"
        },
        {
          "type": "text",
          "id": "address_line_2",
          "label": "Address line 2"
        },
        {
          "type": "text",
          "id": "city_state",
          "label": "City, State, Postal Code",
          "default": "Sydney, NSW 2000"
        },
        {
          "type": "text",
          "id": "country",
          "label": "Country",
          "default": "Australia"
        },
        {
          "type": "text",
          "id": "phone",
          "label": "Phone number",
          "default": "+1 234 4567"
        },
        {
          "type": "url",
          "id": "directions_link",
          "label": "Directions link"
        },
        {
          "type": "text",
          "id": "directions_text",
          "label": "Directions text",
          "default": "Get direction"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Pickup Available",
      "blocks": [
        {
          "type": "store_location"
        }
      ]
    }
  ]
}
{% endschema %} 