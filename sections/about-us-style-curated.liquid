<!-- Style Curated Section -->
<section class="flat-spacing-3 pt-0" {{ section.shopify_attributes }}>
  <div class="container">
    <div class="flat-title-2 d-xl-flex justify-content-xl-between">
      <div class="box-title">
        <p class="display-md-2 fw-medium">
          {{ section.settings.title }}
        </p>
        <p class="text-xl">
          {{ section.settings.subtitle }}
        </p>
      </div>
      <div class="box-text">
        {{ section.settings.text }}
      </div>
    </div>
    <div dir="ltr" class="swiper tf-swiper" data-swiper='{
      "slidesPerView": {{ section.settings.slides_per_view_mobile }},
      "spaceBetween": {{ section.settings.space_between }},
      "speed": 800,
      "observer": true,
      "observeParents": true,
      "pagination": { "el": ".sw-pagination-iconbox", "clickable": true, "enabled": {{ section.settings.show_pagination }} },
      "autoplay": {% if section.settings.autoplay %}{ "delay": {{ section.settings.autoplay_speed }} }{% else %}false{% endif %},
      "breakpoints": {
        "575": { "slidesPerView": {{ section.settings.slides_per_view_tablet }}, "spaceBetween": {{ section.settings.space_between }}}, 
        "992": { "slidesPerView": {{ section.settings.slides_per_view_desktop }}, "spaceBetween": {{ section.settings.space_between }}}
      }
    }'>
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <div class="tf-icon-box style-border">
              <div class="box-icon">
                <i class="icon {{ block.settings.icon }}"></i>
              </div>
              <div class="content">
                <h6 class="">{{ block.settings.title }}</h6>
                <p class="text-sm text-main text-line-clamp-4">
                  {{ block.settings.text | remove: '<p>' | remove: '</p>'}}
                </p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="d-flex d-xl-none sw-dot-default sw-pagination-iconbox justify-content-center">
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Us Style Curated",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Style Curated Just for You"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Style Curated Just for You"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Our skilled stylists have thoughtfully assembled seasonal outfits that are both trendy and timeless. With a variety of looks, they're here to inspire your next fashion-forward ensemble.</p>"
    },
    {
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "range",
      "id": "slides_per_view_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Slides per view (Mobile)",
      "default": 1
    },
    {
      "type": "range",
      "id": "slides_per_view_tablet",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Slides per view (Tablet)",
      "default": 2
    },
    {
      "type": "range",
      "id": "slides_per_view_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Slides per view (Desktop)",
      "default": 3
    },
    {
      "type": "range",
      "id": "space_between",
      "min": 0,
      "max": 50,
      "step": 2,
      "label": "Space between slides",
      "default": 24
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "label": "Show pagination dots",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable autoplay",
      "default": false
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 1000,
      "max": 9000,
      "step": 500,
      "label": "Autoplay speed (ms)",
      "default": 3000
    }
  ],
  "blocks": [
    {
      "type": "style_box",
      "name": "Style Box",
      "limit": 3,
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "icon-precision",
              "label": "Precision"
            },
            {
              "value": "icon-elegance",
              "label": "Elegance"
            },
            {
              "value": "icon-fashion-body",
              "label": "Fashion Body"
            }
          ],
          "default": "icon-precision"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Style Box Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Style box description goes here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Us Style Curated",
      "category": "About Us",
      "blocks": [
        {
          "type": "style_box",
          "settings": {
            "icon": "icon-precision",
            "title": "Precision in Every Stitch",
            "text": "<p>At Vineta, we use only premium materials, ensuring our collections offer superior comfort and lasting durability. Every piece is crafted with care and attention to detail.</p>"
          }
        },
        {
          "type": "style_box",
          "settings": {
            "icon": "icon-elegance",
            "title": "Effortless Elegance",
            "text": "<p>Our designs embrace simplicity at its finest. Vineta's understated yet refined style captures the essence of modern fashion, making a statement.</p>"
          }
        },
        {
          "type": "style_box",
          "settings": {
            "icon": "icon-fashion-body",
            "title": "Fashion for Every Body",
            "text": "<p>We celebrate individuality with a diverse range of sizes, offering clothing that fits and flatters every body type. At Vineta, fashion is for everyone.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %} 