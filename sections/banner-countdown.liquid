<!-- Banner Countdown -->
{% if section.settings.layout == 'home-phonecase' %}
    <section class="s-banner-countdown banner-cd-phonecase">
        <div class="banner-wrap">
            <div class="banner-content text-center">
                <div class="box-title">
                    <h4>{{ section.settings.title }}</h4>
                    <p class="sub text-md">{{ section.settings.subtitle }}</p>
                </div>
                <div class="box-countdown">
                    <div class="wg-countdown">
                        <span class="js-countdown d-flex justify-content-center" 
                            data-timer="{{ section.settings.countdown_timer }}"
                            data-labels="{{ section.settings.countdown_labels }}"></span>
                    </div>
                </div>
                <div class="box-btn">
                    <a href="{{ section.settings.button_link }}" class="tf-btn fw-normal animate-btn">
                        {{ section.settings.button_text }}
                    </a>
                </div>
            </div>
            <div class="image">
                {% if section.settings.image != blank %}
                    <img src="{{ section.settings.image | img_url: 'master' }}"
                        data-src="{{ section.settings.image | img_url: 'master' }}" 
                        alt="{{ section.settings.image.alt | escape }}" 
                        class="lazyload effect-paralax"
                        width="{{ section.settings.image.width }}"
                        height="{{ section.settings.image.height }}">
                {% endif %}
            </div>
        </div>
    </section>
{% else %}
    <div class="flat-spacing-3">
        <div class="container">
            <div class="row">
                {% for block in section.blocks %}
                    <div class="col-lg-6 col-md-12" {{ block.shopify_attributes }}>
                        <div class="wg-banner style-1 wow fadeInUp">
                            <div class="image">
                                {% if block.settings.image != blank %}
                                    <img src="{{ block.settings.image | img_url: 'master' }}"
                                        data-src="{{ block.settings.image | img_url: 'master' }}" 
                                        alt="{{ block.settings.image.alt | escape }}" 
                                        class="lazyload"
                                        width="{{ block.settings.image.width }}"
                                        height="{{ block.settings.image.height }}">
                                {% endif %}
                            </div>
                            <div class="content">
                                <h3 class="title">{{ block.settings.title }}</h3>
                                <p class="text">{{ block.settings.text }}</p>
                                <div class="countdown" data-countdown="{{ block.settings.countdown_date }}"></div>
                                <a href="{{ block.settings.button_link }}" class="tf-btn btn-dark2">{{ block.settings.button_text }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
<!-- /Banner Countdown -->

