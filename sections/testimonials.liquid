        },
        {
            "type": "url",
            "id": "testimonial1_product_url",
            "label": "Product URL"
        },
        {
            "type": "text",
            "id": "testimonial1_price",
            "label": "Product Price",
            "default": "$150.00"
        },
        {
            "type": "textarea",
