{%- comment -%}Header Section{%- endcomment -%}
<header id="header" class="header-default">
  <div class="container">
    <div class="row wrapper-header align-items-center">
      <div class="col-md-4 col-3 d-xl-none">
        <a href="#mobileMenu" class="mobile-menu" data-bs-toggle="offcanvas" aria-controls="mobileMenu">
          <i class="icon icon-categories1"></i>
        </a>
      </div>
      
      <div class="col-xl-2 col-md-4 col-6">
        <a href="{{ routes.root_url }}" class="logo-header">
          {%- if section.settings.logo != blank -%}
            <img src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}"
              alt="{{ section.settings.logo.alt | default: shop.name }}"
              width="{{ section.settings.logo_width }}"
              height="{{ section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio }}"
              class="logo">
          {%- else -%}
            <span class="h4">{{ shop.name }}</span>
          {%- endif -%}
        </a>
      </div>

      <div class="col-xl-8 d-none d-xl-block">
        <nav class="box-navigation text-center">
          {%- if section.settings.menu != blank -%}
            <ul class="box-nav-menu">
              {%- for link in section.settings.menu.links -%}
                <li class="menu-item{% if link.links.size > 0 %} has-submenu{% endif %}">
                  <a href="{{ link.url }}" class="item-link">
                    {{ link.title }}
                    {%- if link.links.size > 0 -%}
                      <i class="icon icon-arr-down"></i>
                    {%- endif -%}
                  </a>
                  {%- if link.links.size > 0 -%}
                    <div class="mega-menu">
                      <div class="container">
                        <div class="row">
                          <div class="col-md-8">
                            <div class="row">
                              {%- for childlink in link.links -%}
                                <div class="col-md-4 mega-menu-column">
                                  <div class="mega-menu-title">
                                    <a href="{{ childlink.url }}" class="menu-link-text">{{ childlink.title }}</a>
                                  </div>
                                  {%- if childlink.links.size > 0 -%}
                                    <ul class="mega-menu-list">
                                      {%- for grandchildlink in childlink.links -%}
                                        <li>
                                          <a href="{{ grandchildlink.url }}" class="menu-link-text">
                                            {{ grandchildlink.title }}
                                          </a>
                                        </li>
                                      {%- endfor -%}
                                    </ul>
                                  {%- endif -%}
                                </div>
                              {%- endfor -%}
                            </div>
                          </div>
                          <div class="col-md-4">
                            <div class="row">
                              <div class="col-6">
                                {%- if section.settings.collection1 != blank -%}
                                  {%- assign collection1 = collections[section.settings.collection1] -%}
                                  <div class="mega-menu-collection">
                                    <a href="{{ collection1.url }}" class="mega-menu-image">
                                      {%- if collection1.image != blank -%}
                                        <img src="{{ collection1.image | image_url: width: 300 }}"
                                          alt="{{ collection1.title }}"
                                          width="300"
                                          loading="lazy">
                                      {%- endif -%}
                                      <div class="mega-menu-collection-info">
                                        <h4>{{ collection1.title }}</h4>
                                        {%- if section.settings.show_product_count -%}
                                          <p>{{ collection1.products_count }} products</p>
                                        {%- endif -%}
                                      </div>
                                    </a>
                                  </div>
                                {%- endif -%}
                              </div>
                              <div class="col-6">
                                {%- if section.settings.collection2 != blank -%}
                                  {%- assign collection2 = collections[section.settings.collection2] -%}
                                  <div class="mega-menu-collection">
                                    <a href="{{ collection2.url }}" class="mega-menu-image">
                                      {%- if collection2.image != blank -%}
                                        <img src="{{ collection2.image | image_url: width: 300 }}"
                                          alt="{{ collection2.title }}"
                                          width="300"
                                          loading="lazy">
                                      {%- endif -%}
                                      <div class="mega-menu-collection-info">
                                        <h4>{{ collection2.title }}</h4>
                                        {%- if section.settings.show_product_count -%}
                                          <p>{{ collection2.products_count }} products</p>
                                        {%- endif -%}
                                      </div>
                                    </a>
                                  </div>
                                {%- endif -%}
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </nav>
      </div>

      <div class="col-xl-2 col-md-4 col-3">
        <ul class="nav-icon d-flex justify-content-end align-items-center">
          {%- if section.settings.show_search -%}
            <li class="nav-search">
              <a href="#search" data-bs-toggle="offcanvas" class="nav-icon-item">
                <i class="icon icon-search"></i>
              </a>
            </li>
          {%- endif -%}

          {%- if section.settings.show_account -%}
            <li class="nav-account">
              <a href="javascript:void(0);" class="nav-icon-item" data-bs-toggle="offcanvas" data-bs-target="#login">
                <i class="icon icon-user"></i>
              </a>
            </li>
          {%- endif -%}

          {%- if section.settings.show_wishlist -%}
            <li class="nav-wishlist">
              <a href="pages/wishlist" class="nav-icon-item">
                <i class="icon icon-heart"></i>
                <span class="count-box wishlist-count">0</span>
              </a>
            </li>
          {%- endif -%}

          {%- if section.settings.show_cart -%}
            <li class="nav-cart">
              <a href="#shoppingCart" data-bs-toggle="offcanvas" class="nav-icon-item">
                <i class="icon icon-cart"></i>
                <span class="count-box">{{ cart.item_count }}</span>
              </a>
            </li>
          {%- endif -%}
        </ul>
      </div>
    </div>
  </div>
</header>

<style>
.mega-menu {
  position: absolute;
  left: 0;
  right: 0;
  top: 100%;
  background: #fff;
  box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  padding: 30px 0;
  z-index: 100;
}

.has-submenu:hover .mega-menu {
  opacity: 1;
  visibility: visible;
}

.mega-menu-column {
  padding: 15px;
}

.mega-menu-title {
  font-weight: 600;
  margin-bottom: 15px;
  border-bottom: 1px solid #eee;
  padding-bottom: 10px;
}

.mega-menu-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.mega-menu-list li {
  margin-bottom: 8px;
}

.mega-menu-list a {
  color: #666;
  text-decoration: none;
  transition: color 0.3s ease;
}

.mega-menu-list a:hover {
  color: var(--primary-color);
}

.mega-menu-image {
  display: block;
  position: relative;
  overflow: hidden;
  border-radius: 8px;
}

.mega-menu-image img {
  width: 100%;
  height: auto;
  transition: transform 0.3s ease;
}

.mega-menu-image:hover img {
  transform: scale(1.05);
}

.mega-menu-promo-text {
  position: absolute;
  bottom: 20px;
  left: 20px;
  right: 20px;
  background: rgba(255,255,255,0.9);
  padding: 15px;
  border-radius: 4px;
  text-align: center;
  font-weight: 500;
}

.mega-menu-collection {
  position: relative;
  margin-bottom: 20px;
  overflow: hidden;
  border-radius: 8px;
  aspect-ratio: 3/4;
}

.mega-menu-collection .mega-menu-image {
  display: block;
  position: relative;
  overflow: hidden;
  height: 100%;
}

.mega-menu-collection img {
  width: 100%;
  height: auto;
  display: block;
  transition: transform 0.3s ease;
}

.mega-menu-collection:hover img {
  transform: scale(1.05);
}

.mega-menu-collection-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 15px;
  background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
  color: #fff;
  text-align: center;
}

.mega-menu-collection-info h4 {
  margin: 0;
  font-size: 16px;
  font-weight: 500;
}

.mega-menu-collection-info p {
  margin: 5px 0 0;
  font-size: 14px;
  opacity: 0.8;
}
</style>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 10,
      "default": 150,
      "unit": "px",
      "label": "Logo width"
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "header",
      "content": "Mega Menu Promo"
    },
    {
      "type": "image_picker",
      "id": "menu_promo_image",
      "label": "Promo image"
    },
    {
      "type": "url",
      "id": "menu_promo_url",
      "label": "Promo URL"
    },
    {
      "type": "text",
      "id": "menu_promo_text",
      "label": "Promo text"
    },
    {
      "type": "header",
      "content": "Header Icons"
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show search",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_account",
      "label": "Show account",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_wishlist",
      "label": "Show wishlist",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_cart",
      "label": "Show cart",
      "default": true
    },
    {
      "type": "header",
      "content": "Mega Menu Collections"
    },
    {
      "type": "collection",
      "id": "collection1",
      "label": "Collection 1"
    },
    {
      "type": "collection",
      "id": "collection2",
      "label": "Collection 2"
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "Show product count",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Header",
      "settings": {
        "logo_width": 150,
        "show_search": true,
        "show_account": true,
        "show_wishlist": true,
        "show_cart": true
      }
    }
  ]
}
{% endschema %}

{% stylesheet %}
.header-right {
  display: flex;
  align-items: center;
  gap: 20px;
}

.header-right-wrap {
  display: flex;
  align-items: center;
  gap: 20px;
}

.header-search {
  position: relative;
}

.header-search-form {
  display: flex;
  align-items: center;
}

.header-search-form input {
  width: 200px;
  padding: 8px 15px;
  border: 1px solid #eee;
  border-radius: 4px;
}

.header-search-btn {
  background: none;
  border: none;
  padding: 8px;
  cursor: pointer;
}

.header-cart {
  position: relative;
}

.cart-button {
  display: flex;
  align-items: center;
  gap: 5px;
  text-decoration: none;
  color: inherit;
}

.cart-count {
  position: absolute;
  top: -8px;
  right: -8px;
  background: var(--primary-color);
  color: #fff;
  font-size: 12px;
  padding: 2px 6px;
  border-radius: 10px;
  min-width: 18px;
  text-align: center;
}
{% endstylesheet %} 