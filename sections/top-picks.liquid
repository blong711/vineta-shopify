<style>
  .flat-spacing-8 {
    padding: 80px 0;
  }

  .bg-surface {
    background-color: #f8f9fa;
  }

  .flat-title.style-between {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 40px;
  }

  .box-title .title {
    font-size: 24px;
    margin-bottom: 10px;
  }

  .box-title .desc {
    color: #666;
  }

  .btn-underline {
    color: #007bff;
    text-decoration: none;
    position: relative;
    padding-bottom: 5px;
  }

  .btn-underline:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: #007bff;
    transition: transform 0.3s ease;
    transform: scaleX(0);
  }

  .btn-underline:hover:after {
    transform: scaleX(1);
  }

  .card-product {
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .card-product:hover {
    transform: translateY(-5px);
  }

  .product-img {
    position: relative;
    display: block;
    padding-top: 100%;
  }

  .product-img img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }

  .img-hover {
    opacity: 0;
  }

  .product-img:hover .img-product {
    opacity: 0;
  }

  .product-img:hover .img-hover {
    opacity: 1;
  }

  .on-sale-wrap {
    position: absolute;
    top: 15px;
    left: 15px;
    z-index: 1;
  }

  .on-sale-item {
    display: inline-block;
    padding: 5px 10px;
    background: #007bff;
    color: #fff;
    font-size: 12px;
    border-radius: 4px;
    margin-bottom: 5px;
  }

  .on-sale-item.trending {
    background: #28a745;
  }

  .list-product-btn {
    position: absolute;
    top: 15px;
    right: 15px;
    list-style: none;
    padding: 0;
    margin: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .card-product:hover .list-product-btn {
    opacity: 1;
  }

  .list-product-btn li {
    margin-bottom: 10px;
  }

  .box-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: #fff;
    border-radius: 50%;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
  }

  .box-icon:hover {
    background: #007bff;
    color: #fff;
  }

  .card-product-info {
    padding: 20px;
  }

  .name-product {
    color: #333;
    text-decoration: none;
    margin-bottom: 10px;
    display: block;
  }

  .price-wrap {
    margin-bottom: 15px;
  }

  .price-new {
    color: #007bff;
    font-size: 18px;
  }

  .price-old {
    color: #999;
    text-decoration: line-through;
    margin-left: 10px;
  }

  .list-color-product {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .color-swatch {
    position: relative;
    margin: 0 5px;
    cursor: pointer;
  }

  .swatch-value {
    display: block;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 0 0 0 1px #ddd;
  }

  .color-swatch.active .swatch-value {
    box-shadow: 0 0 0 2px #007bff;
  }

  .tooltip {
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: #333;
    color: #fff;
    padding: 5px 10px;
    border-radius: 4px;
    font-size: 12px;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .hover-tooltip:hover .tooltip {
    opacity: 1;
    visibility: visible;
  }

  .tooltip-left {
    left: auto;
    right: 100%;
    transform: none;
    margin-right: 10px;
  }

  .tooltip-bot {
    bottom: auto;
    top: 100%;
    margin-top: 10px;
  }
</style> 