<div class="line-top flat-spacing-{{ section.settings.spacing }} section-{{ section.id }}-padding">
  <div class="container">
    {% if section.settings.layout == 'layout1' %}
      <div class="mw-1 m-auto">
    {% endif %}
    <div dir="ltr" class="swiper tf-swiper {% if section.settings.layout == 'layout2' %}tf-sw-iconbox-row{% endif %} wow fadeInUp" data-swiper='{
      "slidesPerView": {{ section.settings.slides_per_view_mobile }},
      "spaceBetween": {{ section.settings.space_between_mobile }},
      "speed": 800,
      "observer": true,
      "observeParents": true,
      "slidesPerGroup": {{ section.settings.slides_per_view_mobile }},
      "pagination": { "el": ".sw-pagination-iconbox", "clickable": true },
      "breakpoints": {
        "575": { 
          "slidesPerView": {{ section.settings.slides_per_view_tablet }}, 
          "spaceBetween": {{ section.settings.space_between_tablet }},
          "slidesPerGroup": {{ section.settings.slides_per_view_tablet }}
        },
        "768": { 
          "slidesPerView": {{ section.settings.slides_per_view_desktop }}, 
          "spaceBetween": {{ section.settings.space_between_desktop }},
          "slidesPerGroup": {{ section.settings.slides_per_view_desktop }}
        }
      }
    }'>
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <div class="tf-icon-box style-{{ section.settings.style }} {% if section.settings.layout == 'layout2' %}wow fadeInLeft{% endif %}" 
              {% if section.settings.layout == 'layout2' %}data-wow-delay="{{ forloop.index | minus: 1 | times: 0.1 }}s"{% endif %}>
              <div class="box-icon">
                <i class="icon icon-{{ block.settings.icon }}"></i>
              </div>
              <div class="content">
                <div class="title {% if section.settings.layout == 'layout2' %}text-uppercase{% endif %}">{{ block.settings.title }}</div>
                {% if section.settings.layout == 'layout1' %}
                  <p class="desc">{{ block.settings.description }}</p>
                {% endif %}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
      <div class="d-flex d-xl-none sw-dot-default sw-pagination-iconbox justify-content-center"></div>
    </div>
    {% if section.settings.layout == 'layout1' %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Icon boxes",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "layout1",
          "label": "Layout 1 (With description)"
        },
        {
          "value": "layout2",
          "label": "Layout 2 (Minimal)"
        }
      ],
      "default": "layout1"
    },
    {
      "type": "select",
      "id": "style",
      "label": "Style",
      "options": [
        {
          "value": "2",
          "label": "Style 2"
        },
        {
          "value": "3",
          "label": "Style 3"
        }
      ],
      "default": "2"
    },
    {
      "type": "select",
      "id": "spacing",
      "label": "Spacing",
      "options": [
        {
          "value": "5",
          "label": "Spacing 5"
        },
        {
          "value": "7",
          "label": "Spacing 7"
        }
      ],
      "default": "5"
    },
    {
      "type": "header",
      "content": "Mobile settings"
    },
    {
      "type": "range",
      "id": "slides_per_view_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Slides per view",
      "default": 1
    },
    {
      "type": "range",
      "id": "space_between_mobile",
      "min": 0,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Space between slides",
      "default": 12
    },
    {
      "type": "header",
      "content": "Tablet settings"
    },
    {
      "type": "range",
      "id": "slides_per_view_tablet",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Slides per view",
      "default": 2
    },
    {
      "type": "range",
      "id": "space_between_tablet",
      "min": 0,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Space between slides",
      "default": 12
    },
    {
      "type": "header",
      "content": "Desktop settings"
    },
    {
      "type": "range",
      "id": "slides_per_view_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Slides per view",
      "default": 4
    },
    {
      "type": "range",
      "id": "space_between_desktop",
      "min": 0,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Space between slides",
      "default": 42
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "icon_box",
      "name": "Icon box",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "shipping",
              "label": "Shipping"
            },
            {
              "value": "gift",
              "label": "Gift"
            },
            {
              "value": "return",
              "label": "Return"
            },
            {
              "value": "support",
              "label": "Support"
            }
          ],
          "default": "shipping"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Free Shipping"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Enjoy free shipping on all orders"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon boxes",
      "blocks": [
        {
          "type": "icon_box",
          "settings": {
            "icon": "shipping",
            "title": "Free Shipping",
            "description": "Enjoy free shipping on all orders"
          }
        },
        {
          "type": "icon_box",
          "settings": {
            "icon": "gift",
            "title": "Gift Package",
            "description": "Perfectly packaged for gifting"
          }
        },
        {
          "type": "icon_box",
          "settings": {
            "icon": "return",
            "title": "Free Returns",
            "description": "Within 14 days for a return"
          }
        },
        {
          "type": "icon_box",
          "settings": {
            "icon": "support",
            "title": "Support Online",
            "description": "We support customers 24/7"
          }
        }
      ]
    }
  ]
}
{% endschema %}