<section class="bg-surface flat-spacing-8">
  <div class="container">
    <div class="flat-title mb_1 style-between wow fadeInUp">
      <div class="box-title">
        <h4 class="title">{{ section.settings.title }}</h4>
        <p class="desc text-main text-md">{{ section.settings.description }}</p>
      </div>
      <div class="wg-countdown-2">
        <span class="js-countdown" data-timer="{{ section.settings.global_countdown }}" data-labels="Days,Hours,Mins,Secs"></span>
      </div>
    </div>
    <div class="fl-control-sw wow fadeInUp">
      <div dir="ltr" class="swiper tf-swiper sw-height" data-swiper='{
        "slidesPerView": 2,
        "spaceBetween": 12,
        "speed": 800,
        "observer": true,
        "observeParents": true,
        "slidesPerGroup": 2,
        "navigation": {
          "clickable": true,
          "nextEl": ".nav-next-deal",
          "prevEl": ".nav-prev-deal"
        },
        "pagination": { "el": ".sw-pagination-deal", "clickable": true },
        "breakpoints": {
          "768": { "slidesPerView": 3, "spaceBetween": 12, "slidesPerGroup": 3 },
          "1200": { "slidesPerView": 4, "spaceBetween": 24, "slidesPerGroup": 4 }
        }
      }'>
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
            <div class="swiper-slide" {{ block.shopify_attributes }}>
              <div class="card-product style-center">
                <div class="card-product-wrapper">
                  <a href="{{ block.settings.product.url }}" class="product-img">
                    {%- if block.settings.product.featured_image != blank -%}
                      {{ block.settings.product.featured_image | image_url: width: 300 | image_tag:
                        loading: 'lazy',
                        width: 300,
                        height: 300,
                        class: 'img-product lazyload'
                      }}
                    {%- endif -%}
                    {%- if block.settings.hover_image != blank -%}
                      {{ block.settings.hover_image | image_url: width: 300 | image_tag:
                        loading: 'lazy',
                        width: 300,
                        height: 300,
                        class: 'img-hover lazyload'
                      }}
                    {%- endif -%}
                  </a>
                  {%- if block.settings.show_sale_badge -%}
                    <div class="on-sale-wrap">
                      <span class="on-sale-item">{{ block.settings.sale_text }}</span>
                    </div>
                  {%- endif -%}
                  <ul class="list-product-btn">
                    <li>
                      <a href="#shoppingCart" data-bs-toggle="offcanvas" class="bg-surface hover-tooltip tooltip-left box-icon">
                        <span class="icon icon-cart2"></span>
                        <span class="tooltip">Add to Cart</span>
                      </a>
                    </li>
                    <li class="wishlist">
                      <a href="javascript:void(0);" class="bg-surface hover-tooltip tooltip-left box-icon">
                        <span class="icon icon-heart2"></span>
                        <span class="tooltip">Add to Wishlist</span>
                      </a>
                    </li>
                    <li>
                      <a href="#quickView" data-bs-toggle="modal" class="bg-surface hover-tooltip tooltip-left box-icon quickview">
                        <span class="icon icon-view"></span>
                        <span class="tooltip">Quick View</span>
                      </a>
                    </li>
                    <li class="compare">
                      <a href="#compare" data-bs-toggle="modal" class="bg-surface hover-tooltip tooltip-left box-icon">
                        <span class="icon icon-compare"></span>
                        <span class="tooltip">Add to Compare</span>
                      </a>
                    </li>
                  </ul>
                  <div class="countdown-box style-2">
                    <div class="js-countdown" data-timer="{{ block.settings.countdown_timer }}" data-labels="D  :,H  :,M  :,S"></div>
                  </div>
                </div>
                <div class="card-product-info text-center">
                  <a href="{{ block.settings.product.url }}" class="name-product link fw-medium text-md">{{ block.settings.product.title }}</a>
                  <p class="price-wrap fw-medium">
                    {%- if block.settings.show_compare_price -%}
                      <span class="price-new text-primary">{{ block.settings.product.price | money }}</span>
                      <span class="price-old old-line">{{ block.settings.product.compare_at_price | money }}</span>
                    {%- else -%}
                      <span class="price-new">{{ block.settings.product.price | money }}</span>
                    {%- endif -%}
                  </p>
                  {%- if block.settings.show_color_swatches -%}
                    <ul class="list-color-product justify-content-center">
                      {%- for color in block.settings.color_swatches -%}
                        <li class="list-color-item color-swatch hover-tooltip tooltip-bot {% if forloop.first %}active{% endif %}">
                          <span class="tooltip">{{ color.name }}</span>
                          <span class="swatch-value {{ color.class }}"></span>
                          {%- if color.image != blank -%}
                            {{ color.image | image_url: width: 100 | image_tag:
                              loading: 'lazy',
                              width: 100,
                              height: 100,
                              class: 'lazyload'
                            }}
                          {%- endif -%}
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                  <div class="product-progress-sale">
                    <div class="progress-sold progress" role="progressbar" aria-valuemin="0" aria-valuemax="100">
                      <div class="progress-bar {{ block.settings.progress_bar_class }}" style="width: {{ block.settings.progress_value }}%"></div>
                    </div>
                    <p class="text-avaiable text-sm">Available: <span class="fw-medium {{ block.settings.available_text_class }}">{{ block.settings.available_quantity }}</span></p>
                  </div>
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
        <div class="d-flex d-xl-none sw-dot-default sw-pagination-deal justify-content-center"></div>
      </div>
      <div class="swiper-button-next d-none d-xl-flex nav-swiper nav-next-deal"></div>
      <div class="swiper-button-prev d-none d-xl-flex nav-swiper nav-prev-deal"></div>
    </div>
  </div>
</section>

{% schema %}
