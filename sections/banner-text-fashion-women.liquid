<div class="s-banner-product">
  <div class="container">
    <div class="content-banner">
      <div class="image-wrap hover-img">
        <a href="{{ section.settings.banner_link }}" class="image img-style d-block">
          {% if section.settings.banner_image != blank %}
            {{ section.settings.banner_image | image_url: width: 2000 | image_tag:
              loading: 'lazy',
              class: 'lazyload',
              alt: section.settings.banner_image.alt
            }}
          {% endif %}
        </a>
        {% for block in section.blocks %}
          {% if block.type == 'lookbook' %}
            <div class="loobook-product style-row">
              <div class="img-style">
                {% if block.settings.product_image != blank %}
                  {{ block.settings.product_image | image_url: width: 200 | image_tag:
                    loading: 'lazy',
                    alt: block.settings.product_image.alt
                  }}
                {% endif %}
              </div>
              <div class="content">
                <div class="info">
                  <a href="{{ block.settings.product_link }}" class="text-md fw-medium text-line-clamp-1 link">
                    {{ block.settings.product_title }}
                  </a>
                  <p class="price-wrap text-md fw-medium">
                    {{ block.settings.product_price }}
                  </p>
                </div>
                <a href="#quickView" data-bs-toggle="modal" class="btn-lookbook hover-tooltip">
                  <i class="icon-view"></i>
                  <span class="tooltip">Quick view</span>
                </a>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="content-right text-center wow fadeInUp">
        <div class="box-title">
          <p class="display-lg-3 font-2 text-dark-3">
            {{ section.settings.title }}
          </p>
          <p class="body-text-2 text-dark-3 font-2">
            {{ section.settings.description }}
          </p>
        </div>
        <div class="box-btn">
          <a href="{{ section.settings.button_link }}" class="tf-btn animate-btn btn-dark2">
            {{ section.settings.button_text }}
            <i class="icon-arr-right"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Banner Text Fashion Women",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "url",
      "id": "banner_link",
      "label": "Banner Link"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Elevating Your Style Journey"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Discover timeless pieces that define elegance and sophistication."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "lookbook",
      "name": "Lookbook Product",
      "settings": [
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "product_title",
          "label": "Product Title"
        },
        {
          "type": "text",
          "id": "product_price",
          "label": "Product Price"
        },
        {
          "type": "url",
          "id": "product_link",
          "label": "Product Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner Text Fashion Women",
      "blocks": []
    }
  ]
}
{% endschema %} 