          "id": "progress_value",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Progress Value",
          "default": 50
        },
        {
          "type": "number",
          "id": "available_quantity",
          "label": "Available Quantity",
          "default": 10
        },
        {
          "type": "select",
          "id": "available_text_class",
          "label": "Available Text Color",
          "options": [
            {
              "value": "text-red-2",
              "label": "Red"
            },
            {
              "value": "text-success-5",
              "label": "Green"
            }
          ],
          "default": "text-red-2"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hot Deals",
      "settings": {
        "title": "Hot Deals",
        "description": "Explore our most popular pieces that customers can't get enough of",
        "global_countdown": "46556"
      },
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
