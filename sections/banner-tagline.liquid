<!-- Banner Tagline-->
<section class="flat-spacing-3">
    {% if section.settings.width == 'boxed' %}
        <div class="container-3">
    {% endif %}
        <div class="banner-tagline-phonecase hover-img hover-shine">
            <div class="image shine-item img-style">
                <img src="{{ section.settings.image | image_url }}" 
                     data-src="{{ section.settings.image | image_url }}" 
                     alt="{{ section.settings.image.alt | escape }}"
                     class="lazyload"
                     width="{{ section.settings.image.width }}"
                     height="{{ section.settings.image.height }}">
            </div>
            <div class="content wow fadeInUp">
                <h4>{{ section.settings.title }}</h4>
                <ul class="list-tagline">
                    {% for block in section.blocks %}
                        <li {{ block.shopify_attributes }}>
                            <div class="icon">
                                <i class="{{ block.settings.icon }}"></i>
                            </div>
                            <div class="box-text">
                                <h6>{{ block.settings.heading }}</h6>
                                <p class="text-md">{{ block.settings.text }}</p>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    {% if section.settings.width == 'boxed' %}
        </div>
    {% endif %}
</section>
<!-- /Banner Tagline -->

{% schema %}
{
    "name": "Banner Tagline",
    "settings": [
        {
            "type": "select",
            "id": "width",
            "label": "Section width",
            "options": [
                {
                    "value": "full",
                    "label": "Full width"
                },
                {
                    "value": "boxed",
                    "label": "Boxed"
                }
            ],
            "default": "boxed"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Background Image"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "What Make Us Different?"
        }
    ],
    "blocks": [
        {
            "type": "feature",
            "name": "Feature",
            "settings": [
                {
                    "type": "text",
                    "id": "icon",
                    "label": "Icon Class",
                    "info": "Enter the CSS class name for your icon. Browse available icons at [Icomoon](https://icomoon.io/app/#/select).",
                    "default": "icon-protection"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading",
                    "default": "Durable Protection"
                },
                {
                    "type": "textarea",
                    "id": "text",
                    "label": "Text",
                    "default": "Our cases are designed to withstand drops and scratches, keeping your phone safe."
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Banner Tagline",
            "category": "Banner",
            "blocks": [
                {
                    "type": "feature",
                    "settings": {
                        "icon": "icon-protection",
                        "heading": "Durable Protection",
                        "text": "Our cases are designed to withstand drops and scratches, keeping your phone safe."
                    }
                },
                {
                    "type": "feature",
                    "settings": {
                        "icon": "icon-designs",
                        "heading": "Stylish Designs",
                        "text": "Choose from a wide range of trendy and unique designs that suit your style."
                    }
                },
                {
                    "type": "feature",
                    "settings": {
                        "icon": "icon-fit",
                        "heading": "Perfect Fit",
                        "text": "Each case is precisely crafted to fit your phone model, ensuring easy access to all buttons and ports."
                    }
                },
                {
                    "type": "feature",
                    "settings": {
                        "icon": "icon-quality",
                        "heading": "Affordable Quality",
                        "text": "Enjoy premium protection without breaking the bank."
                    }
                }
            ]
        }
    ]
}
{% endschema %} 