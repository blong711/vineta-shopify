{% stylesheet %}
.flat-spacing {
  padding: 60px 0;
}

.flat-spacing.pt-0 {
  padding-top: 0;
}

.widget-accordion {
  border: 1px solid #eee;
  border-radius: 4px;
  margin-bottom: 20px;
}

.accordion-title {
  padding: 15px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  font-weight: 500;
}

.accordion-title .icon {
  transition: transform 0.3s;
}

.accordion-title.collapsed .icon {
  transform: rotate(0deg);
}

.accordion-title:not(.collapsed) .icon {
  transform: rotate(180deg);
}

.accordion-body {
  padding: 20px;
  border-top: 1px solid #eee;
}

.widget-desc .item {
  margin-bottom: 20px;
}

.widget-desc .title {
  margin-bottom: 10px;
}

.widget-desc ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.widget-desc ul li {
  margin-bottom: 5px;
  padding-left: 20px;
  position: relative;
}

.widget-desc ul li:before {
  content: "•";
  position: absolute;
  left: 0;
  color: var(--primary-color);
}

.list-policies {
  display: flex;
  justify-content: center;
  gap: 30px;
  list-style: none;
  padding: 0;
  margin: 0 0 20px;
}

.text-paragraph {
  color: #666;
  margin: 0;
}

@media (max-width: 767px) {
  .list-policies {
    flex-wrap: wrap;
    gap: 20px;
  }
  
  .list-policies li {
    width: 35px;
    height: 35px;
  }
}
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  // Handle accordion toggle
  const accordionTitles = document.querySelectorAll('.accordion-title');
  accordionTitles.forEach(title => {
    title.addEventListener('click', function() {
      this.classList.toggle('collapsed');
    });
  });
});
{% endjavascript %} 