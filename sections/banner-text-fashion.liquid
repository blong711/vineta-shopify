<!-- Banner with text-->
<div class="s-banner-product{% if section.settings.layout == 'home-fashion-02' %} banner-text-fashion flat-spacing-3 pt-0{% endif %}">
    <div class="container">
        {% if section.settings.layout == 'home-fashion-02' %}
            <div class="row flex-wrap-reverse">
                <div class="col-md-5">
                    <div class="content-banner type-left wow fadeInUp">
                        <div class="box-title-banner">
                            <h4>{{ section.settings.fashion_heading }}</h4>
                            <p class="text-md text-main">
                                {{ section.settings.fashion_subtext }}
                            </p>
                        </div>
                        {% if section.settings.fashion_button_label != blank %}
                            <div class="box-btn-banner">
                                <a href="{{ section.settings.fashion_button_link }}" class="tf-btn animate-btn">
                                    {{ section.settings.fashion_button_label }}
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="image-banner">
                        {% if section.settings.fashion_image_1 != blank %}
                            <div class="image image-2 hover-shine hover-img">
                                <div class="shine-item img-style wow fadeInRight" data-wow-delay="0.1s">
                                    <img src="{{ section.settings.fashion_image_1 | image_url: 'master' }}"
                                         data-src="{{ section.settings.fashion_image_1 | image_url: 'master' }}"
                                         alt="{{ section.settings.fashion_image_1.alt | escape }}"
                                         class="lazyload"
                                         width="600"
                                         height="400">
                                </div>
                            </div>
                        {% endif %}
                        {% if section.settings.fashion_image_2 != blank %}
                            <div class="image image-1 hover-shine hover-img">
                                <div class="shine-item img-style wow fadeInRight">
                                    <img src="{{ section.settings.fashion_image_2 | image_url: 'master' }}"
                                         data-src="{{ section.settings.fashion_image_2 | image_url: 'master' }}"
                                         alt="{{ section.settings.fashion_image_2.alt | escape }}"
                                         class="lazyload"
                                         width="600"
                                         height="400">
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="content-banner">
                <div class="image-wrap hover-img">
                    <a href="{{ section.settings.banner_link }}" class="image img-style d-block">
                        <img src="{{ section.settings.banner_image | image_url: 'master' }}"
                             data-src="{{ section.settings.banner_image | image_url: 'master' }}"
                             alt="{{ section.settings.banner_image.alt | escape }}"
                             class="lazyload"
                             width="1170"
                             height="600">
                    </a>
                    {% if section.settings.featured_product != blank %}
                        {% assign product = all_products[section.settings.featured_product] %}
                        <div class="loobook-product style-row">
                            <div class="img-style">
                                <img src="{{ product.featured_image | image_url: 'medium' }}"
                                     alt="{{ product.featured_image.alt | escape }}"
                                     width="100"
                                     height="100">
                            </div>
                            <div class="content">
                                <div class="info">
                                    <a href="{{ product.url }}" class="text-md fw-medium text-line-clamp-1 link">
                                        {{ product.title }}
                                    </a>
                                    <p class="price-wrap text-md fw-medium">
                                        {{ product.price | money }}
                                    </p>
                                </div>
                                <a href="#" class="btn-lookbook hover-tooltip js-quick-view" data-product-handle="{{ product.handle }}">
                                    <i class="icon-view"></i>
                                    <span class="tooltip">{{ 'products.product.quick_view' | t }}</span>
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div class="content-right text-center wow fadeInUp">
                    <div class="box-title">
                        <p class="display-lg-3 font-2 text-dark-3">
                            {{ section.settings.heading }}
                        </p>
                        <p class="body-text-2 text-dark-3 font-2">
                            {{ section.settings.subtext }}
                        </p>
                    </div>
                    {% if section.settings.button_label != blank %}
                        <div class="box-btn">
                            <a href="{{ section.settings.button_link }}" class="tf-btn animate-btn btn-dark2">
                                {{ section.settings.button_label }}
                                <i class="icon-arr-right"></i>
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
</div>
<!-- /Banner with text -->

