{% schema %}
{
  "name": "Blog Sub Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Blog Categories"
    },
    {
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "range",
      "id": "slides_per_view_desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "Slides per view (Desktop)",
      "default": 5
    },
    {
      "type": "range",
      "id": "slides_per_view_tablet",
      "min": 1,
      "max": 5,
      "step": 1,
      "label": "Slides per view (Tablet)",
      "default": 3
    },
    {
      "type": "range",
      "id": "slides_per_view_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Slides per view (Mobile)",
      "default": 2
    },
    {
      "type": "range",
      "id": "slides_per_group",
      "min": 1,
      "max": 5,
      "step": 1,
      "label": "Slides per group",
      "default": 3
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "blog",
          "id": "blog",
          "label": "Select Blog"
        },
        {
          "type": "image_picker",
          "id": "category_image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "category_title",
          "label": "Category Title",
          "info": "Will be automatically populated with blog title if left empty"
        },
        {
          "type": "text",
          "id": "post_count",
          "label": "Post Count",
          "info": "Will be automatically populated with actual post count if left empty"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Blog Sub Collection",
      "blocks": [
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        }
      ]
    }
  ]
}
{% endschema %}

<!-- Sub Collection -->
<div class="flat-spacing-24 pb-0" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="container">
    <div dir="ltr" class="swiper tf-swiper hover-sw-nav wow fadeInUp" data-swiper='{
      "slidesPerView": {{ section.settings.slides_per_view_mobile }},
      "spaceBetween": 12,
      "speed": 800,
      "observer": true,
      "observeParents": true,
      "slidesPerGroup": 1,
      "navigation": {
        "clickable": true,
        "nextEl": ".nav-next-cls",
        "prevEl": ".nav-prev-cls"
      },
      "pagination": { "el": ".sw-pagination-cls", "clickable": true },
      "breakpoints": {
        "768": { 
          "slidesPerView": {{ section.settings.slides_per_view_tablet }}, 
          "spaceBetween": 20, 
          "slidesPerGroup": {{ section.settings.slides_per_group }}
        },
        "1200": { 
          "slidesPerView": {{ section.settings.slides_per_view_desktop }}, 
          "spaceBetween": 20, 
          "slidesPerGroup": {{ section.settings.slides_per_group }}
        }
      }
    }'>
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.type == 'category' %}
            {% assign blog = block.settings.blog %}
            <div class="swiper-slide" {{ block.shopify_attributes }}>
              <div class="wg-cls style-abs2 hover-img">
                <a href="{{ blog.url }}" class="image-wrap relative">
                  <div class="image img-style">
                    {% if block.settings.category_image %}
                      {{ block.settings.category_image | image_url: width: 400 | image_tag: 
                        loading: 'lazy',
                        class: 'lazyload',
                        alt: block.settings.category_title | default: blog.title
                      }}
                    {% endif %}
                  </div>
                  <div class="cls-btn text-center">
                    <button class="tf-btn btn-white hover-dark">View all</button>
                  </div>
                  <span class="tf-overlay"></span>
                </a>
                <div class="cls-content text-center">
                  <a href="{{ blog.url }}" class="text-type text-md fw-medium link">
                    {{ block.settings.category_title | default: blog.title }}
                  </a>
                  <span class="count-item body-text-2 text-main">
                    {{ block.settings.post_count | default: blog.articles_count | append: ' posts' }}
                  </span>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="d-flex d-xl-none sw-dot-default sw-pagination-cls justify-content-center swiper-pagination-clickable swiper-pagination-bullets swiper-pagination-horizontal"></div>
      <div class="swiper-pagination sw-pagination-category"></div>
    </div>
  </div>
</div>
<!-- /Sub Collection -->

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const swiper = new Swiper('.blog-sub-collection .tf-swiper', {
    slidesPerView: 2,
    spaceBetween: 12,
    speed: 800,
    observer: true,
    observeParents: true,
    slidesPerGroup: 2,
    navigation: {
      clickable: true,
      nextEl: '.nav-next-cls',
      prevEl: '.nav-prev-cls'
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
      dynamicBullets: true
    },
    breakpoints: {
      768: {
        slidesPerView: 3,
        spaceBetween: 20,
        slidesPerGroup: 3
      },
      1200: {
        slidesPerView: {{ section.settings.slides_per_view_desktop }},
        spaceBetween: 20,
        slidesPerGroup: {{ section.settings.slides_per_group }}
      }
    }
  });
});
{% endjavascript %} 