{% if layout == 'home-phonecase' %}
  <div class="banner-wrap">
    <div class="banner-content text-center">
      <div class="box-title {% if block.settings.enable_wow %}wow fadeInUp{% endif %}" {% if block.settings.enable_wow %}data-wow-delay="{{ block.settings.wow_delay }}"{% endif %}>
        {% if block.settings.heading != blank %}
          <h4>{{ block.settings.heading }}</h4>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="sub text-md">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
      {% if block.settings.show_countdown and block.settings.end_date != blank %}
        {% assign end_date = block.settings.end_date | date: '%Y-%m-%d %H:%M:%S' %}
        <div class="box-countdown {% if block.settings.enable_wow %}wow fadeInUp{% endif %}" {% if block.settings.enable_wow %}data-wow-delay="{{ block.settings.wow_delay }}"{% endif %}>
          <div class="wg-countdown">
            <div class="js-countdown d-flex justify-content-center" 
                 data-countdown="{{ end_date }}"
                 data-labels="Days,Hours,Mins,Secs"></div>
          </div>
        </div>
      {% endif %}
      {% if block.settings.button_label != blank %}
        <div class="box-btn {% if block.settings.enable_wow %}wow fadeInUp{% endif %}" {% if block.settings.enable_wow %}data-wow-delay="{{ block.settings.wow_delay }}"{% endif %}>
          <a href="{{ block.settings.button_link }}" class="tf-btn fw-normal animate-btn">
            {{ block.settings.button_label }}
          </a>
        </div>
      {% endif %}
    </div>
    <div class="image">
      {% if block.settings.banner_image != blank %}
        <img src="{{ block.settings.banner_image | img_url: 'master' }}"
          data-src="{{ block.settings.banner_image | img_url: 'master' }}"
          alt="{{ block.settings.heading | escape }}"
          width="{{ block.settings.banner_image.width }}"
          height="{{ block.settings.banner_image.height }}"
          class="lazyload {% if block.settings.enable_parallax %}effect-paralax{% endif %}">
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  </div>
{% else %}
  <div class="s-banner-countdown banner-cd-fashion">
    <div class="image">
      {% if block.settings.banner_image != blank %}
        <img src="{{ block.settings.banner_image | img_url: 'master' }}"
          data-src="{{ block.settings.banner_image | img_url: 'master' }}"
          alt="{{ block.settings.heading | escape }}"
          width="{{ block.settings.banner_image.width }}"
          height="{{ block.settings.banner_image.height }}"
          class="lazyload {% if block.settings.enable_parallax %}effect-paralax{% endif %}">
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
    <div class="banner-content text-center">
      <div class="box-title {% if block.settings.enable_wow %}wow fadeInUp{% endif %}" {% if block.settings.enable_wow %}data-wow-delay="{{ block.settings.wow_delay }}"{% endif %}>
        {% if block.settings.season_text != blank %}
          <p class="season text-md fw-medium">{{ block.settings.season_text }}</p>
        {% endif %}
        {% if block.settings.heading != blank %}
          <h2 class="fw-medium">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.promo_code != blank %}
          <p class="sub text-md fw-medium">WITH PROMOTE CODE: {{ block.settings.promo_code }}</p>
        {% endif %}
      </div>
      {% if block.settings.show_countdown and block.settings.end_date != blank %}
        {% assign end_date = block.settings.end_date | date: '%Y-%m-%d %H:%M:%S' %}
        <div class="box-countdown d-flex justify-content-center {% if block.settings.enable_wow %}wow fadeInUp{% endif %}" {% if block.settings.enable_wow %}data-wow-delay="{{ block.settings.wow_delay }}"{% endif %}>
          <div class="wg-countdown-2">
            <div class="js-countdown" 
                 data-countdown="{{ end_date }}"
                 data-labels="Days,Hours,Mins,Secs"></div>
          </div>
        </div>
      {% endif %}
      {% if block.settings.button_label != blank %}
        <div class="box-btn {% if block.settings.enable_wow %}wow fadeInUp{% endif %}" {% if block.settings.enable_wow %}data-wow-delay="{{ block.settings.wow_delay }}"{% endif %}>
          <a href="{{ block.settings.button_link }}" class="tf-btn btn-white hover-primary">
            {{ block.settings.button_label }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Banner Countdown Block",
  "settings": [
    { "type": "header", "content": "Content Settings" },
    { "type": "image_picker", "id": "banner_image", "label": "Banner image" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "50% OFF" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Get your favorite cases at a discount" },
    { "type": "text", "id": "season_text", "label": "Season Text", "default": "SUMMER SALE" },
    { "type": "text", "id": "promo_code", "label": "Promo Code", "default": "12D34E" },
    { "type": "checkbox", "id": "show_countdown", "label": "Show countdown timer", "default": true },
    { "type": "text", "id": "end_date", "label": "End date (YYYY-MM-DD HH:MM:SS)", "default": "2024-12-31 23:59:59" },
    { "type": "text", "id": "button_label", "label": "Button Label", "default": "Shop Now" },
    { "type": "url", "id": "button_link", "label": "Button Link" },
    { "type": "header", "content": "Animation Settings" },
    { "type": "checkbox", "id": "enable_parallax", "label": "Enable parallax effect", "default": false },
    { "type": "checkbox", "id": "enable_wow", "label": "Enable fade-in animation", "default": true },
    { "type": "select", "id": "wow_delay", "label": "Animation delay", "options": [ { "value": "0s", "label": "None" }, { "value": "0.2s", "label": "Short" }, { "value": "0.5s", "label": "Medium" }, { "value": "0.8s", "label": "Long" } ], "default": "0.2s" }
  ],
  "presets": [
    { "name": "Banner Countdown Block" }
  ]
}
{% endschema %} 