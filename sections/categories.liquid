{%- if section.blocks.size > 0 -%}
  {%- case section.settings.layout -%}
    {%- when 'layout1' -%}
      <div class="categories">
        <div class="container">
          <div class="row">
            {%- for block in section.blocks -%}
              {%- assign collection = collections[block.settings.collection] -%}
              <div class="col-lg-3 col-md-4 col-sm-6 col-6" {{ block.shopify_attributes }}>
                <div class="category-item">
                  {%- if collection.featured_image != blank -%}
                    <a href="{{ collection.url }}" class="category-image">
                      {{ collection.featured_image | image_url: width: 300 | image_tag:
                        loading: 'lazy',
                        width: collection.featured_image.width,
                        height: collection.featured_image.height,
                        class: 'img-fluid'
                      }}
                    </a>
                  {%- endif -%}
                  <div class="category-content">
                    <h3 class="category-title">
                      <a href="{{ collection.url }}">{{ collection.title }}</a>
                    </h3>
                    {%- if collection.description != blank -%}
                      <p class="category-description">{{ collection.description }}</p>
                    {%- endif -%}
                  </div>
                </div>
              </div>
            {%- endfor -%}
          </div>
        </div>
      </div>
    {%- when 'layout2' -%}
      <section class="flat-spacing-3">
        <div class="container">
          <div class="flat-title text-start wow fadeInUp">
            <h4 class="title">{{ section.settings.title }}</h4>
          </div>
          <div class="wow fadeInUp">
            <div class="fl-control-sw pos1">
              <div dir="ltr" class="swiper tf-swiper" data-swiper='{
                "slidesPerView": 2,
                "spaceBetween": 12,
                "speed": 800,
                "observer": true,
                "observeParents": true,
                "slidesPerGroup": 2,
                "navigation": {
                  "clickable": true,
                  "nextEl": ".nav-next-categories",
                  "prevEl": ".nav-prev-categories"
                },
                "pagination": { "el": ".sw-pagination-categories", "clickable": true },
                "breakpoints": {
                  "575": { "slidesPerView": 3, "spaceBetween": 12, "slidesPerGroup": 3 },
                  "768": { "slidesPerView": 4, "spaceBetween": 12, "slidesPerGroup": 4 },
                  "992": { "slidesPerView": 5, "spaceBetween": 24, "slidesPerGroup": 4 },
                  "1200": { "slidesPerView": 6, "spaceBetween": 24, "slidesPerGroup": 4 }
                }
              }'>
                <div class="swiper-wrapper">
                  {%- for block in section.blocks -%}
                    {%- assign collection = collections[block.settings.collection] -%}
                    <div class="swiper-slide" {{ block.shopify_attributes }}>
                      <div class="wg-cls style-square hover-img">
                        <a href="{{ collection.url }}" class="image img-style d-block">
                          {%- if collection.featured_image != blank -%}
                            {{ collection.featured_image | image_url: width: 300 | image_tag:
                              loading: 'lazy',
                              width: collection.featured_image.width,
                              height: collection.featured_image.height,
                              class: 'lazyload'
                            }}
                          {%- endif -%}
                        </a>
                        <div class="cls-content text-center">
                          <a href="{{ collection.url }}" class="link text-md fw-medium">{{ collection.title }}</a>
                        </div>
                      </div>
                    </div>
                  {%- endfor -%}
                </div>
                <div class="d-flex d-xl-none sw-dot-default sw-pagination-categories justify-content-center"></div>
              </div>
              <div class="swiper-button-next d-none d-xl-flex nav-swiper nav-next-categories"></div>
              <div class="swiper-button-prev d-none d-xl-flex nav-swiper nav-prev-categories"></div>
            </div>
          </div>
        </div>
      </section>
  {%- endcase -%}
{%- endif -%}

{% schema %}
{
  "name": "Categories",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "layout1",
          "label": "Grid Layout"
        },
        {
          "value": "layout2",
          "label": "Slider Layout"
        }
      ],
      "default": "layout1"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Categories"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Categories",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "collection": "all"
          }
        },
        {
          "type": "category",
          "settings": {
            "collection": "all"
          }
        },
        {
          "type": "category",
          "settings": {
            "collection": "all"
          }
        },
        {
          "type": "category",
          "settings": {
            "collection": "all"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  /* Layout 1 Styles */
  .categories {
    padding: 50px 0;
  }
  
  .category-item {
    margin-bottom: 30px;
    text-align: center;
  }
  
  .category-image {
    display: block;
    margin-bottom: 15px;
  }
  
  .category-title {
    font-size: 18px;
    margin-bottom: 10px;
  }
  
  .category-description {
    color: #666;
    font-size: 14px;
  }

  /* Layout 2 Styles */
  .flat-spacing-3 {
    padding: 50px 0;
  }

  .wg-cls {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
  }

  .wg-cls .image {
    position: relative;
    padding-top: 100%;
  }

  .wg-cls .image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .wg-cls:hover .image img {
    transform: scale(1.1);
  }

  .cls-content {
    padding: 15px 0;
  }

  .cls-content .link {
    color: #333;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .cls-content .link:hover {
    color: #007bff;
  }

  .nav-swiper {
    width: 40px;
    height: 40px;
    background: #fff;
    border-radius: 50%;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .nav-swiper:hover {
    background: #007bff;
    color: #fff;
  }
</style> 