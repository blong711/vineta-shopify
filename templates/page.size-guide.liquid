{% layout 'theme' %}

<div class="tf-page-size-guide">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="tf-page-size-guide-content">
          <div class="tf-table-res-df">
            <div class="title">Size Chart</div>
            <table class="tf-sizeguide-table">
              <thead>
                <tr>
                  <th>Size</th>
                  <th>US</th>
                  <th>Chest</th>
                  <th>Waist</th>
                  <th>Hip</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>XS</td>
                  <td>2</td>
                  <td>32</td>
                  <td>24 - 25</td>
                  <td>33 - 34</td>
                </tr>
                <tr>
                  <td>S</td>
                  <td>4</td>
                  <td>34 - 35</td>
                  <td>26 - 27</td>
                  <td>35 - 26</td>
                </tr>
                <tr>
                  <td>M</td>
                  <td>6</td>
                  <td>36 - 37</td>
                  <td>28 - 29</td>
                  <td>38 - 40</td>
                </tr>
                <tr>
                  <td>L</td>
                  <td>8</td>
                  <td>38 - 29</td>
                  <td>30 - 31</td>
                  <td>42 - 44</td>
                </tr>
                <tr>
                  <td>XL</td>
                  <td>10</td>
                  <td>40 - 41</td>
                  <td>32 - 33</td>
                  <td>45 - 47</td>
                </tr>
                <tr>
                  <td>XXL</td>
                  <td>12</td>
                  <td>42 - 43</td>
                  <td>34 - 35</td>
                  <td>48 - 50</td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="tf-page-size-chart-content">
            <div>
              <div class="title">Style Measurements:</div>
              <ul>
                <li class="text">1. Chest</li>
                <li class="text-main">Measure at the fullest part of your chest, keeping the tape parallel to the floor.</li>
                <li class="text">2. Waist</li>
                <li class="text-main">Measure at the smallest part of your waist. This is usually below the rib cage and above the hip bone.</li>
                <li class="text">3. Hip</li>
                <li class="text-main">Measure at the fullest part of your seat, keeping the tape parallel to the floor.</li>
              </ul>
            </div>
            <div class="text-md-end text-center">
              <img class="sizechart ls-is-cached lazyloaded" 
                   data-src="{{ 'size-guide.png' | asset_url }}" 
                   src="{{ 'size-guide.png' | asset_url }}" 
                   alt="Size Guide Measurement Diagram"
                   width="400"
                   height="400">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.tf-page-size-guide {
  padding: 60px 0;
}

.tf-page-size-guide-content {
  max-width: 1000px;
  margin: 0 auto;
}

.tf-table-res-df {
  margin-bottom: 40px;
}

.tf-table-res-df .title {
  font-size: 24px;
  font-weight: 600;
  margin-bottom: 20px;
  text-align: center;
}

.tf-sizeguide-table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 30px;
}

.tf-sizeguide-table th,
.tf-sizeguide-table td {
  padding: 12px;
  text-align: center;
  border: 1px solid #ddd;
}

.tf-sizeguide-table th {
  background-color: #f8f8f8;
  font-weight: 600;
}

.tf-page-size-chart-content {
  display: flex;
  flex-wrap: wrap;
  gap: 40px;
  align-items: flex-start;
}

.tf-page-size-chart-content > div:first-child {
  flex: 1;
  min-width: 300px;
}

.tf-page-size-chart-content .title {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 20px;
}

.tf-page-size-chart-content ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.tf-page-size-chart-content .text {
  font-weight: 600;
  margin-top: 15px;
}

.tf-page-size-chart-content .text-main {
  color: #666;
  margin-bottom: 10px;
}

.tf-page-size-chart-content img {
  max-width: 100%;
  height: auto;
}

@media (max-width: 767px) {
  .tf-page-size-guide {
    padding: 30px 0;
  }
  
  .tf-page-size-chart-content {
    flex-direction: column;
  }
  
  .tf-page-size-chart-content > div:first-child {
    order: 2;
  }
  
  .tf-page-size-chart-content > div:last-child {
    order: 1;
  }
}
</style> 