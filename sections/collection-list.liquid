{% stylesheet %}
.flat-spacing-2 {
  padding: 60px 0;
}

.flat-wrap-cls {
  display: grid;
  gap: 30px;
}

.tf-col-2 {
  grid-template-columns: repeat(2, 1fr);
}

.xl-col-3 {
  grid-template-columns: repeat(3, 1fr);
}

.wg-cls {
  position: relative;
  border-radius: 8px;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.image-wrap {
  display: block;
  position: relative;
  padding-top: 100%;
}

.image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s;
}

.wg-cls:hover .image img {
  transform: scale(1.1);
}

.cls-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  opacity: 0;
  transition: opacity 0.3s;
}

.wg-cls:hover .cls-btn {
  opacity: 1;
}

.tf-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3);
  opacity: 0;
  transition: opacity 0.3s;
}

.wg-cls:hover .tf-overlay {
  opacity: 1;
}

.cls-content {
  padding: 20px;
  text-align: center;
}

.text-type {
  display: block;
  margin-bottom: 5px;
  color: #222;
  text-decoration: none;
  transition: color 0.3s;
}

.text-type:hover {
  color: var(--primary-color);
}

.count-item {
  color: #666;
}

.wg-pagination {
  display: flex;
  justify-content: center;
  gap: 5px;
  list-style: none;
  padding: 0;
  margin: 30px 0 0;
}

.pagination-item {
  width: 35px;
  height: 35px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 4px;
  color: #222;
  text-decoration: none;
  transition: all 0.3s;
}

.pagination-item:hover,
.wg-pagination li.active .pagination-item {
  background: var(--primary-color);
  border-color: var(--primary-color);
  color: #fff;
}

.flat-spacing-5 {
  padding: 60px 0;
  border-top: 1px solid #eee;
}

.tf-icon-box {
  display: flex;
  align-items: flex-start;
  gap: 15px;
  padding: 20px;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.tf-icon-box svg {
  flex-shrink: 0;
}

.tf-icon-box .content {
  flex-grow: 1;
}

.tf-icon-box .title {
  margin-bottom: 5px;
  font-weight: 600;
  color: #222;
}

.tf-icon-box .desc {
  color: #666;
  margin: 0;
}

@media (max-width: 1200px) {
  .xl-col-3 {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 767px) {
  .flat-spacing-2 {
    padding: 40px 0;
  }
  
  .tf-col-2 {
    grid-template-columns: 1fr;
  }
  
  .xl-col-3 {
    grid-template-columns: 1fr;
  }
}
{% endstylesheet %}

