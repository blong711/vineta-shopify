        },
        {
            "type": "header",
            "content": "Testimonial 2"
        },
        {
            "type": "text",
            "id": "testimonial2_name",
            "label": "Customer Name",
            "default": "Jessica M."
        },
        {
            "type": "image_picker",
            "id": "testimonial2_image",
            "label": "Customer Image"
        },
        {
            "type": "text",
            "id": "testimonial2_product",
            "label": "Product Name",
            "default": "Oversized Tee"
        },
        {
            "type": "url",
            "id": "testimonial2_product_url",
            "label": "Product URL"
        },
        {
            "type": "text",
            "id": "testimonial2_price",
            "label": "Product Price",
            "default": "$80.00"
        },
        {
            "type": "textarea",
            "id": "testimonial2_review",
            "label": "Customer Review",
            "default": "I love the fit and quality of everything I've purchased. The customer service is exceptional, and shipping is always fast. Highly recommend!"
        },
        {
            "type": "header",
            "content": "Testimonial 3"
        },
        {
            "type": "text",
            "id": "testimonial3_name",
            "label": "Customer Name",
            "default": "Sarah K."
        },
        {
            "type": "image_picker",
            "id": "testimonial3_image",
            "label": "Customer Image"
        },
        {
            "type": "text",
            "id": "testimonial3_product",
            "label": "Product Name",
            "default": "Polo Neck T-Shirt"
        },
        {
            "type": "url",
            "id": "testimonial3_product_url",
            "label": "Product URL"
        },
        {
            "type": "text",
            "id": "testimonial3_price",
            "label": "Product Price",
            "default": "$100.00"
        },
        {
            "type": "textarea",
            "id": "testimonial3_review",
            "label": "Customer Review",
            "default": "The attention to detail in their products is amazing. I've received so many compliments on my purchases. Will definitely be shopping here again!"
        }
    ],
    "presets": [
        {
            "name": "Testimonial",
            "category": "Content"
        }
    ]
}
{% endschema %}

<!-- Testimonial Section -->
<section class="tf-testimonial {% if section.settings.layout == 'home-electronic' %}flat-spacing-2 pb-0{% elsif section.settings.layout == 'fashion-women' %}flat-spacing-3{% endif %}">
    <div class="container">
        <div class="flat-title {% if section.settings.layout == 'home-electronic' %}text-start{% elsif section.settings.layout == 'fashion-women' %}text-center{% endif %} wow fadeInUp">
            <h4 class="title">{{ section.settings.title }}</h4>
        </div>
        <div dir="ltr" class="swiper tf-swiper" data-swiper='{
            "slidesPerView": 1,
            "spaceBetween": 12,
            "speed": 800,
            "observer": true,
            "observeParents": true,
            "slidesPerGroup": 1,
            "pagination": { "el": ".sw-pagination-tes", "clickable": true },
            "breakpoints": {
                "768": { "slidesPerView": 2, "spaceBetween": 24, "slidesPerGroup": 2 },
                "1200": { "slidesPerView": 3, "spaceBetween": 24, "slidesPerGroup": 3}
            }
        }'>
            <div class="swiper-wrapper">
                <!-- Testimonial Item 1 -->
                <div class="swiper-slide">
                    <div class="wg-testimonial wow fadeInLeft">
                        <div class="content">
                            <div class="content-top">
                                <div class="box-author">
                                    <p class="name-author text-sm fw-medium">{{ section.settings.testimonial1_name }}</p>
                                    <div class="box-verified text-main">
                                        <i class="icon-verifi"></i>
                                        <p class="text-xs fst-italic">Verified Buyer</p>
                                    </div>
                                </div>
                                <div class="list-star-default">
                                    <i class="icon-star"></i>
                                    <i class="icon-star"></i>
                                    <i class="icon-star"></i>
                                    <i class="icon-star"></i>
                                    <i class="icon-star"></i>
                                </div>
                                <p class="text-review text-sm text-main">
                                    {{ section.settings.testimonial1_review }}
                                </p>
                            </div>
                            <span class="br-line d-block"></span>
                            <div class="box-avt">
                                <div class="avatar">
                                    {% if section.settings.testimonial1_image != blank %}
                                        <img src="{{ section.settings.testimonial1_image | img_url: '120x120' }}" 
                                             alt="{{ section.settings.testimonial1_name }}" 
                                             width="60" 
                                             height="60">
                                    {% else %}
                                        <img src="{{ 'author-fs1.jpg' | asset_url }}" 
                                             alt="{{ section.settings.testimonial1_name }}" 
                                             width="60" 
                                             height="60">
                                    {% endif %}
                                </div>
                                <div class="box-price">
                                    <p class="name-item text-xs">
                                        Item purchased: <a href="{{ section.settings.testimonial1_product_url }}" class="fw-medium text-sm link text-line-clamp-1">{{ section.settings.testimonial1_product }}</a>
                                    </p>
                                    <p class="price text-md fw-medium">{{ section.settings.testimonial1_price }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Testimonial Item 2 -->
                <div class="swiper-slide">
                    <div class="wg-testimonial wow fadeInLeft" data-wow-delay="0.1s">
                        <div class="content">
                            <div class="content-top">
                                <div class="box-author">
