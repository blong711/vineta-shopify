[
  {
    "name": "theme_info",
    "theme_name": "Shopify Theme",
    "theme_version": "1.0.0",
    "theme_author": "Your Name",
    "theme_documentation_url": "https://help.shopify.com/en/manual/online-store/themes",
    "theme_support_url": "https://help.shopify.com/en/manual/online-store/themes/getting-started/theme-support"
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Will be scaled down to 32 x 32px"
      },
      {
        "type": "image_picker",
        "id": "apple_touch_icon",
        "label": "Apple Touch Icon",
        "info": "Will be scaled down to 180 x 180px"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "role": {
          "background": "background-1",
          "text": "background-2",
          "primary_button": "accent-1",
          "secondary_button": "accent-2",
          "primary_button_border": "accent-1",
          "secondary_button_border": "accent-2",
          "on_primary_button": "background-1",
          "on_secondary_button": "background-1",
          "links": "accent-1",
          "icons": "accent-1"
        },
        "definition": [
          {
            "type": "color",
            "id": "background-1",
            "label": "Background 1"
          },
          {
            "type": "color",
            "id": "background-2",
            "label": "Background 2"
          },
          {
            "type": "color",
            "id": "accent-1",
            "label": "Accent 1"
          },
          {
            "type": "color",
            "id": "accent-2",
            "label": "Accent 2"
          }
        ]
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Settings"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "default": "helvetica_n4",
        "label": "Heading Font",
        "info": "Select font for headings"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "default": "helvetica_n4",
        "label": "Body Font",
        "info": "Select font for body text"
      },
      {
        "type": "header",
        "content": "Font Sizes"
      },
      {
        "type": "range",
        "id": "base_font_size",
        "min": 12,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Base Font Size",
        "default": 16
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 1,
        "max": 2,
        "step": 0.1,
        "label": "Heading Scale",
        "default": 1.2
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Container Settings"
      },
      {
        "type": "select",
        "id": "container_width",
        "label": "Container Width",
        "options": [
          {
            "value": "1200px",
            "label": "1200px"
          },
          {
            "value": "1400px",
            "label": "1400px"
          },
          {
            "value": "1600px",
            "label": "1600px"
          },
          {
            "value": "1800px",
            "label": "1800px"
          },
          {
            "value": "1920px",
            "label": "1920px"
          }
        ],
        "default": "1200px"
      },
      {
        "type": "select",
        "id": "container_padding",
        "label": "Container Padding",
        "options": [
          {
            "value": "0",
            "label": "None"
          },
          {
            "value": "15px",
            "label": "Small"
          },
          {
            "value": "30px",
            "label": "Medium"
          },
          {
            "value": "60px",
            "label": "Large"
          }
        ],
        "default": "30px"
      },
      {
        "type": "header",
        "content": "Grid Settings"
      },
      {
        "type": "range",
        "id": "grid_gap",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Space Between Columns",
        "default": 30
      },
      {
        "type": "select",
        "id": "grid_columns",
        "label": "Default Grid Columns",
        "options": [
          {
            "value": "2",
            "label": "2 Columns"
          },
          {
            "value": "3",
            "label": "3 Columns"
          },
          {
            "value": "4",
            "label": "4 Columns"
          },
          {
            "value": "5",
            "label": "5 Columns"
          },
          {
            "value": "6",
            "label": "6 Columns"
          }
        ],
        "default": "4"
      },
      {
        "type": "header",
        "content": "Direction Settings"
      },
      {
        "type": "select",
        "id": "text_direction",
        "label": "Text Direction",
        "options": [
          {
            "value": "ltr",
            "label": "Left to Right (LTR)"
          },
          {
            "value": "rtl",
            "label": "Right to Left (RTL)"
          }
        ],
        "default": "ltr"
      },
      {
        "type": "checkbox",
        "id": "enable_rtl_switcher",
        "label": "Enable RTL Switcher",
        "info": "Adds a button to switch between RTL and LTR modes",
        "default": false
      },
      {
        "type": "header",
        "content": "Spacing"
      },
      {
        "type": "range",
        "id": "section_spacing",
        "min": 20,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Section Spacing",
        "default": 40
      },
      {
        "type": "range",
        "id": "element_spacing",
        "min": 10,
        "max": 50,
        "step": 5,
        "unit": "px",
        "label": "Element Spacing",
        "default": 20
      }
    ]
  },
  {
    "name": "Animations",
    "settings": [
      {
        "type": "header",
        "content": "Animation Settings"
      },
      {
        "type": "checkbox",
        "id": "enable_animations",
        "label": "Enable Animations",
        "default": true
      },
      {
        "type": "select",
        "id": "animation_style",
        "label": "Animation Style",
        "options": [
          {
            "value": "ease",
            "label": "Ease"
          },
          {
            "value": "ease-in",
            "label": "Ease In"
          },
          {
            "value": "ease-out",
            "label": "Ease Out"
          },
          {
            "value": "ease-in-out",
            "label": "Ease In Out"
          }
        ],
        "default": "ease-out"
      },
      {
        "type": "range",
        "id": "animation_duration",
        "min": 200,
        "max": 1000,
        "step": 50,
        "unit": "ms",
        "label": "Animation Duration",
        "default": 500
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "header",
        "content": "Search Settings"
      },
      {
        "type": "checkbox",
        "id": "show_search_suggestions",
        "label": "Show Search Suggestions",
        "default": true
      },
      {
        "type": "range",
        "id": "search_suggestions_limit",
        "min": 3,
        "max": 10,
        "step": 1,
        "label": "Number of Search Suggestions",
        "default": 5
      },
      {
        "type": "checkbox",
        "id": "show_recent_searches",
        "label": "Show Recent Searches",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_popular_searches",
        "label": "Show Popular Searches",
        "default": true
      },
      {
        "type": "select",
        "id": "search_results_layout",
        "label": "Search Results Layout",
        "options": [
          {
            "value": "grid",
            "label": "Grid"
          },
          {
            "value": "list",
            "label": "List"
          }
        ],
        "default": "grid"
      }
    ]
  },
  {
    "name": "Feature Settings",
    "settings": [
      {
        "type": "header",
        "content": "Feature Toggles"
      },
      {
        "type": "checkbox",
        "id": "enable_quickview",
        "label": "Enable Quick View",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_compare",
        "label": "Enable Product Comparison",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_wishlist",
        "label": "Enable Wishlist",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_zoom",
        "label": "Enable Product Image Zoom",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_parallax",
        "label": "Enable Parallax Effects",
        "default": true
      }
    ]
  }
] 