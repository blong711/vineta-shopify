<!-- Collection Display -->
<div class="flat-spacing-3">
  <div class="container">
    <div class="wrapper-thumbs-tes-2 flat-thumbs-tes">
      <div class="box-left">
        <div dir="ltr" class="swiper tf-tes-main" data-space-lg="24" data-space="12">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% assign collection = collections[block.settings.collection] %}
              {% if collection != blank %}
                <div class="swiper-slide" {{ block.shopify_attributes }}>
                  <div class="box-testimonial-main wow fadeInLeft">
                    <div class="content">
                      <div class="title-review">{{ collection.title }}</div>
                      <p class="text-review display-xs">{{ collection.description }}</p>
                      <div class="box-btn">
                        <a href="{{ collection.url }}" class="tf-btn animate-btn btn-dark2">
                          Shop Collection
                          <i class="icon-arr-right"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
          <div class="box-nav-swiper">
            <div class="swiper-button-prev nav-swiper size-30 style-line nav-prev-tes"></div>
            <div class="swiper-button-next nav-swiper size-30 style-line nav-next-tes"></div>
          </div>
        </div>
      </div>
      <div class="box-right">
        <div dir="ltr" class="swiper tf-thumb-tes" data-space-lg="24" data-space="12">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% assign collection = collections[block.settings.collection] %}
              {% if collection != blank %}
                <div class="swiper-slide hover-img">
                  <div class="img-sw-thumb img-style">
                    {% if collection.featured_image != blank %}
                      {{ collection.featured_image | image_url: width: 400 | image_tag:
                        loading: 'lazy',
                        class: 'lazyload',
                        alt: collection.title
                      }}
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /Collection Display -->

{% schema %}
{
  "name": "Collection Display",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "collection_display",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Display",
      "blocks": [
        {
          "type": "collection_display",
          "settings": {
            "collection": "women-clothes"
          }
        },
        {
          "type": "collection_display",
          "settings": {
            "collection": "women-accessories"
          }
        }
      ]
    }
  ]
}
{% endschema %} 