  {% endif %}
    <div class="flat-title mb_2 wow fadeInUp">
      <h4 class="title">{{ section.settings.title }}</h4>
    </div>
    <div dir="ltr" class="swiper tf-swiper" data-swiper='{
      "slidesPerView": {{ section.settings.slides_per_view_mobile }},
      "spaceBetween": {{ section.settings.space_between_mobile }},
      "speed": {{ section.settings.transition_speed }},
      "slidesPerGroup": {{ section.settings.slides_per_group_mobile }},
      "navigation": {% if section.settings.show_navigation %}{
        "clickable": true,
        "nextEl": ".nav-next-new",
        "prevEl": ".nav-prev-new"
      }{% else %}false{% endif %},
      "pagination": {% if section.settings.show_pagination %}{
        "el": ".sw-pagination-new",
        "clickable": true
      }{% else %}false{% endif %},
      "autoplay": {% if section.settings.autoplay %}{
        "delay": {{ section.settings.autoplay_speed }},
        "pauseOnMouseEnter": {{ section.settings.pause_on_hover }}
      }{% else %}false{% endif %},
      "breakpoints": {
        "577": {
          "slidesPerView": {{ section.settings.slides_per_view_tablet }},
          "spaceBetween": {{ section.settings.space_between_mobile }},
          "slidesPerGroup": {{ section.settings.slides_per_group_tablet }}
        },
        "1200": {
          "slidesPerView": {{ section.settings.slides_per_view_desktop }},
          "spaceBetween": {{ section.settings.space_between_desktop }},
          "slidesPerGroup": {{ section.settings.slides_per_group_desktop }}
        }
      }
    }'>
      <div class="swiper-wrapper">
        {%- if section.settings.article_1 != blank -%}
          <div class="swiper-slide">
            <div class="blog-post-item hover-img">
              <div class="entry_image">
                <a href="{{ section.settings.article_1.url }}" class="img-style">
                  {%- if section.settings.article_1.image -%}
                    {{ section.settings.article_1.image | image_url: width: 600 | image_tag: loading: 'lazy', class: 'lazyload' }}
                  {%- endif -%}
                </a>
              </div>
              <div class="blog-content">
                {%- if section.settings.show_tags -%}
                  <div class="entry-tag">
                    <ul class="style-list">
                      {%- for tag in section.settings.article_1.tags -%}
                        <li>
                          <a class="type-{{ tag | handleize }}">
                            {{ tag }}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>
                {%- endif -%}
                <a href="{{ section.settings.article_1.url }}" class="entry_title d-block text-xl fw-medium link">
                  {{ section.settings.article_1.title | truncate: 42 }}
                </a>
                {% comment %} <p class="entry_sub text-md text-main">
                  {{ section.settings.article_1.excerpt_or_content | strip_html | truncatewords: 20 }}
                </p> {% endcomment %}
                <ul class="entry-meta">
                  {%- if section.settings.show_author -%}
                    <li class="entry_author">
                      <div class="avatar">
                        {%- if section.settings.article_1.author.image -%}
                          {{ section.settings.article_1.author.image | image_url: width: 100 | image_tag: loading: 'lazy', class: 'lazyload' }}
                        {% else %}
                          <img src="{{ 'blog-author-1.jpg' | asset_url }}" 
                               data-src="{{ 'blog-author-1.jpg' | asset_url }}"
                               loading="lazy"
                               class="lazyload"
                               alt="{{ article.author }}"
                               width="50"
                               height="50">
                        {% endif %}
                      </div>
                      <p class="entry_name">
                        Post by <span class="fw-medium">{{ section.settings.article_1.author | truncate: 12 }}</span>
                      </p>
                    </li>
                    <li class="br-line"></li>
                  {%- endif -%}
                  {%- if section.settings.show_date -%}
                    <li class="entry_date">
                      <p class="text-md">
                        {{ section.settings.article_1.published_at | date: '%b %d %Y' }}
                      </p>
                    </li>
                    <li class="br-line"></li>
                  {%- endif -%}
                  {%- if section.settings.show_comments -%}
                    <li class="entry_comment">
                      <p class="text-md">
                        {{ section.settings.article_1.comments_count }} comments
