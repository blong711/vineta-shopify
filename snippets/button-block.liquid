{% if block.settings.button_label != blank %}
  <a href="{{ block.settings.button_link }}" 
     class="button button--{{ block.settings.button_style }} button--{{ block.settings.button_size }} {% if block.settings.full_width %}button--full-width{% endif %}"
     style="
       background-color: {% if block.settings.button_style == 'outline' %}transparent{% else %}{{ block.settings.button_color }}{% endif %};
       color: {{ block.settings.button_text_color }};
       border-radius: {{ block.settings.border_radius }}px;
       {% if block.settings.button_style == 'outline' %}border: 2px solid {{ block.settings.button_color }};{% endif %}
     ">
    {{ block.settings.button_label }}
  </a>
{% endif %}

<style>
  .button {
    display: inline-block;
    text-decoration: none;
    text-align: center;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .button--small {
    padding: 8px 16px;
    font-size: 14px;
  }

  .button--medium {
    padding: 12px 24px;
    font-size: 16px;
  }

  .button--large {
    padding: 16px 32px;
    font-size: 18px;
  }

  .button--full-width {
    width: 100%;
  }

  .button--primary:hover {
    opacity: 0.9;
  }

  .button--secondary:hover {
    opacity: 0.9;
  }

  .button--outline:hover {
    background-color: {{ block.settings.button_color }} !important;
    color: {{ block.settings.button_text_color }} !important;
  }
</style> 