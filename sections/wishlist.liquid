{%- comment -%}Wishlist Section{%- endcomment -%}
<section class="flat-spacing-13">
  <div class="container" style="padding-left: 15px; padding-right: 15px;">
    <div class="row">
      <div class="col-lg-12">
        <div class="wrapper-shop tf-grid-layout tf-col-2 lg-col-3 xl-col-4 style-1" id="gridLayout" data-products-per-page="{{ section.settings.products_per_page }}">
        </div>
        <!-- Pagination -->
        <div class="pagination-container" id="paginationContainer" style="display: none;">
          <ul class="wg-pagination" id="pagination">
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Wishlist",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 4,
      "max": 24,
      "step": 4,
      "label": "Products per page",
      "default": 12
    }
  ]
}
{% endschema %}

<style>
.tf-grid-layout.loading {
  pointer-events: none;
  opacity: 0.7;
}

.tf-grid-layout.loading .card-product {
  pointer-events: none;
}

.icon-spinner {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.wishlist-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 200px;
}
</style>

<script src="{{ 'wishlist.js' | asset_url }}" defer></script>