        },
        {
          "type": "header",
          "content": "Color Swatches"
        },
        {
          "type": "repeater",
          "id": "color_swatches",
          "label": "Color Swatches",
          "settings": [
            {
              "type": "text",
              "id": "name",
              "label": "Color Name"
            },
            {
              "type": "text",
              "id": "class",
              "label": "Color Class",
              "info": "e.g. bg-dark, bg-red-2, etc."
            },
            {
              "type": "image_picker",
              "id": "image",
              "label": "Color Image"
            }
          ]
        },
        {
          "type": "header",
          "content": "Progress Bar"
        },
        {
          "type": "select",
          "id": "progress_bar_class",
          "label": "Progress Bar Color",
          "options": [
            {
              "value": "bg-orange-3",
