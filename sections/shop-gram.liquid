  "name": "Shop by @Gram",
  "settings": [
    {
      "type": "range",
      "id": "width",
      "min": 1000,
      "max": 1600,
      "step": 8,
      "unit": "px",
      "label": "Section width",
      "default": 1488
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
