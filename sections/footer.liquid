{%- comment -%}Footer Section{%- endcomment -%}
<footer id="footer" class="footer-default xl-pb-70">
  <div class="footer-top">
    <div class="container">
      <div class="footer-top-wrap">
        <div class="footer-logo">
          <a href="{{ routes.root_url }}">
            {%- if section.settings.logo != blank -%}
              <img src="{{ section.settings.logo | img_url: 'master' }}" class="logo" alt="{{ section.settings.logo.alt | default: shop.name }}">
            {%- else -%}
              <span class="h2">{{ shop.name }}</span>
            {%- endif -%}
          </a>
        </div>
        <ul class="tf-social-icon style-large">
          {%- if section.settings.facebook_url != blank -%}
            <li>
              <a href="{{ section.settings.facebook_url }}" class="social-item social-facebook" target="_blank" rel="noopener">
                <i class="icon icon-fb"></i>
              </a>
            </li>
          {%- endif -%}
          {%- if section.settings.instagram_url != blank -%}
            <li>
              <a href="{{ section.settings.instagram_url }}" class="social-item social-instagram" target="_blank" rel="noopener">
                <i class="icon icon-instagram"></i>
              </a>
            </li>
          {%- endif -%}
          {%- if section.settings.linkedin_url != blank -%}
            <li>
              <a href="{{ section.settings.linkedin_url }}" class="social-item social-linkedin" target="_blank" rel="noopener">
                <i class="icon icon-linkedin"></i>
              </a>
            </li>
          {%- endif -%}
          {%- if section.settings.twitter_url != blank -%}
            <li>
              <a href="{{ section.settings.twitter_url }}" class="social-item social-x" target="_blank" rel="noopener">
                <i class="icon icon-x"></i>
              </a>
            </li>
          {%- endif -%}
        </ul>
      </div>
    </div>
  </div>
  <div class="footer-body">
    <div class="container">
      <div class="row-footer">
        <div class="footer-col-block s1">
          <div class="footer-heading footer-heading-mobile text-xl fw-medium">
            Business Contact
          </div>
          <div class="tf-collapse-content">
            <div class="footer-contact">
              <ul class="footer-info">
                {%- if section.settings.address != blank -%}
                  <li class="item">
                    <span class="box-icon">
                      <svg width="12" height="14" viewBox="0 0 12 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M10.1869 1.73431C9.06854 0.61592 7.58155 0 5.99993 0C4.4183 0 2.93129 0.61592 1.81292 1.73431C0.694534 2.85273 0.0786133 4.33969 0.0786133 5.92129C0.0786133 9.12084 3.10388 11.7821 4.72917 13.2118C4.95504 13.4105 5.15008 13.582 5.30547 13.7272C5.50016 13.9091 5.75006 14 5.9999 14C6.24979 14 6.49964 13.9091 6.69435 13.7272C6.84975 13.582 7.04479 13.4105 7.27065 13.2118C8.89594 11.7821 11.9212 9.12084 11.9212 5.92129C11.9212 4.33969 11.3053 2.85273 10.1869 1.73431ZM6.72897 12.5961C6.49816 12.7991 6.29885 12.9744 6.13451 13.1279C6.05902 13.1984 5.94078 13.1984 5.86526 13.1279C5.70095 12.9744 5.50161 12.7991 5.2708 12.596C3.74283 11.2519 0.898656 8.75001 0.898656 5.92131C0.898656 3.1085 3.18704 0.820124 5.99987 0.820124C8.81268 0.820124 11.1011 3.1085 11.1011 5.92131C11.1011 8.75001 8.25694 11.2519 6.72897 12.5961Z" fill="#0D0D0D"/>
                        <path d="M6.00008 3.08887C4.56122 3.08887 3.39062 4.25943 3.39062 5.69829C3.39062 7.13715 4.56122 8.30772 6.00008 8.30772C7.43894 8.30772 8.6095 7.13715 8.6095 5.69829C8.6095 4.25943 7.43894 3.08887 6.00008 3.08887ZM6.00008 7.48759C5.01343 7.48759 4.21072 6.68489 4.21072 5.69826C4.21072 4.71164 5.01343 3.90894 6.00008 3.90894C6.98673 3.90894 7.7894 4.71164 7.7894 5.69826C7.7894 6.68489 6.98673 7.48759 6.00008 7.48759Z" fill="#0D0D0D"/>
                      </svg>
                    </span>
                    <a target="_blank" href="https://www.google.com/maps?q={{ section.settings.address | url_encode }}">
                      {{ section.settings.address }}
                    </a>
                  </li>
                {%- endif -%}
                {%- if section.settings.phone != blank -%}
                  <li class="item">
                    <span class="box-icon">
                      <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M11.6666 9.4091L10.9841 8.4641C10.7324 8.12417 10.3574 7.89649 9.93972 7.82996C9.522 7.76343 9.09484 7.86335 8.74998 8.10827L8.09081 8.59243C7.13399 7.73698 6.36526 6.69214 5.83331 5.5241L6.49248 5.04577C6.837 4.79478 7.06794 4.41741 7.13464 3.99641C7.20135 3.5754 7.09838 3.14513 6.84831 2.79993L6.18331 1.86077C5.93339 1.51663 5.55703 1.28582 5.13698 1.21909C4.71693 1.15236 4.28757 1.25518 3.94331 1.50493L2.91664 2.23993C2.58681 2.47798 2.33009 2.80349 2.17547 3.17972C2.02086 3.55595 1.9745 3.96792 2.04164 4.3691C2.33803 6.09644 3.02915 7.73206 4.06118 9.14856C5.0932 10.5651 6.43827 11.7242 7.99164 12.5358C8.30603 12.696 8.65376 12.78 9.00664 12.7808C9.46814 12.7804 9.91756 12.6333 10.29 12.3608L11.3108 11.6666C11.4837 11.5428 11.6302 11.3858 11.7419 11.2048C11.8535 11.0238 11.9281 10.8224 11.9612 10.6123C11.9943 10.4023 11.9853 10.1877 11.9347 9.98113C11.8842 9.77457 11.793 9.58012 11.6666 9.4091Z" fill="#0D0D0D"/>
                      </svg>
                    </span>
                    <a href="tel:{{ section.settings.phone | remove: ' ' | remove: '(' | remove: ')' | remove: '-' }}">{{ section.settings.phone }}</a>
                  </li>
                {%- endif -%}
                {%- if section.settings.email != blank -%}
                  <li class="item">
                    <span class="box-icon">
                      <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M11.8125 2.625H2.1875C1.8394 2.625 1.50556 2.76328 1.25942 3.00942C1.01328 3.25556 0.875 3.5894 0.875 3.9375V10.0625C0.875 10.4106 1.01328 10.7444 1.25942 10.9906C1.50556 11.2367 1.8394 11.375 2.1875 11.375H11.8125C12.1606 11.375 12.4944 11.2367 12.7406 10.9906C12.9867 10.7444 13.125 10.4106 13.125 10.0625V3.9375C13.125 3.5894 12.9867 3.25556 12.7406 3.00942C12.4944 2.76328 12.1606 2.625 11.8125 2.625Z" fill="#0D0D0D"/>
                      </svg>
                    </span>
                    {{ section.settings.email }}
                  </li>
                {%- endif -%}
              </ul>
              {%- if section.settings.map_link != blank -%}
                <a href="{{ section.settings.map_link }}" class="tf-btn btn-line-dark fw-normal" target="_blank" rel="noopener">
                  <span class="text-sm">See location</span>
                  <i class="icon-arrow-top-left fs-8"></i>
                </a>
              {%- endif -%}
            </div>
          </div>
        </div>
        <div class="footer-inner-wrap footer-col-block s2">
          <div class="footer-heading footer-heading-mobile text-xl fw-medium">
            Subscribe Newsletter
          </div>
          <div class="tf-collapse-content">
            <div class="footer-newsletter">
              <p>{{ section.settings.newsletter_text }}</p>
              {%- form 'customer', class: 'form-newsletter' -%}
                <div class="subscribe-content">
                  <fieldset class="email">
                    <input type="email" name="contact[email]" class="subscribe-email" placeholder="Email address" required>
                  </fieldset>
                  <div class="button-submit">
                    <button class="subscribe-button animate-btn" type="submit">
                      <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M17.7938 8.50229L17.7931 8.50162L14.1192 4.84537C13.8439 4.57147 13.3988 4.57249 13.1248 4.84776C12.8508 5.123 12.8519 5.56818 13.1271 5.84212L15.5938 8.29687H0.703125C0.314789 8.29687 0 8.61166 0 9C0 9.38833 0.314789 9.70312 0.703125 9.70312H15.5938L13.1272 12.1579C12.8519 12.4318 12.8509 12.877 13.1248 13.1522C13.3988 13.4275 13.844 13.4285 14.1192 13.1546L17.7932 9.49837L17.7938 9.4977C18.0692 9.22285 18.0683 8.77623 17.7938 8.50229Z" fill="white"/>
                      </svg>
                    </button>
                  </div>
                </div>
              {%- endform -%}
            </div>
          </div>
        </div>
        <div class="footer-inner-wrap s3">
          <div class="footer-col-block inner-col">
            <div class="footer-heading footer-heading-mobile text-xl fw-medium">About Us</div>
            <div class="tf-collapse-content">
              <ul class="footer-menu-list">
                <li>
                  <a href="/pages/about-us">About Us</a>
                </li>
                <li>
                  <a href="/pages/contact-us">Contact Us</a>
                </li>
                <li>
                  <a href="/pages/store-location">Our Store</a>
                </li>
                <li>
                  <a href="/pages/our-story">Our Story</a>
                </li>
              </ul>
            </div>
          </div>
          <div class="footer-col-block inner-col">
            <div class="footer-heading footer-heading-mobile text-xl fw-medium">Resource</div>
            <div class="tf-collapse-content">
              <ul class="footer-menu-list">
                <li>
                  <a href="/pages/privacy-policy">Privacy Policies</a>
                </li>
                <li>
                  <a href="/pages/terms-and-conditions">Terms & Conditions</a>
                </li>
                <li>
                  <a href="/pages/returns-and-refunds">Returns & Refunds</a>
                </li>
                <li>
                  <a href="/pages/faq">FAQ's</a>
                </li>
                <li>
                  <a href="/pages/shipping">Shipping</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-wrap">
        <p class="text-dark">Copyright © {{ 'now' | date: "%Y" }} by <span class="fw-medium">{{ shop.name }}</span>. All Rights Reserved.</p>
        {%- if section.settings.show_payment_icons -%}
          <ul class="tf-payment">
            {%- for type in shop.enabled_payment_types -%}
              <li class="item">
                {{ type | payment_type_svg_tag: class: 'icon' }}
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

