  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Settings"
      },
      {
        "type": "radio",
        "id": "font_library",
        "label": "Font library",
        "options": [
          { "value": "shopify", "label": "Shopify" },
          { "value": "google", "label": "Google" }
        ],
        "default": "shopify"
      },
      {
        "type": "header",
        "content": "Shopify Font library",
        "visible_if": "{{ settings.font_library == 'shopify' }}"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Heading font",
        "default": "helvetica_n4",
        "visible_if": "{{ settings.font_library == 'shopify' }}"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body font",
        "default": "helvetica_n4",
        "visible_if": "{{ settings.font_library == 'shopify' }}"
      },
      {
        "type": "header",
        "content": "Google Font library",
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "text",
        "id": "heading_font_family",
        "label": "Heading font family",
        "default": "'Helvetica Neue', Helvetica, Arial, sans-serif",
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "range",
        "id": "heading_font_weight",
        "label": "Heading font weight",
        "min": 100,
        "max": 900,
        "step": 100,
        "default": 400,
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "text",
        "id": "body_font_family",
        "label": "Body font family",
        "default": "'Helvetica Neue', Helvetica, Arial, sans-serif",
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "range",
        "id": "body_font_weight",
        "label": "Body font weight",
        "min": 100,
        "max": 900,
        "step": 100,
        "default": 400,
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "range",
        "id": "heading_font_size_scale",
        "label": "Font size scale",
        "min": 80,
        "max": 200,
        "step": 2,
        "unit": "%",
        "default": 100
      },
      {
        "type": "range",
        "id": "heading_line_height",
        "label": "Line height",
        "min": 1,
        "max": 2,
        "step": 0.1,
        "default": 1.2
      },
      {
        "type": "range",
        "id": "heading_letter_spacing",
        "label": "Letter spacing",
        "min": -5,
        "max": 10,
        "step": 1,
        "unit": "%",
        "default": 0
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "range",
        "id": "body_font_size_mobile",
        "label": "Base size (mobile)",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "range",
        "id": "body_font_size_desktop",
        "label": "Base size (tablet and desktop)",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "range",
        "id": "body_line_height",
        "label": "Line height",
        "min": 1,
        "max": 2,
        "step": 0.1,
        "default": 1.6
      },
      {
        "type": "range",
        "id": "body_letter_spacing",
        "label": "Letter spacing",
        "min": -5,
        "max": 10,
        "step": 1,
        "unit": "%",
        "default": 0
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Container Settings"
      },
      {
        "type": "select",
        "id": "container_width",
        "label": "Container Width",
        "options": [
          {
            "value": "1200px",
            "label": "1200px"
          },
          {
            "value": "1400px",
            "label": "1400px"
          },
          {
            "value": "1488px",
            "label": "1488px"
          },
          {
            "value": "1600px",
            "label": "1600px"
          },
          {
            "value": "1800px",
            "label": "1800px"
          },
          {
            "value": "1920px",
            "label": "1920px"
          }
        ],
        "default": "1488px"
      },
      {
        "type": "text",
        "id": "container_padding",
        "label": "Container Padding",
        "default": "24px",
        "info": "Enter a value with units, e.g. 30px, 2em, 5%"
      },
      {
        "type": "header",
        "content": "Grid Settings"
      },
      {
        "type": "range",
        "id": "grid_gap",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Space Between Columns",
        "default": 30
      },
      {
        "type": "header",
        "content": "Direction Settings"
      },
      {
        "type": "select",
        "id": "text_direction",
        "label": "Text Direction",
        "options": [
          {
            "value": "ltr",
            "label": "Left to Right (LTR)"
          },
          {
            "value": "rtl",
            "label": "Right to Left (RTL)"
          }
        ],
        "default": "ltr"
      },
      // {
      //   "type": "checkbox",
      //   "id": "enable_rtl_switcher",
      //   "label": "Enable RTL Switcher",
      //   "info": "Adds a button to switch between RTL and LTR modes",
      //   "default": false
      // },
      {
        "type": "header",
        "content": "Spacing"
      },
      {
        "type": "range",
        "id": "section_spacing",
        "min": 20,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Section Spacing",
        "default": 40
      },
      {
        "type": "range",
        "id": "element_spacing",
        "min": 10,
        "max": 50,
        "step": 5,
        "unit": "px",
        "label": "Element Spacing",
        "default": 20
      }
    ]
  },
  {
    "name": "Animations",
    "settings": [
