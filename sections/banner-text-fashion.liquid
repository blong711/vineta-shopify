    },
    {
      "type": "url",
      "id": "banner_link",
      "label": "Banner Link"
    },
    {
      "type": "product",
      "id": "featured_product",
      "label": "Featured Product"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Elevating Your Style Journey"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover timeless pieces that define elegance and sophistication."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Banner with Text",
      "category": "Image",
      "settings": {
        "heading": "Elevating Your Style Journey",
        "subtext": "Discover timeless pieces that define elegance and sophistication.",
        "button_label": "Shop Now"
      }
    }
  ]
}
{% endschema %}

