<!-- Banner -->
<section>
  {% if section.settings.width == 'boxed' %}
    <div class="container">
  {% endif %}
    <div dir="ltr" class="swiper tf-swiper" data-swiper='{
      "slidesPerView": {{ section.settings.slides_per_view_mobile }},
      "spaceBetween": {{ section.settings.space_between }},
      "speed": {{ section.settings.transition_speed }},
      "observer": true,
      "observeParents": true,
      "navigation": {% if section.settings.show_navigation %}{
        "clickable": true,
        "nextEl": ".nav-next-shop",
        "prevEl": ".nav-prev-shop"
      }{% else %}false{% endif %},
      "pagination": {% if section.settings.show_pagination %}{
        "el": ".sw-pagination-shop",
        "clickable": true
      }{% else %}false{% endif %},
      "autoplay": {% if section.settings.autoplay %}{
        "delay": {{ section.settings.autoplay_speed }}
      }{% else %}false{% endif %},
      "breakpoints": {
        "768": {
          "slidesPerView": {{ section.settings.slides_per_view_tablet }},
          "spaceBetween": {{ section.settings.space_between }}
        },
        "1200": {
          "slidesPerView": {{ section.settings.slides_per_view_desktop }},
          "spaceBetween": {{ section.settings.space_between }}
        }
      }
    }'>
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <div class="banner-shop style-top hover-img radius-20">
              <div class="image img-style">
                {% if block.settings.image != blank %}
                  {{ block.settings.image | image_url: width: 1200 | image_tag:
                    loading: 'lazy',
                    class: 'lazyload',
                    alt: block.settings.title
                  }}
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
              <div class="content wow fadeInUp text-center justify-items-center">
                <div class="box-title">
                  <h4 class="text-white">
                    {{ block.settings.title }}
                  </h4>
                  <p class="text-md text-white">
                    {{ block.settings.subtitle }}
                  </p>
                </div>
                <a href="{{ block.settings.button_link }}" class="tf-btn animate-btn btn-space1 btn-green-2">
                  {{ block.settings.button_text }}
                  <i class="icon icon-arr-right3"></i>
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="d-flex d-xl-none sw-dot-default sw-pagination-shop justify-content-center"></div>
      {% if section.settings.show_navigation %}
        <div class="swiper-button-prev nav-prev-shop"></div>
        <div class="swiper-button-next nav-next-shop"></div>
      {% endif %}
    </div>
  {% if section.settings.width == 'boxed' %}
    </div>
  {% endif %}
</section>
<!-- /Banner -->

{% schema %}
{
  "name": "Banner Carousel",
  "tag": "section",
  "settings": [
    {
      "type": "select",
      "id": "width",
      "label": "Section width",
      "options": [
        {
          "value": "full",
          "label": "Full width"
        },
        {
          "value": "boxed",
          "label": "Boxed"
        }
      ],
      "default": "boxed"
    },
    {
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "range",
      "id": "slides_per_view_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Slides per view (Mobile)",
      "default": 1
    },
    {
      "type": "range",
      "id": "slides_per_view_tablet",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Slides per view (Tablet)",
      "default": 2
    },
    {
      "type": "range",
      "id": "slides_per_view_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Slides per view (Desktop)",
      "default": 2
    },
    {
      "type": "range",
      "id": "space_between",
      "min": 0,
      "max": 50,
      "step": 2,
      "label": "Space between slides",
      "default": 12
    },
    {
      "type": "range",
      "id": "transition_speed",
      "min": 300,
      "max": 2000,
      "step": 100,
      "label": "Transition speed (ms)",
      "default": 1000
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "Show navigation arrows",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "label": "Show pagination dots",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable autoplay",
      "default": false
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 1000,
      "max": 9000,
      "step": 500,
      "label": "Autoplay speed (ms)",
      "default": 3000
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Banner Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Unveiling the latest gear"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Check out our newest arrivals"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Buy Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner Carousel",
      "category": "Banner",
      "blocks": [
        {
          "type": "banner",
          "settings": {
            "title": "Unveiling the latest gear",
            "subtitle": "Check out our newest arrivals",
            "button_text": "Buy Now"
          }
        },
        {
          "type": "banner",
          "settings": {
            "title": "Deals you can't miss",
            "subtitle": "Save big on our best-selling bikes",
            "button_text": "Buy Now"
          }
        }
      ]
    }
  ]
}
{% endschema %} 